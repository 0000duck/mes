<?xml version="1.0" encoding="UTF-8"?>
<plugin name="test" xmlns="http://www.qcadoo.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.qcadoo.com dataDefinition.xsd">
	<model name="simpleDatabaseObject">
		<integer name="age">
			<validates_presence message="Error Message" />
			<validates_presence_on_create />
			<validates_uniqueness scope="lastname" />
			<validates_with bean="com.qcadoo.mes.beans.test.CustomEntityService" method="validateField" />
			<validates_length min="1" max="3" is="2" />
			<validates_length is="2" />
			<validates_length max="20"/>
			<validates_precision min="2" max="4" is="2" />
			<validates_precision is="2" />
			<validates_scale min="2" max="4" is="2" />
			<validates_scale is="2" />
			<validates_range from="18" />
			<validates_with_script script="lastname.length &gt; 5" />
			<validates_format with="d*p" />
			<validates_exclusion>
				<exclude>nowak</exclude>
				<exclude>kowalski</exclude>		
			</validates_exclusion>
			<validates_inclusion>
				<include>szczytowski</include>		
			</validates_inclusion>
		</integer>
		<string name="firstname" default="ala">
			<validates_range from="daap" to="dzzp" />	 
		</string>
		<string name="lastname" default="ala" readonly="true" readonly_on_create="true">
		</string>
		<text name="desc" />
		<float name="score" />
		<decimal name="money" />
		<datetime name="datetime" />
		<timestamp name="timestamp" />
		<time name="time" />
		<date name="date" />
		<boolean name="boolean" />
		<belongsTo name="parent" model="person" plugin="people" lookupField="name" lazy="true" />
		<hasMany name="children" model="person" plugin="people" joinField="child" />
		<hasMany name="children2" model="person" joinField="child2" />
		<enum name="typeOfMaterial">
			<value>product</value>
			<value>intermediate</value>
			<value>component</value>
			<validates_presence />
		</enum>
		<dictionary name="category" dictionary="categories" />
		<password name="password" />
		
		<priority name="priority" scope="parent" />
		
		<validates_with bean="com.qcadoo.mes.beans.test.CustomEntityService" method="validateEntity" message="Error Message" />
			
		<onSave bean="com.qcadoo.mes.beans.test.CustomEntityService" method="onSave" />
		<onUpdate bean="com.qcadoo.mes.beans.test.CustomEntityService" method="onUpdate" />
		<onCreate bean="com.qcadoo.mes.beans.test.CustomEntityService" method="onCreate" />
		<onLoad bean="com.qcadoo.mes.beans.test.CustomEntityService" method="onLoad" />
	</model>
	<view name="person" forEntity="person">
		<grid name="grid" autoGenerated="true" />
		<form name="form" for="person" dataSource="person.grid">
			<input name="age" for="age">
				<validates_range min="33" max="65" />
			</input>
			<input name="firstname" for="firstname" />
			<text name="lastname" for="lastname" />
			<select name="parent" for="parent" />			
		</form>
	</view>
</plugin>