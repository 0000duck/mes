<qcd:models plugin="sample" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="simpleDatabaseObject" creatable="false">
		<integer name="age">
			<validatesPresence message="Error Message" />
			<validatesPresenceOnCreate />
			<validatesUniqueness />
			<validatesWith bean="com.qcadoo.mes.beans.sample.CustomEntityService" method="validateField" />
			<validatesLength min="1" max="3" is="2" />
			<validatesLength is="2" />
			<validatesLength max="20"/>		
			<validatesPrecision min="2" max="4" is="2" />
			<validatesPrecision is="2" />
			<validatesScale min="2" max="4" is="2" />
			<validatesScale is="2" />
			<validatesRange from="18" />
		</integer>
		<string name="firstname" default="ala">
			<validatesRange from="daap" to="dzzp" />	 
		</string>
		<string name="lastname" default="ala" readonly="true" readonlyOnCreate="true">
		</string>
		<text name="desc" />
		<decimal name="money" />
		<datetime name="datetime" />
		<date name="date" />
		<boolean name="boolean" />
		<belongsTo name="parent" model="person" plugin="people" lookupField="name" lazy="true" />
		<hasMany name="children" model="person" plugin="people" joinField="child" cascade="nullify" />
		<tree name="children2" model="person" joinField="child2" cascade="delete" />
		<enum name="typeOfMaterial" values="03product,02intermediate,01component,04waste">
			<validatesPresence />
		</enum>
		<dictionary name="category" dictionary="categories" />
		<password name="password" />
		
		<priority name="priority" scope="parent" />
		
		<validatesWith bean="com.qcadoo.mes.beans.sample.CustomEntityService" method="validateEntity" message="Error Message" />
			
		<onSave bean="com.qcadoo.mes.beans.sample.CustomEntityService" method="onSave" />
		<onUpdate bean="com.qcadoo.mes.beans.sample.CustomEntityService" method="onUpdate" />
		<onCreate bean="com.qcadoo.mes.beans.sample.CustomEntityService" method="onCreate" />
	</model>
</qcd:models>