<qcd:views plugin="sample" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="simpleView" model="beanB" menuAccessible="true">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="first">
					<bigButton name="test" action="#{mainWindow.beanBForm}.save,#{mainWindow}.back" />
					<smallButton name="test2" icon="icon2" action="xxx" />
				</group>
				<group name="second">
					<bigButton name="test2" />
					<bigButtons name="combo1" action="yyy3">
						<bigButton name="test1" action="yyy1" />
						<bigButton name="test2" icon="icon2" action="yyy2" />
					</bigButtons>
				</group>
			</ribbon>
			<component type="form" name="beanBForm">
				<component type="checkbox" name="active" field="active" defaultEnabled="false" defaultVisible="false" />
				<component type="lookup" name="selectBeanA" field="beanA" />
				<component type="textarea" name="beanM" field="beanM" />
				<component type="textarea" name="beanB" field="beanA.name" />
				<component type="grid" name="beansBGrig"
					source="#{mainWindow.beanBForm.selectBeanA}.beansB">
					<option type="column" name="name" fields="name" />
					<option type="correspondingView" value="products/form" />
					<option type="correspondingComponent" value="window.form" />
				</component>
				<component type="form" name="beanAForm" field="beanA">
					<component type="input" name="name" field="name" />
				</component>
				<option type="header" value="false" />
			</component>
			<component type="textarea" name="name" field="#{mainWindow.beanBForm}.name" reference="referenceToTextarea" />
			<component type="grid" name="beansBGrig"
				source="#{mainWindow.beanBForm.selectBeanA}.beansB">
				<option type="column" name="name" fields="name" />
				<option type="column" name="multicolumn" aggregation="sum"
					expression="2 + 2" width="20" fields="name,beanA" />
				<option type="searchable" value="name,beanA" />
				<option type="orderable" value="name" />
				<option type="deletable" value="false" />
				<option type="creatable" value="false" />
				<option type="height" value="450" />
				<option type="correspondingView" value="products/form" />
				<option type="correspondingComponent" value="window.form" />
			</component>
			<component type="button" name="link">
				<option type="url" value="download.html" />
			</component>
		</component>
		<preInitializeHook bean="com.qcadoo.mes.beans.sample.CustomEntityService" method="onView" />
		<postInitializeHook bean="com.qcadoo.mes.beans.sample.CustomEntityService" method="onView" />
		<preRenderHook bean="com.qcadoo.mes.beans.sample.CustomEntityService" method="onView" />
	</view>
	<view name="simpleView2" model="beanA">
		<component type="window" name="mainWindow" />
	</view>
