<qcd:models plugin="products" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="product">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<text name="name">
			<validatesPresence />
		</text>
		<enum name="typeOfMaterial" values="product,intermediate,component">
			<validatesPresence />
		</enum>
		<string name="ean" />
		<dictionary name="category" dictionary="categories" />
		<string name="unit" />
	</model>
</qcd:models>