	<build>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.26</version>
				<configuration>
					<scanTargets>
						<scanTarget>driver/</scanTarget>
					</scanTargets>
					<systemProperties>
						<systemProperty>
							<name>spring.profiles.default</name>
							<value>standalone</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_CONF</name>
							<value>${basedir}/conf/${profile.name}</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_LOG</name>
							<value>${basedir}/target/logs</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_PLUGINS_TMP_PATH</name>
							<value>${basedir}/target/tmp</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_PLUGINS_PATH</name>
							<value>${basedir}/target/lib</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_WEBAPP_PATH</name>
							<value>${basedir}/src/main/webapp</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_RESTART_CMD</name>
							<value>${basedir}/restart.sh</value>
						</systemProperty>
					</systemProperties>
					<webAppConfig>
						<contextPath>/</contextPath>
						<baseResource implementation="org.mortbay.resource.ResourceCollection">
							<resourcesAsCSV>
								${basedir}/src/main/webapp;
								${basedir}/../../qcadoo/qcadoo-view/src/main/resources;
								${basedir}/../../qcadoo/qcadoo-report/src/main/resources;
								${basedir}/../../qcadoo/qcadoo-plugins-plugin-management/src/main/resources;
								${basedir}/../../qcadoo/qcadoo-plugins-export/src/main/resources;
								${basedir}/../mes-plugins/mes-plugins-basic/src/main/resources;
								${basedir}/../mes-plugins/mes-plugins-technologies/src/main/resources;
								${basedir}/../mes-plugins/mes-plugins-stoppage/src/main/resources;
								${basedir}/../mes-plugins/mes-plugins-used-products/src/main/resources;
								${basedir}/../../mes-comercial-plugins/mes-commercial-plugins-integration-commons/src/main/resources;
							</resourcesAsCSV>
						</baseResource>
					</webAppConfig>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<configuration>
							<target>
								<mkdir dir="${basedir}/target/classes" />
								<exec executable="git" outputproperty="build.revision">
									<arg value="rev-list" />
									<arg value="--max-count=1" />
									<arg value="--all" />
								</exec>
								<tstamp>
									<format property="build.time" pattern="yyyy-MM-dd HH:mm:ss" />
								</tstamp>
								<property name="build.number" value="-" />
								<echo file="${basedir}/target/classes/build.properties">
									buildApplicationName = Qcadoo MES
									buildApplicationVersion = ${project.version}
									buildFrameworkVersion = ${qcadoo.version}
									buildTime =
									${build.time}
									buildNumber = ${build.number}
									buildRevision =
									${build.revision}
								</echo>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

