		<dependency>
			<groupId>com.yahoo.platform.yui</groupId>
			<artifactId>yuicompressor</artifactId>
			<version>2.3.6</version>
		</dependency>
		<dependency>
			<groupId>postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>8.4-701</version>
			<classifier>jdbc4</classifier>
			<scope>system</scope>
			<systemPath>${basedir}/driver/postgresql-8.4-701.jdbc4.jar</systemPath>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.26</version>
				<configuration>
					<scanTargets>
						<scanTarget>driver/</scanTarget>
					</scanTargets>
					<systemProperties>
						<systemProperty>
							<name>spring.profiles.default</name>
							<value>standalone</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_CONF</name>
							<value>${basedir}/conf/${profile.name}</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_LOG</name>
							<value>${basedir}/target/logs</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_PLUGINS_TMP_PATH</name>
							<value>${basedir}/target/tmp</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_PLUGINS_PATH</name>
							<value>${basedir}/target/lib</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_WEBAPP_PATH</name>
							<value>${basedir}/src/main/webapp</value>
						</systemProperty>
						<systemProperty>
							<name>QCADOO_RESTART_CMD</name>
							<value>${basedir}/restart.sh</value>
						</systemProperty>
					</systemProperties>
					<webAppConfig>
						<contextPath>/</contextPath>
						<baseResource implementation="org.mortbay.resource.ResourceCollection">
							<resourcesAsCSV>
								${basedir}/src/main/webapp;
								${basedir}/../../qcadoo/qcadoo-view/src/main/resources;
								${basedir}/../mes-plugins/mes-plugins-plugin-management/src/main/resources;
								${basedir}/../mes-plugins/mes-plugins-technologies/src/main/resources;
							</resourcesAsCSV>
						</baseResource>
					</webAppConfig>
				</configuration>
			</plugin>
			<!-- plugin>
				<groupId>com.qcadoo</groupId>
				<artifactId>qcadoo-maven-plugin</artifactId>
				<version>${qcadoo.version}</version>
				<configuration>
				    <jdbcDriver>${basedir}/driver/</jdbcDriver>
				    <profile>standalone</profile>
				    <configuration>${basedir}/conf/${profile.name}</configuration>
				    <logs>${basedir}/target/logs</logs>
				    <temporaryPlugins>${basedir}/target/tmp</temporaryPlugins>
				    <plugins>${basedir}/target/lib</plugins>
				    <webapp>${basedir}/src/main/webapp</webapp>
				    <restartCommand>${basedir}/restart.sh</restartCommand>
				</configuration>
			</plugin -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<mkdir dir="${basedir}/target/classes" />
								<exec command="git rev-list --max-count=1 --all" osfamily="unix"
									outputproperty="build.revision" />
								<tstamp>
									<format property="build.time" pattern="yyyy-MM-dd HH:mm:ss" />
								</tstamp>
								<property name="build.number" value="-" />
								<echo file="${basedir}/target/classes/build.properties">
									buildApplicationName = Qcadoo MES
									buildApplicationVersion = ${project.version}
									buildFrameworkVersion = ${qcadoo.version}
									buildTime = ${build.time}
									buildNumber = ${build.number}
									buildRevision = ${build.revision}
								</echo>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>emhyr</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.5</version>
						<executions>
							<execution>
								<id>deploy-to-emhyr</id>
								<phase>deploy</phase>
								<configuration>
									<target>
										<copy file="${basedir}/target/${project.artifactId}.zip"
											tofile="/Users/tomcat/deploy/${profile.name}.zip" />
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>tomcat</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.qcadoo</groupId>
						<artifactId>qcadoo-maven-plugin</artifactId>
						<version>${qcadoo.version}</version>
						<configuration>
							<jdbcDriver>${basedir}/driver/postgresql-8.4-701.jdbc4.jar</jdbcDriver>
							<configuration>${basedir}/conf/${profile.name}/</configuration>
						</configuration>
						<executions>
							<execution>
								<id>prepare-tomcat-package</id>
								<phase>package</phase>
								<goals>
									<goal>tomcat</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>