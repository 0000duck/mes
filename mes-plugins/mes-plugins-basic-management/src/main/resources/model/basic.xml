<models plugin="basic" xmlns="http://www.qcadoo.com/model">
	<model name="machine" deletable="true">
		<string name="name" >
			<validatesPresence />
			<validatesLength max="2048"/>
		</string>
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
			<validatesLength max="255"/>
		</string>
		<string name="description">
			<validatesLength max="2048"/>
		</string>
		<toStringExpression expression="#number + ' - ' + #name"/>
	</model>
	<model name="staff" deletable="true">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
			<validatesLength max="255"/>
		</string>
		<string name="name" >
			<validatesPresence />
			<validatesLength max="255"/>
		</string>
		<string name="surname" >
			<validatesPresence />
			<validatesLength max="255"/>
		</string>
		<string name="post"/>
		<toStringExpression expression="#number + ' - ' + #name"/>
	</model>
	<model name="parameter" deletable="false">
		<boolean name="checkDoneOrderForQuality">
			<validatesPresence />
		</boolean>
		<boolean name="autoGenerateQualityControl">
			<validatesPresence />
		</boolean>
		<enum name="batchForDoneOrder" values="01none,02active,03lastUsed" default="01none">
			<validatesPresence />
		</enum>
	</model>
</models>
