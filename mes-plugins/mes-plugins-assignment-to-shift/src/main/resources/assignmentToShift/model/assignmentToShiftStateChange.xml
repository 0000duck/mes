<model name="assignmentToShiftStateChange" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd"
	xmlns:xi="http://www.w3.org/2001/XInclude">
	<fields>
		<!-- generic state change fields -->
		<datetime name="dateAndTime" />
		<enum name="sourceState" values="01draft,02accepted,03duringCorrection,04corrected" />
		<enum name="targetState" values="01draft,02accepted,03duringCorrection,04corrected"
			required="true" />
		<enum name="status"
			values="01inProgress,02paused,03successful,04failure,05canceled"
			required="true" />
		<integer name="phase" />
		<string name="worker" />
		<hasMany name="messages" joinField="assignmentToShiftStateChange"
			model="message" plugin="states" cascade="delete" /> <!-- messages -->
		<belongsTo name="assignmentToShift" model="assignmentToShift" /> <!-- owner -->
		<belongsTo name="shift" model="shift" plugin="basic" />
		<string name="additionalInformation" />
	</fields>
	<hooks />
</model>