<?xml version="1.0" encoding="UTF-8"?>
<model name="assignmentToShiftReport" auditable="true" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" required="true" unique="true">
			<validatesLength max="1024" />
		</string>
		<string name="name" >
			<validatesLength max="1024" />
		</string>
		<date name="dateFrom" required="true" />
		<date name="dateTo" required="true"/>
		<belongsTo name="shift" model="shift" plugin="basic" required="true"/>
		<string name="fileName" />
		<boolean name="generated" default="false" />
	</fields>
	<hooks>
	    <validatesWith class="com.qcadoo.mes.assignmentToShift.hooks.AssignmentToShiftReportHooks" method="checkIfIsMoreThatFiveDays"/>
	</hooks>
	<identifier expression="#name" />
</model>