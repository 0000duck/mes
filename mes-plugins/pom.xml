<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.qcadoo.mes</groupId>
		<artifactId>mes</artifactId>
		<version>0.2.0-SNAPSHOT</version>
	</parent>

	<artifactId>mes-plugins</artifactId>
	<packaging>pom</packaging>

	<name>Qcadoo MES :: Plugins</name>
	<description />

	<properties>
		<mes.plugin.identifier>${pom.artifactId}</mes.plugin.identifier>
		<mes.plugin.dependencies />
	</properties>

	<modules>
		<module>mes-plugins-crud</module>
		<module>mes-plugins-user-management</module>
		<module>mes-plugins-dictionary-management</module>
		<module>mes-plugins-plugin-management</module>
		<module>mes-plugins-menu-management</module>
		<module>mes-plugins-products</module>
		<module>mes-plugins-basic-management</module>
	</modules>

	<dependencies>
		<dependency>
			<groupId>com.qcadoo.mes</groupId>
			<artifactId>mes-core</artifactId>
			<version>0.2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>compile</phase>
						<configuration>
							<tasks>
								<taskdef resource="net/sf/antcontrib/antcontrib.properties" classpathref="maven.plugin.classpath" />
								<if>
									<equals arg1="${pom.artifactId}" arg2="mes-plugins" />
									<else>
										<echoxml file="${basedir}/target/classes/plugin.xml">
											<qcd:plugin xmlns:qcd="http://www.qcadoo.com/plugin">
												<identifier>${mes.plugin.identifier}</identifier>
												<name>${pom.name}</name>
												<packageName>${pom.groupId}</packageName>
												<version>${pom.version}</version>
												<vendor>${pom.organization.name}</vendor>
												<vendorUrl>${pom.organization.url}</vendorUrl>
												<description>${pom.description}</description>
												<dependencies>${mes.plugin.dependencies}</dependencies>
											</qcd:plugin>
										</echoxml>
									</else>
								</if>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant-contrib</groupId>
						<artifactId>ant-contrib</artifactId>
						<version>1.0b3</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-nodeps</artifactId>
						<version>1.6.5</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

</project>
