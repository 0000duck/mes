<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="workPlans" version="0.4.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>Work Plans</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>orders</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<model:model model="workPlan" resource="model/workPlan.xml" />
		<model:model model="workPlanComponent" resource="model/workPlanComponent.xml" />

		<model:model-field plugin="orders" model="order">
			<model:hasMany name="workPlans" plugin="workPlans"
				model="workPlanComponent" joinField="order" cascade="none" />
		</model:model-field>

		<menu:menu-category name="reports" />
		<menu:menu-item name="workPlans" category="reports" view="workPlansList" />

		<view:view resource="view/workPlansList.xml" />
		<view:view resource="view/workPlanDetails.xml" />
		<view:view resource="view/workPlanComponentDetails.xml" />

		<view:view-ribbon-group resource="view/ribbonExtensions/ordersList.xml" />

		<view:view-listener plugin="orders"
			view="ordersList" component="grid" event="printWorkPlanForOrder"
			bean="com.qcadoo.mes.workPlans.WorkPlanService" method="printWorkPlanForOrder" />


	</modules>

</plugin>