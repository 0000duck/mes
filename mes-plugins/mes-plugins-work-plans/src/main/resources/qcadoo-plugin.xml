<plugin plugin="workPlans" version="${qcadoo.plugin.version}"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:custom="http://schema.qcadoo.org/modules/custom"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd
       http://schema.qcadoo.org/modules/custom
       http://schema.qcadoo.org/modules/custom.xsd">

	<information>
		<name>MES - Work Plans</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>orders</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<model:model model="workPlan" resource="model/workPlan.xml" />

		<model:model model="columnForInputProducts" resource="model/columnForInputProducts.xml" />
		<model:model model="columnForOutputProducts" resource="model/columnForOutputProducts.xml" />
		<model:model model="parameterInputComponent" resource="model/parameterInputComponent.xml" />
		<model:model model="parameterOutputComponent" resource="model/parameterOutputComponent.xml" />
		
		<model:model-field plugin="orders" model="order">
			<model:manyToMany name="workPlans" joinField="orders" model="workPlan" plugin="workPlans"/>
		</model:model-field>

		<menu:menu-category name="reports" />
		<menu:menu-item name="workPlans" category="reports" view="workPlansList" />

		<view:view resource="view/workPlansList.xml" />
		<view:view resource="view/workPlanDetails.xml" />

		<view:view-ribbon-group resource="view/ribbonExtensions/ordersList.xml" />

		<view:view-listener plugin="orders"
			view="ordersList" component="grid" event="addSelectedOrdersToWorkPlan"
			class="com.qcadoo.mes.workPlans.WorkPlanViewHooks" method="addSelectedOrdersToWorkPlan" />
		
		<model:model-field plugin="basic" model="parameter">
			<model:boolean name="hideDescriptionInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="basic" model="parameter">
			<model:boolean name="hideDetailsInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="basic" model="parameter">
			<model:boolean name="hideTechnologyAndOrderInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="basic" model="parameter">
			<model:file name="imageUrlInWorkPlan" />
		</model:model-field>
		<model:model-field plugin="basic" model="parameter">
			<model:boolean name="dontPrintInputProductsInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="basic" model="parameter">
			<model:boolean name="dontPrintOutputProductsInWorkPlans" />
		</model:model-field>
	
	
		<model:model-field plugin="basic" model="parameter">
			<model:hasMany name="parameterInputComponents" plugin="workPlans" model="parameterInputComponent" joinField="parameter" />
		</model:model-field>
		
		<model:model-field plugin="basic" model="parameter">
			<model:hasMany name="parameterOutputComponents" plugin="workPlans" model="parameterOutputComponent" joinField="parameter" />
		</model:model-field>
		
		
		<model:model-field plugin="technologies" model="operation">
			<model:boolean name="hideDescriptionInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:boolean name="hideDetailsInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:boolean name="hideTechnologyAndOrderInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:file name="imageUrlInWorkPlan" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:boolean name="dontPrintInputProductsInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:boolean name="dontPrintOutputProductsInWorkPlans" />
		</model:model-field>
		
		<model:model-field plugin="technologies" model="technologyOperationComponent">
			<model:boolean name="hideDescriptionInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="technologies" model="technologyOperationComponent">
			<model:boolean name="hideDetailsInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="technologies" model="technologyOperationComponent">
			<model:boolean name="hideTechnologyAndOrderInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="technologies" model="technologyOperationComponent">
			<model:file name="imageUrlInWorkPlan" />
		</model:model-field>
		<model:model-field plugin="technologies" model="technologyOperationComponent">
			<model:boolean name="dontPrintInputProductsInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="technologies" model="technologyOperationComponent">
			<model:boolean name="dontPrintOutputProductsInWorkPlans" />
		</model:model-field>
		
		<model:model-field plugin="productionScheduling" model="orderOperationComponent">
			<model:boolean name="hideDescriptionInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="productionScheduling" model="orderOperationComponent">
			<model:boolean name="hideDetailsInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="productionScheduling" model="orderOperationComponent">
			<model:boolean name="hideTechnologyAndOrderInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="productionScheduling" model="orderOperationComponent">
			<model:file name="imageUrlInWorkPlan" />
		</model:model-field>
		<model:model-field plugin="productionScheduling" model="orderOperationComponent">
			<model:boolean name="dontPrintInputProductsInWorkPlans" />
		</model:model-field>
		<model:model-field plugin="productionScheduling" model="orderOperationComponent">
			<model:boolean name="dontPrintOutputProductsInWorkPlans" />
		</model:model-field>
		
		<view:view resource="view/parameterInputComponentDetails.xml" />
		<view:view resource="view/parameterOutputComponentDetails.xml" />
		
		<view:view-tab resource="view/tabExtensions/parameters.xml" />
		<view:view-tab resource="view/tabExtensions/operationDetails.xml" />
		<view:view-tab resource="view/tabExtensions/technologyOperationComponentDetails.xml" />
		<view:view-tab resource="view/tabExtensions/orderOperationComponentDetails.xml" />
		
		<view:view-hook plugin="technologies" view="operationDetails"
			type="beforeRender"
			class="com.qcadoo.mes.workPlans.hooks.OperationViewHooks"
			method="setOperationDefaultValues" />
			
		<view:view-listener plugin="technologies" view="technologyOperationComponentDetails"
			component="operation" event="onSelectedEntityChange"
			class="com.qcadoo.mes.workPlans.hooks.TechnologyOperationComponentViewHooks"
			method="setTechnologyOperationComponentDefaultValues" />
			
		<view:view-hook plugin="productionScheduling" view="orderOperationComponentDetails"
			type="beforeRender"
			class="com.qcadoo.mes.workPlans.hooks.OrderOperationComponentViewHooks"
			method="setOrderOperationComponentDefaultValues" />
		
		<custom:custom class="com.qcadoo.mes.workPlans.WorkPlanColumnsLoaderModule" />
	</modules>

</plugin>