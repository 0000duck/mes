<plugin plugin="productionCountingWithCosts" version="${qcadoo.plugin.version}"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report" xmlns:custom="http://schema.qcadoo.org/modules/custom"
	xsi:schemaLocation="
		http://schema.qcadoo.org/plugin 
		http://schema.qcadoo.org/plugin.xsd 
		http://schema.qcadoo.org/modules/model 
		http://schema.qcadoo.org/modules/model.xsd 
		http://schema.qcadoo.org/modules/view 
		http://schema.qcadoo.org/modules/view.xsd 
		http://schema.qcadoo.org/modules/localization 
		http://schema.qcadoo.org/modules/localization.xsd 
		http://schema.qcadoo.org/modules/report 
		http://schema.qcadoo.org/modules/report.xsd 
		http://schema.qcadoo.org/modules/menu 
		http://schema.qcadoo.org/modules/menu.xsd
		http://schema.qcadoo.org/modules/custom 
		http://schema.qcadoo.org/modules/custom.xsd">

	<information>
		<name>MES - Production Counting With Costs</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>productionCounting</plugin>
			<version>[0.4.0</version>
		</dependency>
		<dependency>
			<plugin>costCalculation</plugin>
			<version>[0.4.1</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />
	
		<model:model model="orderOperationProductInComponent" resource="model/orderOperationProductInComponent.xml" />
		<model:model model="operationCostComponent" resource="model/operationCostComponent.xml" />
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:boolean name="printCostNormsOfMaterials" default="true"/>
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:enum name="sourceOfMaterialCosts"
				values="01currentGlobalDefinitionsInProduct,02fromOrdersMaterialCosts"
				required="true" default="01currentGlobalDefinitionsInProduct" />
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:enum name="calculateMaterialCostsMode"
				values="01nominal,02average,03lastPurchase,04costForOrder" required="true"
				default="01nominal" />
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="averageMachineHourlyCost">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="averageLaborHourlyCost">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="productionCostMargin" default="0">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="materialCostMargin" default="0">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="additionalOverhead" default="0">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="plannedComponentsCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="componentsCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="componentsCostsBalance">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:hasMany name="orderOperationProductInComponents" joinField="productionBalance"
				model="orderOperationProductInComponent" plugin="productionCountingWithCosts" 
				cascade="delete" />
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="plannedMachineCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="machineCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="machineCostsBalance">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="plannedLaborCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="laborCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="laborCostsBalance">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:hasMany name="operationCostComponents" joinField="productionBalance"
				model="operationCostComponent" plugin="productionCountingWithCosts" 
				cascade="delete" />
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="registeredTotalTechnicalProductionCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="registeredTotalTechnicalProductionCostPerUnit">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="totalTechnicalProductionCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="totalTechnicalProductionCostPerUnit">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="balanceTechnicalProductionCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="balanceTechnicalProductionCostPerUnit">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="productionCostMarginValue" default="0">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="materialCostMarginValue" default="0">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="additionalOverheadValue" default="0">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="totalOverhead">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="totalCosts">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="totalCostPerUnit">
				<validatesUnscaledValue max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:decimal name="quantity" />
		</model:model-field>
		
		<model:model-field plugin="costNormsForOperation" model="calculationOperationComponent">
			<model:belongsTo name="productionBalance" model="productionBalance" plugin="productionCounting" />
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:tree name="calculationOperationComponents" joinField="productionBalance"
				model="calculationOperationComponent" plugin="costNormsForOperation"
				cascade="delete" />
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:belongsTo name="technology" model="technology" plugin="technologies" />
		</model:model-field>
		
		<model:model-field plugin="productionCounting" model="productionBalance">
			<model:boolean name="generatedWithCosts" />
		</model:model-field>
		
		<model:model-hook model="productionBalance" plugin="productionCounting">
			<model:validatesWith
				class="com.qcadoo.mes.productionCountingWithCosts.validators.ProductionBalanceModelValidators"
				method="checkIfOptionsAreNotNull" />
		</model:model-hook>
		
		<model:model-hook model="productionBalance" plugin="productionCounting">
			<model:validatesWith
				class="com.qcadoo.mes.productionCountingWithCosts.validators.ProductionBalanceModelValidators"
				method="checkIfOptionsAreAvailable" />
		</model:model-hook>
		
		<view:view-ribbon-group resource="view/ribbonExtensions/productionBalancesList.xml" />
		<view:view-ribbon-group resource="view/ribbonExtensions/productionBalanceDetails.xml" />
		
		<view:view-tab resource="view/tabExtensions/productionBalanceDetails.xml" />
		
		<view:view-hook plugin="productionCounting" view="productionBalanceDetails"
			type="beforeRender"
			class="com.qcadoo.mes.productionCountingWithCosts.hooks.ProductionBalanceDetailsViewHooks"
			method="changeFieldsAndGridsVisibility" />
		
		<view:view-hook plugin="productionCounting" view="productionBalanceDetails"
			type="beforeRender"
			class="com.qcadoo.mes.productionCountingWithCosts.hooks.ProductionBalanceDetailsViewHooks"
			method="changeAssumptionsVisibility" />
			
		<view:view-hook plugin="productionCounting" view="productionBalanceDetails"
			type="beforeRender"
			class="com.qcadoo.mes.productionCountingWithCosts.hooks.ProductionBalanceDetailsViewHooks"
			method="fillCurrencyAndUnitFields" />
		
		<view:view-hook plugin="productionCounting" view="productionBalanceDetails"
			type="beforeRender"
			class="com.qcadoo.mes.productionCountingWithCosts.hooks.ProductionBalanceDetailsViewHooks"
			method="disableFieldsAndGridsWhenGenerated" />
		
		<view:view-listener plugin="productionCounting" view="productionBalanceDetails"
			component="calculateOperationCostsMode" event="onSelectedEntityChange"
			class="com.qcadoo.mes.productionCountingWithCosts.hooks.ProductionBalanceDetailsViewHooks"
			method="changeAssumptionsVisibility" />
			
		<custom:custom
			class="com.qcadoo.mes.productionCountingWithCosts.ProductionCountingWithCostsOnStartupService" />
	</modules>

</plugin>