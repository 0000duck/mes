<qcd:models plugin="products" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="operation">
		<string name="number">
			<validatesPresence/>
			<validatesUniqueness/>
			<validatesLength max="255"/>
		</string>
		<string name="name">
			<validatesPresence/>
			<validatesUniqueness/>		
			<validatesLength max="2048"/>
		</string>
		<string name="comment">	
			<validatesLength max="2048"/>
		</string>
		<belongsTo name="staff" plugin="basic" model="staff" lookupField="name" lazy="false" />
		<belongsTo name="machine" plugin="basic" model="machine" lookupField="name" lazy="false" />
		<hasMany name="operationComponents" model="technologyOperationComponent" joinField="operation" cascade="nullify" />
		<identifierExpression value="#number + ' - ' + #name"/>
	</model>
	<model name="technology">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
			<validatesLength max="40" />
		</string>
		<string name="name">
			<validatesPresence />
		</string>
		<belongsTo name="product" model="product" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<boolean name="master" default="true" />
		<string name="description" />
		<boolean name="batchRequired" />
		<boolean name="shiftFeatureRequired" />
		<boolean name="postFeatureRequired" />
		<boolean name="otherFeatureRequired" />
		<boolean name="componentQuantityAlgorithm" />
		<enum name="componentQuantityAlgorithm" values="01perProductOut,02perTechnology" default="01perProductOut">
			<validatesPresence />
		</enum>
		<enum name="qualityControlType" values="01forBatch,02forUnit,03forOrder,04forOperation" />
		<decimal name="unitSamplingNr" />
		<string name="qualityControlInstruction">
			<validatesLength max="255" />
		</string>
		<tree name="operationComponents" model="technologyOperationComponent" joinField="technology" cascade="delete" copyable="true" />
		<hasMany name="orders" model="order" joinField="technology" cascade="nullify"/>
		<validatesWith bean="com.qcadoo.mes.products.TechnologyService" method="checkTechnologyDefault" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfProductIsNotRemoved" />
		<validatesWith bean="com.qcadoo.mes.products.TechnologyService" method="checkIfUnitSampligNrIsReq" />
		<onCopy bean="com.qcadoo.mes.products.TechnologyService" method="clearMasterOnCopy" />
		<onSave bean="com.qcadoo.mes.products.TechnologyService" method="setFirstTechnologyAsDefault" />
		<identifierExpression value="#number + ' - ' + #name"/>
	</model>
	<model name="technologyOperationComponent">
		<boolean name="qualityControlRequired" />
		<belongsTo name="technology" model="technology" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<hasMany name="children" model="technologyOperationComponent" joinField="parent" cascade="delete" copyable="true" />
		<belongsTo name="parent" model="technologyOperationComponent" lookupField="name" />
		<priority name="priority" scope="parent" />
		<enum name="entityType" values="operation,referenceTechnology">
			<validatesPresence /> 
		</enum>
			<!-- operation -->
		<belongsTo name="operation" model="operation" lookupField="name" />
		<hasMany name="operationProductInComponents" model="operationProductInComponent" joinField="operationComponent" cascade="delete" copyable="true" />
		<hasMany name="operationProductOutComponents" model="operationProductOutComponent" joinField="operationComponent" cascade="delete" copyable="true" />
			<!-- technology -->
		<belongsTo name="referenceTechnology" model="technology" lookupField="name" />
		<enum name="referenceMode" values="01reference,02copy" default="01reference" persistent="false" />
		<validatesWith bean="com.qcadoo.mes.products.TechnologyService" method="validateTechnologyOperationComponent" />
		<validatesWith bean="com.qcadoo.mes.products.TechnologyService" method="copyReferencedTechnology" />
		<onSave bean="com.qcadoo.mes.products.TechnologyService" method="setQualityControlTypeForTechnology" />
	</model>
	<model name="operationProductInComponent">
		<belongsTo name="operationComponent" model="technologyOperationComponent" lookupField="#operation['name']">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="product" model="product" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<decimal name="quantity">
			<validatesPresence />
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
		<boolean name="batchRequired" />
		<hasMany name="genealogyProductInComponents" plugin="genealogies" model="genealogyProductInComponent" joinField="productInComponent" cascade="delete"/>
		<onSave bean="com.qcadoo.mes.products.TechnologyService" method="fillBatchRequiredForTechnology" />
	</model>
	<model name="operationProductOutComponent">
		<belongsTo name="operationComponent" model="technologyOperationComponent" lookupField="#operation['name']">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="product" model="product" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<decimal name="quantity">
			<validatesPresence />
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
	</model>
</qcd:models>