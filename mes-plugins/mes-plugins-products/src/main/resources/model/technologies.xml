<qcd:models plugin="products" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="operation">
		<string name="number">
			<validatesPresence/>
			<validatesUniqueness/>
			<validatesLength max="255"/>
		</string>
		<string name="name">
			<validatesPresence/>
			<validatesUniqueness/>		
			<validatesLength max="2048"/>
		</string>
		<string name="comment">	
			<validatesLength max="2048"/>
		</string>
		<belongsTo name="staff" plugin="basic" model="staff" lookupField="name" lazy="false" />
		<belongsTo name="machine" plugin="basic" model="machine" lookupField="name" lazy="false" />
		<hasMany name="operationComponents" model="technologyOperationComponent" joinField="operation" cascade="nullify" />
	</model>
	<model name="technology">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
			<validatesLength max="40" />
		</string>
		<string name="name">
			<validatesPresence />
		</string>
		<belongsTo name="product" model="product" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<boolean name="master" />
		<string name="description" />
		<hasMany name="operationComponents" model="technologyOperationComponent" joinField="technology" cascade="delete" copyable="true" />
		<hasMany name="orders" model="order" joinField="technology" cascade="nullify"/>
		<validatesWith bean="com.qcadoo.mes.products.TechnologyService" method="checkTechnologyDefault" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfProductIsNotRemoved" />
		<onCopy bean="com.qcadoo.mes.products.TechnologyService" method="clearMasterOnCopy" />
	</model>
	<model name="technologyOperationComponent">
		<belongsTo name="technology" model="technology" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="operation" model="operation" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="parent" model="technologyOperationComponent" lookupField="name" />
		<hasMany name="children" model="technologyOperationComponent" joinField="parent" cascade="delete" copyable="true" />
		<hasMany name="operationProductInComponents" model="operationProductInComponent" joinField="operationComponent" cascade="delete" copyable="true" />
		<hasMany name="operationProductOutComponents" model="operationProductOutComponent" joinField="operationComponent" cascade="delete" copyable="true" />
		<onCopy bean="com.qcadoo.mes.products.TechnologyService" method="copyTechnologyFromParent" />
	</model>
	<model name="operationProductInComponent">
		<belongsTo name="operationComponent" model="technologyOperationComponent" lookupField="#operation['name']">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="product" model="product" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<decimal name="quantity">
			<validatesPresence />
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
	</model>
	<model name="operationProductOutComponent">
		<belongsTo name="operationComponent" model="technologyOperationComponent" lookupField="#operation['name']">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="product" model="product" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<decimal name="quantity">
			<validatesPresence />
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
	</model>
</qcd:models>