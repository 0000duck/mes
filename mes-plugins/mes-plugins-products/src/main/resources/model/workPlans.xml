<qcd:models plugin="products" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="workPlan">	
		<string name="name">
			<validatesPresence />
			<validatesLength max="255"/>
		</string>
		<datetime name="date" />
		<string name="worker" />
		<boolean name="generated" />
		<string name="fileName" />
		<hasMany name="orders" model="workPlanComponent" joinField="workPlan" cascade="delete" />
		<onCopy bean="com.qcadoo.mes.products.WorkPlanService" method="clearGeneratedOnCopy" />
	</model>
	<model name="workPlanComponent">
		<belongsTo name="workPlan" model="workPlan" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="order" model="order" lookupField="name" lazy="false">
			<validatesPresence />			
		</belongsTo>
		<validatesWith bean="com.qcadoo.mes.products.OrderService" method="checkIfOrderHasTechnology" />
		<validatesWith bean="com.qcadoo.mes.products.WorkPlanService" method="checkWorkPlanComponentUniqueness" />			
	</model>
</qcd:models>