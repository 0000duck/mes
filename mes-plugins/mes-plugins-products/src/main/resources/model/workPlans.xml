<models plugin="products" xmlns="http://www.qcadoo.com/model">
	<model name="workPlan">	
		<string name="name" required="true">
			<validatesLength max="255"/>
		</string>
		<datetime name="date" />
		<string name="worker" />
		<boolean name="generated" />
		<string name="fileName" />
		<hasMany name="orders" model="workPlanComponent" joinField="workPlan" cascade="delete" copyable="true" />
		<onCopy class="com.qcadoo.mes.products.WorkPlanService" method="clearGeneratedOnCopy" />
		<identifier expression="#name"/>
	</model>
	<model name="workPlanComponent">
		<belongsTo name="workPlan" model="workPlan" lazy="false" required="true" />
		<belongsTo name="order" model="order" lazy="false" required="true" />
		<validatesWith class="com.qcadoo.mes.products.OrderService" method="checkIfOrderHasTechnology" />
		<validatesWith class="com.qcadoo.mes.products.OrderService" method="checkIfOrderTechnologyHasOperations" />
		<validatesWith class="com.qcadoo.mes.products.WorkPlanService" method="checkWorkPlanComponentUniqueness" />	
		<identifier expression="#order['number'] + ' - ' + #order['name']"/>		
	</model>
</models>
