<model name="product" xmlns="http://www.qcadoo.com/model">
	<string name="number" required="true" unique="true">
		<validatesLength max="40" />
	</string>
	<string name="name" required="true" />
	<enum name="typeOfMaterial" values="01component,02intermediate,03product,04waste" required="true" />
	<string name="ean" />
	<dictionary name="category" dictionary="categories" />
	<dictionary name="unit" dictionary="units" required="true" />
	<string name="batch">
		<validatesLength max="255" />
	</string>
	<string name="lastUsedBatch">
		<validatesLength max="255" />
	</string>
	<boolean name="genealogyBatchReq" />
	<hasMany name="substitutes" model="substitute" joinField="product" cascade="delete" copyable="true" />
	<hasMany name="technologies" model="technology" joinField="product" cascade="none" />
	<hasMany name="orders" model="order" joinField="product" cascade="none"/>
	<hasMany name="operationProductInComponents" model="operationProductInComponent" joinField="product" cascade="none"/>
	<hasMany name="operationProductOutComponents" model="operationProductOutComponent" joinField="product" cascade="none"/>
	<hasMany name="substituteComponents" model="substituteComponent" joinField="product" cascade="none"/>
	<identifier expression="#number + ' - ' + #name"/>
</model>