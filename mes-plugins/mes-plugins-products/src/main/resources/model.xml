<qcd:models plugin="products" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="product">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<text name="name">
			<validatesPresence />
		</text>
		<enum name="typeOfMaterial" values="product,intermediate,component">
			<validatesPresence />
		</enum>
		<string name="ean" />
		<dictionary name="category" dictionary="categories" />
		<string name="unit" />
		<hasMany name="substitutes" model="substitute" joinField="product" cascade="delete" />
		<hasMany name="instructions" model="instruction" joinField="product" cascade="nullify" />
		<hasMany name="orders" model="order" joinField="product" cascade="nullify"/>
		<hasMany name="instructionBomComponents" model="instructionBomComponent" joinField="product" cascade="nullify"/>
		<hasMany name="substituteComponents" model="substituteComponent" joinField="product" cascade="nullify"/>
	</model>
	<model name="substitute">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<text name="name">
			<validatesPresence />
		</text>
		<date name="effectiveDateFrom" />
		<date name="effectiveDateTo" />
		<belongsTo name="product" model="product" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<hasMany name="components" model="substituteComponent" joinField="substitute" cascade="delete" />
		<priority name="priority" scope="product" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkSubstituteDates" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfProductIsNotRemoved" />
	</model>
	<model name="substituteComponent">
		<belongsTo name="product" model="product" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="substitute" model="substitute" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<decimal name="quantity">
			<validatesPresence />
			<validatesRange from="0" inclusive="false" />
		</decimal>
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfSubstituteIsNotRemoved" />
	</model>
	<model name="instruction">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<text name="name">
			<validatesPresence />
		</text>
		<belongsTo name="product" model="product" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<boolean name="master" />
		<date name="dateFrom" />
		<date name="dateTo" />
		<text name="description" />
		<hasMany name="bomComponents" model="instructionBomComponent" joinField="instruction" cascade="delete" />
		<hasMany name="orders" model="order" joinField="instruction" cascade="nullify"/>
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkInstructionDefault" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkInstructionDates" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfProductIsNotRemoved" />
	</model>
	<model name="instructionBomComponent">
		<belongsTo name="instruction" model="instruction" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="product" model="product" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<decimal name="quantity">
			<validatesPresence />
			<validatesRange from="0" inclusive="false" />
		</decimal>
		<belongsTo name="parent" model="instructionBomComponent" lookupField="name" />
		<hasMany name="children" model="instructionBomComponent" joinField="parent" cascade="delete" />
	</model>
	<model name="order">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<text name="name">
			<validatesPresence />
		</text>
		<date name="dateFrom">
			<validatesPresence />
		</date>
		<date name="dateTo">
			<validatesPresence />
		</date>
		<enum name="state" values="pending,done">
			<validatesPresence />
		</enum>
		<dictionary name="machine" dictionary="machines" />
		<belongsTo name="product" model="product" lookupField="name" />
		<belongsTo name="defaultInstruction" model="instruction" lookupField="name" readonly="true" />
		<belongsTo name="instruction" model="instruction" lookupField="name" />
		<decimal name="plannedQuantity">
			<validatesRange from="0" inclusive="false" />
		</decimal>
		<decimal name="doneQuantity">
			<validatesRange from="0" inclusive="false" />
		</decimal>
		<date name="effectiveDateFrom" readonly="true" />
		<date name="effectiveDateTo" readonly="true" />
		<text name="startWorker" readonly="true" />
		<text name="endWorker" readonly="true" />
		<hasMany name="materialRequirements" model="materialRequirementComponent" joinField="order" cascade="nullify" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkOrderDates" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkOrderPlannedQuantity" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkOrderInstruction" />
		<onSave bean="com.qcadoo.mes.products.ProductService" method="fillOrderDatesAndWorkers" />
	</model>
	<model name="materialRequirement">	
		<text name="name">
			<validatesPresence />
		</text>
		<datetime name="date" readonly="true" />
		<text name="worker" readonly="true" />
		<boolean name="onlyComponents" />
		<boolean name="generated" />
		<string name="fileName" />
		<hasMany name="orders" model="materialRequirementComponent" joinField="materialRequirement" cascade="delete" />
		<onSave bean="com.qcadoo.mes.products.ProductService" method="fillMaterialRequirementDateAndWorker" />
	</model>
	<model name="materialRequirementComponent">	
		<belongsTo name="materialRequirement" model="materialRequirement" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="order" model="order" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkMaterialRequirementComponentUniqueness" />
	</model>
</qcd:models>