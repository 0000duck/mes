<qcd:models plugin="products" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="product">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
			<validatesLength max="40" />
		</string>
		<string name="name">
			<validatesPresence />
		</string>
		<enum name="typeOfMaterial" values="product,intermediate,component">
			<validatesPresence />
		</enum>
		<string name="ean" />
		<dictionary name="category" dictionary="categories" />
		<string name="unit" />
		<hasMany name="substitutes" model="substitute" joinField="product" cascade="delete" />
		<hasMany name="technologies" model="technology" joinField="product" cascade="nullify" />
		<hasMany name="orders" model="order" joinField="product" cascade="nullify"/>
		<hasMany name="operationProductComponents" model="operationProductComponent" joinField="product" cascade="nullify"/>
		<hasMany name="substituteComponents" model="substituteComponent" joinField="product" cascade="nullify"/>
	</model>
	<model name="substitute">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
			<validatesLength max="40" />
		</string>
		<string name="name">
			<validatesPresence />
		</string>
		<belongsTo name="product" model="product" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<hasMany name="components" model="substituteComponent" joinField="substitute" cascade="delete" />
		<priority name="priority" scope="product" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfProductIsNotRemoved" />
	</model>
	<model name="substituteComponent">
		<belongsTo name="product" model="product" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="substitute" model="substitute" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<decimal name="quantity">
			<validatesPresence />
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfSubstituteIsNotRemoved" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkSubstituteComponentUniqueness" />
	</model>
	<model name="operation">
		<string name="number">
			<validatesPresence/>
			<validatesUniqueness/>
			<validatesLength max="255"/>
		</string>
		<string name="name">
			<validatesPresence/>
			<validatesUniqueness/>		
			<validatesLength max="2048"/>
		</string>
		<belongsTo name="staff" plugin="basic" model="staff" lookupField="name" lazy="false" />
		<belongsTo name="machine" plugin="basic" model="machine" lookupField="name" lazy="false" />
		<hasMany name="operationComponents" model="technologyOperationComponent" joinField="operation" cascade="nullify" />
	</model>
	<model name="technology">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
			<validatesLength max="40" />
		</string>
		<string name="name">
			<validatesPresence />
		</string>
		<belongsTo name="product" model="product" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<boolean name="master" />
		<string name="description" />
		<hasMany name="operationComponents" model="technologyOperationComponent" joinField="technology" cascade="delete" />
		<hasMany name="orders" model="order" joinField="technology" cascade="nullify"/>
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkTechnologyDefault" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfProductIsNotRemoved" />
	</model>
	<model name="technologyOperationComponent">
		<belongsTo name="technology" model="technology" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="operation" model="operation" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="parent" model="technologyOperationComponent" lookupField="name" />
		<hasMany name="children" model="technologyOperationComponent" joinField="parent" cascade="delete" />
		<hasMany name="operationProductComponents" model="operationProductComponent" joinField="operationComponent" cascade="delete" />
	</model>
	<model name="operationProductComponent">
		<belongsTo name="operationComponent" model="technologyOperationComponent" lookupField="#operation['name']">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="product" model="product" lookupField="name">
			<validatesPresence /> 
		</belongsTo>
		<decimal name="quantity">
			<validatesPresence />
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
		<boolean name="inParameter">
			<validatesPresence />
		</boolean>
	</model>
	<model name="order">
		<string name="number">
			<validatesPresence />
			<validatesUniqueness />
			<validatesLength max="40" />
		</string>
		<string name="name">
			<validatesPresence />
		</string>
		<date name="dateFrom">
			<validatesPresence />
		</date>
		<date name="dateTo">
			<validatesPresence />
		</date>
		<enum name="state" values="pending,inProgress,done">
			<validatesPresence />
		</enum>
		<dictionary name="machine" dictionary="machines" />
		<belongsTo name="product" model="product" lookupField="name" />
		<belongsTo name="defaultTechnology" model="technology" lookupField="name" readonly="true" />
		<belongsTo name="technology" model="technology" lookupField="name" />
		<decimal name="plannedQuantity">
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
		<decimal name="doneQuantity">
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
		<date name="effectiveDateFrom" readonly="true" />
		<date name="effectiveDateTo" readonly="true" />
		<string name="startWorker" readonly="true" />
		<string name="endWorker" readonly="true" />
		<hasMany name="materialRequirements" model="materialRequirementComponent" joinField="order" cascade="nullify" />
		<hasMany name="workPlans" model="workPlanComponent" joinField="order" cascade="nullify" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfStateChangeIsCorrect" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkOrderDates" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkOrderPlannedQuantity" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkOrderTechnology" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfProductIsNotRemoved" />
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkIfTechnologyIsNotRemoved" />
		<onSave bean="com.qcadoo.mes.products.ProductService" method="fillOrderDatesAndWorkers" />
	</model>
	<model name="materialRequirement">	
		<string name="name">
			<validatesPresence />
			<validatesLength max="255"/>
		</string>
		<datetime name="date" />
		<string name="worker" />
		<boolean name="onlyComponents" />
		<boolean name="generated" />
		<string name="fileName" />
		<hasMany name="orders" model="materialRequirementComponent" joinField="materialRequirement" cascade="delete" />
	</model>
	<model name="materialRequirementComponent">	
		<belongsTo name="materialRequirement" model="materialRequirement" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="order" model="order" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkMaterialRequirementComponentUniqueness" />
	</model>
	<model name="workPlan">	
		<string name="name">
			<validatesPresence />
			<validatesLength max="255"/>
		</string>
		<datetime name="date" />
		<string name="worker" />
		<boolean name="generated" />
		<string name="fileName" />
		<hasMany name="orders" model="workPlanComponent" joinField="workPlan" cascade="delete" />
	</model>
	<model name="workPlanComponent">	
		<belongsTo name="workPlan" model="workPlan" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<belongsTo name="order" model="order" lookupField="name" lazy="false">
			<validatesPresence /> 
		</belongsTo>
		<validatesWith bean="com.qcadoo.mes.products.ProductService" method="checkWorkPlanComponentUniqueness" />
	</model>
</qcd:models>