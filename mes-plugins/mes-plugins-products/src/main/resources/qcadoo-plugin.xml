<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="products" version="0.4.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd">

	<information>
		<name>MES - Products</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>basic</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>

	<modules>
		<model:model model="materialRequirement" resource="model/materialRequirement.xml" />
		<model:model model="materialRequirementComponent"
			resource="model/materialRequirementComponent.xml" />
		<model:model model="operation" resource="model/operation.xml" />
		<model:model model="operationProductOutComponent"
			resource="model/operationProductOutComponent.xml" />
		<model:model model="operationProductInComponent" resource="model/operationProductInComponent.xml" />
		<model:model model="order" resource="model/order.xml" />
		<model:model model="product" resource="model/product.xml" />
		<model:model model="substitute" resource="model/substitute.xml" />
		<model:model model="substituteComponent" resource="model/substituteComponent.xml" />
		<model:model model="technology" resource="model/technology.xml" />
		<model:model model="technologyOperationComponent"
			resource="model/technologyOperationComponent.xml" />
		<model:model model="workPlan" resource="model/workPlan.xml" />
		<model:model model="workPlanComponent" resource="model/workPlanComponent.xml" />

		<view:menu-category name="technology" />
		<view:menu-category name="orders" />
		<view:menu-category name="reports" />

		<view:menu-item name="products" category="basic" view="products" />
		<view:menu-item name="technologies" category="technology"
			view="technologies" />
		<view:menu-item name="operations" category="technology"
			view="operations" />
		<view:menu-item name="productionOrders" category="orders"
			view="orders" />
		<view:menu-item name="materialRequirements" category="reports"
			view="materialRequirements" />
		<view:menu-item name="workPlans" category="reports"
			view="workPlans" />

		<view:view>
			<view:resource>view/materialRequirements.xml</view:resource>
			<view:resource>view/orders.xml</view:resource>
			<view:resource>view/products.xml</view:resource>
			<view:resource>view/technologies.xml</view:resource>
			<view:resource>view/workPlans.xml</view:resource>
		</view:view>

		<view:resource uri="public/**/*" />

	</modules>

</plugin>