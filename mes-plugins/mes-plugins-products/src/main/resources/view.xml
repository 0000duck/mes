					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{mainWindow.productDetailsForm}.performDelete; #{mainWindow}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="productDetailsForm">
				<component type="input" name="number" field="number" />
				<component type="textarea" name="name" field="name" hasDescription="true" />					
				<component type="select" name="typeOfMaterial" field="typeOfMaterial" />
				<component type="input" name="ean" field="ean" />
				<component type="select" name="category" field="category" />
				<component type="input" name="unit" field="unit" />
				<option type="expression" value="#name" />
				<option type="header" value="false" />
				<option type="height" value="300" />
				<option type="fullScreen" value="true" />
			</component>
			<component type="grid" name="substitutesGrid" source="#{mainWindow.productDetailsForm}.substitutes">
				<option type="column" name="number" fields="number" link="true" />
				<option type="column" name="name" fields="name" link="true" />
				<option type="column" name="priority" fields="priority" />
				<option type="correspondingView" value="products/substituteDetailsView" />
				<option type="paginable" value="false" />
				<option type="multiselect" value="false" />
				<option type="height" value="200" />
				<option type="width" value="350" />
				<option type="creatable" value="true" />
				<option type="deletable" value="true" />
			</component>
			<component type="grid" name="substitutesComponentGrid"
				source="#{mainWindow.substitutesGrid}.components">
				<option type="column" name="number" fields="product"
					expression="#product['number']" link="true" />
				<option type="column" name="name" fields="product"
					expression="#product['name']" link="true" />
				<option type="column" name="quantity" fields="quantity" />
				<option type="correspondingView" value="products/substituteComponentDetailsView" />
				<option type="paginable" value="false" />
				<option type="multiselect" value="false" />
				<option type="height" value="150" />
				<option type="creatable" value="true" />
				<option type="deletable" value="true" />
				<option type="width" value="350" />
			</component>
		</component>
	</view>
