<qcd:views plugin="products" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="productGridView" model="product" menuable="true">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png" action="#{mainWindow.productsGrid}.performNew;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{mainWindow.productsGrid}.performDelete;" />
				</group>
			</ribbon>
			<component type="grid" name="productsGrid">
				<option type="column" name="number" fields="number" link="true"
					width="200" />
				<option type="column" name="name" fields="name" link="true"
					width="300" />
				<option type="column" name="typeOfMaterial" fields="typeOfMaterial"
					width="100" />
				<option type="column" name="ean" fields="ean" width="100" />
				<option type="header" value="false" />
				<option type="correspondingView" value="products/productDetailsView" />
				<option type="paginable" value="true" />
				<option type="searchable" value="name,number,typeOfMaterial,ean" />
				<option type="orderable" value="name,number,ean" />
				<option type="multiselect" value="true" />
				<option type="fullScreen" value="true" />
			</component>
			<option type="backButton" value="false" />
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="productDetailsView" model="product">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
