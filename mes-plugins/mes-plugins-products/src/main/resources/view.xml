	<view name="order" model="order">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.order}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.order}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png" action="#{window.order}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.order}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>		
			<component type="form" name="order">
				<component type="gridLayout" name="gridLayout" columns="4" rows="10">
					<layoutElement column="1" row="1">
						<component type="input" name="number" field="number" />
					</layoutElement>
					<layoutElement column="2" row="1" height="2">
						<component type="textarea" name="name" field="name" />
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="calendar" name="dateFrom" field="dateFrom" />
					</layoutElement>
					<layoutElement column="2" row="3">
						<component type="calendar" name="dateTo" field="dateTo" />
					</layoutElement>
					<layoutElement column="1" row="4">
						<component type="select" name="state" field="state" />
					</layoutElement>
					<layoutElement column="1" row="5">
						<component type="select" name="machine" field="machine" />
					</layoutElement>
					<layoutElement column="1" row="6">
						<component type="lookup" name="product" field="product">
							<option type="column" name="name" fields="name" link="true"
								width="300" />
							<option type="column" name="category" fields="category" />
							<option type="searchable" value="name,category" />
							<option type="orderable" value="name,category" />
							<option type="expression" value="#name + ' - ' + #number" />
							<option type="fieldCode" value="number" />
							<listener event="search" bean="com.qcadoo.mes.products.ProductService" method="changeOrderProduct"/>
						</component>
					</layoutElement>
					<layoutElement column="2" row="6">
						<component type="input" name="defaultTechnology" field="defaultTechnology" defaultEnabled="false" />
					</layoutElement>
					<layoutElement column="2" row="7">
						<component type="lookup" name="technology" field="technology" source="#{window.order.gridLayout.product}.technologies">
							<option type="column" name="name" fields="name" link="true" width="300" />
							<option type="searchable" value="name,number" />
							<option type="orderable" value="name,number" />
							<option type="expression" value="#name + ' - ' + #number" />
							<option type="fieldCode" value="number" />
						</component>
					</layoutElement>
					<layoutElement column="1" row="8">
						<component type="input" name="plannedQuantity" field="plannedQuantity" />
					</layoutElement>
					<layoutElement column="2" row="8">
						<component type="input" name="doneQuantity" field="doneQuantity" />
					</layoutElement>
					<layoutElement column="1" row="9">
						<component type="calendar" name="effectiveDateFrom" field="effectiveDateFrom" defaultEnabled="false" />
					</layoutElement>
					<layoutElement column="2" row="9">
						<component type="calendar" name="effectiveDateTo" field="effectiveDateTo" defaultEnabled="false" />
					</layoutElement>
					<layoutElement column="1" row="10">
						<component type="input" name="startWorker" field="startWorker" defaultEnabled="false" />
					</layoutElement>
					<layoutElement column="2" row="10">
						<component type="input" name="endWorker" field="endWorker" defaultEnabled="false" />
					</layoutElement>
				</component>
				<option type="header" value="false" />
				<option type="expression" value="#name + ' - ' + #number" />
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.products.ProductService" method="generateOrderNumber" />		
		<preRenderHook bean="com.qcadoo.mes.products.ProductService" method="fillDefaultTechnology" />		
		<preRenderHook bean="com.qcadoo.mes.products.ProductService" method="disableTechnologiesIfProductDoesNotAny" />		
		<preRenderHook bean="com.qcadoo.mes.products.ProductService" method="disableFormForDoneOrder" />		
	</view>
