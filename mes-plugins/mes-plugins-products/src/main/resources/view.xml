<qcd:views plugin="products" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="products" model="product" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png" action="#{window.products}.performNew;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.products}.performDelete;" />
				</group>
			</ribbon>
			<component type="grid" name="products">
				<option type="column" name="number" fields="number" link="true"
					width="200" />
				<option type="column" name="name" fields="name" link="true"
					width="300" />
				<option type="column" name="typeOfMaterial" fields="typeOfMaterial" />
				<option type="column" name="ean" fields="ean" />
				<option type="correspondingView" value="products/product" />
				<option type="correspondingComponent" value="window.product" />
				<option type="searchable" value="name,number,typeOfMaterial,ean" />
				<option type="orderable" value="name,number,ean" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="product" model="product">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.product}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.product}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png"
						action="#{window.product}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.product}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="product">
				<component type="input" name="number" field="number" />
				<component type="textarea" name="name" field="name" hasDescription="true" />					
				<component type="select" name="typeOfMaterial" field="typeOfMaterial" />
				<component type="input" name="ean" field="ean" />
				<component type="select" name="category" field="category" />
				<component type="input" name="unit" field="unit" />
				<option type="expression" value="#name" />
				<option type="header" value="false" />
			</component>
			<component type="grid" name="substitutes" source="#{window.product}.substitutes">
				<option type="column" name="number" fields="number" link="true" />
				<option type="column" name="name" fields="name" link="true" />
				<option type="column" name="priority" fields="priority" />
				<option type="correspondingView" value="products/substitute" />
				<option type="correspondingComponent" value="window.substitute" />
				<option type="paginable" value="false" />
				<option type="creatable" value="true" />
				<option type="deletable" value="true" />
				<option type="height" value="200" />
				<option type="width" value="350" />
			</component>
			<component type="grid" name="substituteComponents"
				source="#{window.substitutes}.components">
				<option type="column" name="number" fields="product"
					expression="#product['number']" link="true" />
				<option type="column" name="name" fields="product"
					expression="#product['name']" link="true" />
				<option type="column" name="quantity" fields="quantity" />
				<option type="correspondingView" value="products/substituteComponent" />
				<option type="correspondingComponent" value="window.substituteComponent" />
				<option type="paginable" value="false" />
				<option type="creatable" value="true" />
				<option type="deletable" value="true" />
				<option type="height" value="150" />
				<option type="width" value="350" />
			</component>
		</component>
	</view>
	<view name="substitute" model="substitute">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.substitute}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.substitute}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png" action="#{window.substitute}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.substitute}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="substitute">
				<component type="input" name="number" field="number" />
				<component type="textarea" name="name" field="name" />
				<component type="input" name="priority" field="priority"
					defaultEnabled="false" />
				<component type="input" name="effectiveDateFrom" field="effectiveDateFrom" />
				<component type="input" name="effectiveDateTo" field="effectiveDateTo" />
				<option type="header" value="false" />
				<option type="expression" value="#name" />
			</component>
		</component>
	</view>
	<view name="substituteComponent" model="substituteComponent">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.substituteComponent}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.substituteComponent}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png" action="#{window.substituteComponent}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.substituteComponent}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="substituteComponent">
				<component type="lookup" name="product" field="product">
					<option type="column" name="name" fields="name" link="true"
						width="300" />
					<option type="column" name="category" fields="category" />
					<option type="searchable" value="name,category" />
					<option type="orderable" value="name,category" />
					<option type="fullscreen" value="true" />
					<option type="expression" value="#name + ' - ' + #number" />
					<option type="fieldCode" value="number" />
				</component>
				<component type="input" name="quantity" field="quantity" />
				<option type="header" value="false" />
				<option type="expression" value="#product['name'] + ' x ' + #quantity" />
			</component>
		</component>
	</view>
	<view name="instructions" model="instruction" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png"
						action="#{window.instructions}.performNew;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.instructions}.performDelete;" />
				</group>
			</ribbon>
			<component type="grid" name="instructions">
				<option type="column" name="number" fields="number" link="true" />
				<option type="column" name="name" fields="name" link="true" />
				<option type="column" name="product" fields="product"
					expression="#product['name']" />
				<option type="correspondingView" value="products/instruction" />
				<option type="correspondingComponent" value="window.instruction" />
				<option type="searchable" value="name,number,product" />
				<option type="orderable" value="name,number,product" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="instruction" model="instruction">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.instruction}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.instruction}.performSave;#{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png" action="#{window.instruction}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.instruction}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="instruction">
				<component type="checkbox" name="master" field="master" />
				<component type="input" name="number" field="number" />
				<component type="textarea" name="name" field="name" />
				<component type="lookup" name="product" field="product">
					<option type="column" name="name" fields="name" link="true"
						width="300" />
					<option type="column" name="category" fields="category" />
					<option type="searchable" value="name,category" />
					<option type="orderable" value="name,category" />
					<option type="fullscreen" value="true" />
					<option type="expression" value="#name + ' - ' + #number" />
					<option type="fieldCode" value="number" />
				</component>
				<component type="calendar" name="dateFrom" field="dateFrom" />
				<component type="calendar" name="dateTo" field="dateTo" />
				<component type="textarea" name="description" field="description">
					<option type="rows" value="5" />
				</component>
				<option type="expression" value="#name" />
				<option type="header" value="false" />
			</component>
			<component type="tree" name="instructionBomComponents" source="#{window.instruction}.bomComponents">
				<option type="height" value="200" />
				<option type="width" value="500" />
				<option type="expression" value="'&lt;span class=&quot;grey&quot;&gt;' + #quantity + ' x &lt;/span&gt;' + #product['name']" />
				<option type="rootExpression" value="#number" />
				<option type="correspondingView" value="products/instructionBomComponent" />
				<option type="correspondingComponent" value="window.instructionBomComponent" />
			</component>
		</component>
	</view>
	<view name="instructionBomComponent" model="instructionBomComponent">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png" action="#{window.instructionBomComponent}.performSave;"/>
					<bigButton name="saveBack" icon="saveBackIcon24.png" action="#{window.instructionBomComponent}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png" action="#{window.instructionBomComponent}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png" action="#{window.instructionBomComponent}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="instructionBomComponent">
				<component type="lookup" name="product" field="product">
					<option type="column" name="name" fields="name" link="true"
						width="300" />
					<option type="column" name="category" fields="category" />
					<option type="searchable" value="name,category" />
					<option type="orderable" value="name,category" />
					<option type="fullscreen" value="true" />
					<option type="expression" value="#name + ' - ' + #number" />
					<option type="fieldCode" value="number" />
				</component>
				<component type="input" name="quantity" field="quantity" />
				<option type="header" value="false" />
			</component>
		</component>
	</view>
	<view name="orders" model="order" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png"
						action="#{window.orders}.performNew;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.orders}.performDelete;" />
				</group>
				<group name="export">
					<smallButton name="print" icon="printIcon16.png"
						action="#{window.orders}.performCallFunction(printOrder,pdf);" />
				</group>
			</ribbon>		
			<component type="grid" name="orders">
				<option type="column" name="number" fields="number" link="true"/>
				<option type="column" name="name" fields="name" link="true"/>
				<option type="column" name="state" fields="state" />
				<option type="correspondingView" value="products/order" />
				<option type="correspondingComponent" value="window.order" />
				<option type="searchable" value="name,number,state" />
				<option type="orderable" value="name,number,state" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="order" model="order">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.order}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.order}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png" action="#{window.order}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.order}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>		
			<component type="form" name="order">
				<component type="input" name="number" field="number" />
				<component type="textarea" name="name" field="name" />
				<component type="calendar" name="dateFrom" field="dateFrom" />
				<component type="calendar" name="dateTo" field="dateTo" />
				<component type="select" name="state" field="state" />
				<component type="select" name="machine" field="machine" />
				<component type="lookup" name="product" field="product">
					<option type="column" name="name" fields="name" link="true"
						width="300" />
					<option type="column" name="category" fields="category" />
					<option type="searchable" value="name,category" />
					<option type="orderable" value="name,category" />
					<option type="fullscreen" value="true" />
					<option type="expression" value="#name + ' - ' + #number" />
					<option type="fieldCode" value="number" />
				</component>
				<component type="input" name="defaultInstruction" field="defaultInstruction"
					defaultEnabled="false" />
				<component type="lookup" name="instruction" field="instruction"
					source="#{window.order.product}.instructions">
					<option type="column" name="name" fields="name" link="true"
						width="300" />
					<option type="searchable" value="name,number" />
					<option type="orderable" value="name,number" />
					<option type="fullscreen" value="true" />
					<option type="expression" value="#name + ' - ' + #number" />
					<option type="fieldCode" value="number" />
				</component>
				<component type="input" name="plannedQuantity" field="plannedQuantity" />
				<component type="input" name="doneQuantity" field="doneQuantity" />
				<component type="calendar" name="effectiveDateFrom" field="effectiveDateFrom"
					defaultEnabled="false" />
				<component type="calendar" name="effectiveDateTo" field="effectiveDateTo"
					defaultEnabled="false" />
				<component type="input" name="startWorker" field="startWorker"
					defaultEnabled="false" />
				<component type="input" name="endWorker" field="endWorker"
					defaultEnabled="false" />
				<option type="header" value="false" />
				<option type="expression" value="#name + ' - ' + #number" />
			</component>
		</component>
		<postInitializeHook bean="com.qcadoo.mes.products.ProductService" method="generateOrderNumber" />
		<preRenderHook bean="com.qcadoo.mes.products.ProductService" method="selectDefaultInstruction" />
	</view>
	<view name="materialRequirements" model="materialRequirement" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png"
						action="#{window.materialRequirements}.performNew;" />
				</group>
				<group name="export">
					<smallButton name="pdf" icon="printIcon16.png"
						action="#{window.materialRequirements}.performCallFunction(printMaterialRequirementPdf,pdf);" />
					<smallButton name="xls" icon="printIcon16.png"
						action="#{window.materialRequirements}.performCallFunction(printMaterialRequirementXls,xls);" />
				</group>
			</ribbon>		
			<component type="grid" name="materialRequirements">
				<option type="column" name="name" fields="name" link="true" width="300" />
				<option type="column" name="generated" fields="generated" link="false" />
				<option type="column" name="worker" fields="worker" width="300" />
				<option type="correspondingView" value="products/materialRequirement" />
				<option type="correspondingComponent" value="window.materialRequirement" />
				<option type="searchable" value="name,date,worker" />
				<option type="orderable" value="name,date,worker" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="materialRequirement" model="materialRequirement">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.materialRequirement}.performSave;" />
					<bigButton name="generate" action="#{window.materialRequirement.generated}.setSelected(true); #{window.materialRequirement}.performSave;" />
				</group>
				<group name="export">
					<smallButton name="pdf" icon="printIcon16.png"
						action="#{window.materialRequirement}.performCallFunction(printMaterialRequirementPdf,pdf);" />
					<smallButton name="xls" icon="printIcon16.png"
						action="#{window.materialRequirement}.performCallFunction(printMaterialRequirementXls,xls);" />
				</group>
			</ribbon>
			<component type="form" name="materialRequirement">
				<component type="checkbox" name="generated" field="generated" defaultEnabled="false">
					<option type="textRepresentationOnDisabled" value="true" />
				</component>
				<component type="input" name="date" field="date" defaultEnabled="false">
					<option type="textRepresentationOnDisabled" value="true" />
				</component>
				<component type="input" name="worker" field="worker" defaultEnabled="false">
					<option type="textRepresentationOnDisabled" value="true" />
				</component>
				<component type="textarea" name="name" field="name" />
				<component type="checkbox" name="onlyComponents" field="onlyComponents" />
				<option type="header" value="false" />
				<option type="expression" value="#name" />
			</component>
			<component type="grid" name="materialRequirementComponents" source="#{window.materialRequirement}.orders">
				<option type="column" name="number" fields="order" expression="#order['number']"/>
				<option type="column" name="name" fields="order" expression="#order['name']"/>
				<option type="correspondingView" value="products/materialRequirementComponent" />
				<option type="correspondingComponent" value="window.materialRequirementComponent" />
				<option type="paginable" value="false" />
				<option type="height" value="200" />
				<option type="width" value="350" />
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.products.ProductService" method="disableFormForExistingMaterialRequirement" />
	</view>	
	<view name="materialRequirementComponent" model="materialRequirementComponent">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveBackIcon24.png"
						action="#{window.materialRequirementComponent}.performSave; #{window}.performBack" />
				</group>
			</ribbon>		
			<component type="form" name="materialRequirementComponent">
				<component type="lookup" name="order" field="order">
					<option type="column" name="name" fields="name" link="true"
						width="300" />
					<option type="searchable" value="number,name" />
					<option type="orderable" value="number,name" />
					<option type="fullscreen" value="true" />
					<option type="expression" value="#name + ' - ' + #number" />
					<option type="fieldCode" value="number" />
				</component>
				<option type="header" value="false" />
				<option type="expression" value="#name" />
			</component>
		</component>
		<postInitializeHook bean="com.qcadoo.mes.products.ProductService" method="generateOrderNumber" />
		<preRenderHook bean="com.qcadoo.mes.products.ProductService" method="selectDefaultInstruction" />
	</view>
</qcd:views>