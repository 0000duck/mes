<qcd:views plugin="products" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="products" model="product" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png" action="#{window.products}.performNew;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.products}.performDelete;" />
				</group>
			</ribbon>
			<component type="grid" name="products">
				<option type="column" name="number" fields="number" link="true"
					width="200" />
				<option type="column" name="name" fields="name" link="true"
					width="300" />
				<option type="column" name="typeOfMaterial" fields="typeOfMaterial" />
				<option type="column" name="ean" fields="ean" />
				<option type="correspondingView" value="products/product" />
				<option type="correspondingComponent" value="window.product" />
				<option type="searchable" value="name,number,typeOfMaterial,ean" />
				<option type="orderable" value="name,number,typeOfMaterial,ean" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="product" model="product">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.product}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.product}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png"
						action="#{window.product}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.product}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="product">
				<component type="gridLayout" name="gridLayout" columns="3" rows="5">
					<layoutElement column="1" row="1" width="2" height="3">
						<component type="borderLayout" name="borderLayout">
							<component type="gridLayout" name="gridLayout" columns="2" rows="3">
								<layoutElement column="1" row="1">
									<component type="input" name="number" field="number" />
								</layoutElement>
								<layoutElement column="2" row="1">
									<component type="select" name="typeOfMaterial" field="typeOfMaterial" />
								</layoutElement>
								<layoutElement column="1" row="2" width="2" height="2">
									<component type="textarea" name="name" field="name" hasDescription="true" />
								</layoutElement>
							</component>
						</component>
					</layoutElement>
					<layoutElement column="1" row="4">
						<component type="input" name="ean" field="ean" />
					</layoutElement>
					<layoutElement column="1" row="5">
						<component type="select" name="category" field="category" />
					</layoutElement>
					<layoutElement column="2" row="4">
						<component type="input" name="unit" field="unit" />
					</layoutElement>
				</component>
				<option type="expression" value="#name" />
				<option type="header" value="false" />
			</component>
			<component type="gridLayout" name="gridsLayout" columns="3" rows="10">
				<layoutElement column="1" row="1" height="10">
					<component type="grid" name="substitutes" source="#{window.product}.substitutes">
						<option type="column" name="number" fields="number" link="true" />
						<option type="column" name="name" fields="name" link="true" />
						<option type="column" name="priority" fields="priority" />
						<option type="correspondingView" value="products/substitute" />
						<option type="correspondingComponent" value="window.substitute" />
						<option type="paginable" value="false" />
						<option type="creatable" value="true" />
						<option type="deletable" value="true" />
						<option type="fullscreen" value="true" />
					</component>
				</layoutElement>
				<layoutElement column="2" row="1" height="8" width="2">
					<component type="grid" name="substituteComponents"
						source="#{window.gridsLayout.substitutes}.components">
						<option type="column" name="number" fields="product"
							expression="#product['number']" link="true" />
						<option type="column" name="name" fields="product"
							expression="#product['name']" link="true" />
						<option type="column" name="quantity" fields="quantity" />
						<option type="correspondingView" value="products/substituteComponent" />
						<option type="correspondingComponent" value="window.substituteComponent" />
						<option type="paginable" value="false" />
						<option type="creatable" value="true" />
						<option type="deletable" value="true" />
						<option type="fullscreen" value="true" />
					</component>
				</layoutElement>
			</component>
		</component>
	</view>
	<view name="substitute" model="substitute">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
