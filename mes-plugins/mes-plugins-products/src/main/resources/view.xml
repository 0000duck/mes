	<view name="substituteComponent" model="substituteComponent">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.substituteComponent}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.substituteComponent}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png" action="#{window.substituteComponent}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.substituteComponent}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="substituteComponent">
				<component type="lookup" name="product" field="product">
					<option type="column" name="name" fields="name" link="true"
