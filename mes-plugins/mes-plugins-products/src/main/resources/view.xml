<?xml version="1.0" encoding="UTF-8"?>
<qcd:views plugin="products" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="productGridView" model="product">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="addIcon32.png" action="#{mainWindow.productsGrid}.performNew;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{mainWindow.productsGrid}.performDelete;" />
				</group>
			</ribbon>
			<component type="grid" name="productsGrid">
				<option type="column" name="number" fields="number" link="true"
					width="200" />
				<option type="column" name="name" fields="name" link="true"
					width="300" />
				<option type="column" name="typeOfMaterial" fields="typeOfMaterial"
					width="100" />
				<option type="column" name="ean" fields="ean" width="100" />
				<option type="header" value="false" />
				<option type="correspondingView" value="products/productDetailsView" />
				<option type="paginable" value="true" />
				<option type="searchable" value="name,number,typeOfMaterial,ean" />
				<option type="orderable" value="name,number,ean" />
				<option type="multiselect" value="true" />
				<option type="fullScreen" value="true" />
			</component>
			<option type="backButton" value="false" />
		</component>
	</view>
	<view name="productDetailsView" model="product">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon32.png" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon32.png"
						action="#{mainWindow.productDetailsForm}.performSave;" />
					<bigButtons name="saveBack" icon="saveBackIcon32.png"
						action="#{mainWindow.productDetailsForm}.performSave; #{mainWindow}.performBack">
						<bigButton name="saveNew" icon="saveNewIcon16.png"
							action="#{mainWindow.productDetailsForm}.performSave; #{mainWindow}.performNew;" />
					</bigButtons>
					<smallButton name="cancel" icon="cancelIcon16.png"
						action="#{mainWindow.productDetailsForm}.performCancel;" />
					<smallButtons name="delete" icon="deleteIcon16.png"
						action="#{mainWindow.productDetailsForm}.performDelete; #{mainWindow}.performBack">
						<smallButton name="deleteNew" icon="deleteIcon16.png"
							action="#{mainWindow.productDetailsForm}.performDelete; #{mainWindow}.performNew;" />
					</smallButtons>
				</group>
			</ribbon>
			<component type="form" name="productDetailsForm">
				<component type="input" name="name" field="name" hasDescription="true" />
				<component type="input" name="number" field="number" />
				<component type="select" name="typeOfMaterial" field="typeOfMaterial" />
				<component type="input" name="ean" field="ean" />
				<component type="select" name="category" field="category" />
				<component type="input" name="unit" field="unit" />
				<option type="expression" value="#name + ' (' + #id + ')'" />
				<option type="header" value="false" />
				<option type="height" value="300" />
				<option type="fullScreen" value="true" />
			</component>
			<component type="grid" name="substitutesGrid" source="substitutes">
				<option type="column" name="number" fields="number" link="true" />
				<option type="column" name="name" fields="name" link="true" />
				<option type="column" name="priority" fields="priority" />
				<option type="correspondingView" value="products/substituteDetailsView" />
				<option type="paginable" value="false" />
				<option type="multiselect" value="false" />
				<option type="height" value="200" />
				<option type="width" value="300" />
				<option type="creatable" value="true" />
				<option type="deletable" value="true" />
			</component>
			<component type="grid" name="substitutesComponentGrid"
				source="#{mainWindow.substitutesGrid}.components">
				<option type="column" name="number" fields="product"
					expression="#product['number']" />
				<option type="column" name="name" fields="product"
					expression="#product['name']" link="true" />
				<option type="column" name="quantity" fields="quantity" />
				<option type="correspondingView" value="products/substituteComponentDetailsView" />
				<option type="paginable" value="false" />
				<option type="multiselect" value="false" />
				<option type="height" value="150" />
				<option type="creatable" value="true" />
				<option type="deletable" value="true" />
			</component>
		</component>
	</view>
	<view name="substituteDetailsView" model="substitute">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save"
						action="#{mainWindow.substitutesDetailsForm}.performSave;" />
					<bigButtons name="saveBack"
						action="#{mainWindow.substitutesDetailsForm}.performSave; #{mainWindow}.performBack">
						<bigButton name="saveNew"
							action="#{mainWindow.substitutesDetailsForm}.performSave; #{mainWindow}.performNew;" />
					</bigButtons>
					<smallButton name="cancel" action="#{mainWindow}.performCancel;" />
					<smallButtons name="delete" icon="icon2"
						action="#{mainWindow.substitutesDetailsForm}.performDelete; #{mainWindow}.performBack">
						<smallButton name="deleteNew"
							action="#{mainWindow.substitutesDetailsForm}.performDelete; #{mainWindow}.performNew;" />
					</smallButtons>
				</group>
			</ribbon>
			<component type="form" name="substitutesDetailsForm">
				<component type="input" name="number" field="number" />
				<component type="input" name="name" field="name" />
				<component type="input" name="priority" field="priority"
					enabled="false" />
				<component type="input" name="effectiveDateFrom" field="effectiveDateFrom" />
				<component type="input" name="effectiveDateTo" field="effectiveDateTo" />
				<option type="header" value="false" />
			</component>
		</component>
	</view>
	<view name="substituteComponentDetailsView" model="substituteComponent">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save"
						action="#{mainWindow.substitutesComponentDetailsForm}.performSave; #{mainWindow}.performBack;" />
					<bigButtons name="saveBack"
						action="#{mainWindow.substitutesComponentDetailsForm}.performSave; #{mainWindow}.performBack">
						<bigButton name="saveNew"
							action="#{mainWindow.substitutesComponentDetailsForm}.performSave; #{mainWindow}.performNew;" />
					</bigButtons>
					<smallButton name="cancel" action="#{mainWindow}.performCancel;" />
					<smallButtons name="delete" icon="icon2"
						action="#{mainWindow.substitutesComponentDetailsForm}.performDelete; #{mainWindow}.performBack">
						<smallButton name="deleteNew"
							action="#{mainWindow.substitutesComponentDetailsForm}.performDelete; #{mainWindow}.performNew;" />
					</smallButtons>
				</group>
			</ribbon>
			<component type="form" name="substitutesComponentDetailsForm">
				<component type="lookup" name="product" field="product" />
				<component type="input" name="quantity" field="quantity" />
				<option type="header" value="false" />
			</component>
		</component>
	</view>
	<view name="instructionGridView" model="instruction">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="actions">
					<bigButton name="new"
						action="#{mainWindow.instructionsGrid}.performNew;" />
					<smallButton name="delete"
						action="#{mainWindow.instructionsGrid}.performDelete;" />
				</group>
			</ribbon>
			<component type="grid" name="instructionsGrid">
				<option type="column" name="number" fields="number" link="true" />
				<option type="column" name="name" fields="name" link="true" />
				<option type="column" name="product" fields="product"
					expression="#product['name']" />
				<option type="header" value="false" />
				<option type="correspondingView" value="products/instructionDetailsView" />
				<option type="paginable" value="true" />
				<option type="searchable" value="name,number,product" />
				<option type="orderable" value="name,number" />
				<option type="multiselect" value="true" />
				<option type="fullScreen" value="true" />
			</component>
			<option type="backButton" value="false" />
		</component>
	</view>
	<view name="instructionDetailsView" model="instruction">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save"
						action="#{mainWindow.instructionDetailsForm}.performSave;" />
					<bigButtons name="saveBack"
						action="#{mainWindow.instructionDetailsForm}.performSave;">
						<bigButton name="saveNew"
							action="#{mainWindow.instructionDetailsForm}.performSave; #{mainWindow}.performNew;" />
					</bigButtons>
					<smallButton name="cancel" action="#{mainWindow}.performCancel;" />
				</group>
			</ribbon>
			<component type="form" name="instructionDetailsForm">
				<component type="checkbox" name="master" field="master" />
				<component type="input" name="number" field="number" />
				<component type="input" name="name" field="name" />
				<component type="lookup" name="product" field="product" />
				<component type="select" name="typeOfMaterial" field="typeOfMaterial" />
				<component type="input" name="dateFrom" field="dateFrom" />
				<component type="input" name="dateTo" field="dateTo" />
				<component type="input" name="description" field="description" />
				<option type="header" value="false" />
				<option type="expression" value="#name" />
			</component>
			<component type="tree" name="bomTree" source="bomComponents">
				<option type="height" value="200" />
				<option type="width" value="500" />
				<option type="expression" value="'&lt;span class=&quot;grey&quot;&gt;' + #quantity + ' x &lt;/span&gt;' + #product['name']" />
				<option type="correspondingView" value="products/instructionComponentDetailsView" />
			</component>
		</component>
	</view>
	<view name="instructionComponentDetailsView" model="instructionBomComponent">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" action="#{mainWindow.detailsForm}.performSave; #{mainWindow}.performBack;"/>
					<bigButtons name="saveBack" action="#{mainWindow.detailsForm}.performSave; #{mainWindow}.performBack">
						<bigButton name="saveNew" action="#{mainWindow.detailsForm}.performSave; #{mainWindow}.performNew;" />
					</bigButtons>
					<smallButton name="cancel" action="#{mainWindow}.performCancel;" />
					<smallButtons name="delete" icon="icon2" action="#{mainWindow.detailsForm}.performDelete; #{mainWindow}.performBack">
						<smallButton name="deleteNew" action="#{mainWindow.detailsForm}.performDelete; #{mainWindow}.performNew;" />
					</smallButtons>
				</group>
			</ribbon>
			<component type="form" name="detailsForm">
				<component type="lookup" name="product" field="product" />
				<component type="input" name="quantity" field="quantity" />
				<option type="header" value="false" />
			</component>
		</component>
	</view>
	<view name="orderGridView" model="order">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="actions">
					<bigButton name="new"
						action="#{mainWindow.ordersGrid}.performNew;" />
					<smallButton name="delete"
						action="#{mainWindow.ordersGrid}.performDelete;" />
				</group>
			</ribbon>		
			<component type="grid" name="ordersGrid">
				<option type="column" name="number" fields="number" />
				<option type="column" name="name" fields="name" />
				<option type="column" name="state" fields="state" />
				<option type="header" value="false" />
				<option type="correspondingView" value="products/orderDetailsView" />
				<option type="paginable" value="true" />
				<option type="searchable" value="name,number,state" />
				<option type="orderable" value="name,number" />
				<option type="multiselect" value="true" />
				<option type="fullScreen" value="true" />
			</component>
			<option type="backButton" value="false" />
		</component>
	</view>
	<view name="orderDetailsView" model="order">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save"
						action="#{mainWindow.orderDetailsForm}.performSave;" />
					<bigButtons name="saveBack"
						action="#{mainWindow.orderDetailsForm}.performSave;">
						<bigButton name="saveNew"
							action="#{mainWindow.orderDetailsForm}.performSave; #{mainWindow}.performNew;" />
					</bigButtons>
					<smallButton name="cancel" action="#{mainWindow}.performCancel;" />
				</group>
			</ribbon>		
			<component type="form" name="orderDetailsForm">
				<component type="input" name="number" field="number" />
				<component type="input" name="name" field="name" />
				<component type="input" name="dateFrom" field="dateFrom" />
				<component type="input" name="dateTo" field="dateTo" />
				<component type="select" name="state" field="state" />
				<component type="select" name="machine" field="machine" />
				<component type="lookup" name="product" field="product" />
				<component type="input" name="defaultInstruction" field="defaultInstruction"
					enabled="false" />
				<component type="lookup" name="instruction" field="instruction"
					source="#{mainWindow.orderDetailsForm.product}.instructions" />
				<component type="input" name="plannedQuantity" field="plannedQuantity" />
				<component type="input" name="doneQuantity" field="doneQuantity" />
				<component type="input" name="effectiveDateFrom" field="effectiveDateFrom"
					enabled="false" />
				<component type="input" name="effectiveDateTo" field="effectiveDateTo"
					enabled="false" />
				<component type="input" name="startWorker" field="startWorker"
					enabled="false" />
				<component type="input" name="endWorker" field="endWorker"
					enabled="false" />
				<option type="header" value="false" />
			</component>
		</component>
		<onView bean="com.qcadoo.mes.products.ProductService" method="afterOrderDetailsLoad" />
	</view>
</qcd:views>