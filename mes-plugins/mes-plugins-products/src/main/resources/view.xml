	<view name="instructionDetailsView" model="instruction">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{mainWindow.instructionDetailsForm}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{mainWindow.instructionDetailsForm}.performSave;#{mainWindow}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png" action="#{mainWindow.instructionDetailsForm}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{mainWindow.instructionDetailsForm}.performDelete; #{mainWindow}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="instructionDetailsForm">
				<component type="checkbox" name="master" field="master" />
				<component type="input" name="number" field="number" />
				<component type="textarea" name="name" field="name" />
				<component type="lookup" name="product" field="product">
					<option type="column" name="name" fields="name" link="true"
						width="300" />
					<option type="column" name="category" fields="category"
						width="100" />
					<option type="paginable" value="true" />
					<option type="searchable" value="name,category" />
					<option type="orderable" value="name,category" />
					<option type="fullScreen" value="true" />
					<option type="expression" value="#name + ' - ' + #number" />
					<option type="fieldCode" value="number" />
				</component>
				<component type="calendar" name="dateFrom" field="dateFrom" />
				<component type="calendar" name="dateTo" field="dateTo" />
				<component type="textarea" name="description" field="description">
					<option type="rows" value="5" />
				</component>
				<option type="expression" value="#name" />
				<option type="header" value="false" />
			</component>
			<component type="tree" name="bomTree" source="#{mainWindow.instructionDetailsForm}.bomComponents">
				<option type="height" value="200" />
				<option type="width" value="500" />
				<option type="expression" value="'&lt;span class=&quot;grey&quot;&gt;' + #quantity + ' x &lt;/span&gt;' + #product['name']" />
				<option type="rootExpression" value="#number" />
				<option type="correspondingView" value="products/instructionComponentDetailsView" />
			</component>
		</component>
	</view>
