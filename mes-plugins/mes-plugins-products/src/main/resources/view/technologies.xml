								</component>
							</tabElement>
							<tabElement name="qualityControl">
								<component type="gridLayout" name="qualityControlGridsLayout" columns="1" rows="4">
									<layoutElement column="1" row="1">
										<component type="select" name="qualityControlType" reference="qualityControlType" field="qualityControlType" >
											<listener event="onSelectedEntityChange" bean="com.qcadoo.mes.products.TechnologyService" method="checkQualityControlType"/>									
