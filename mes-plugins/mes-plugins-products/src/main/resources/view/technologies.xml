	<view name="technologyOperationComponent" model="technologyOperationComponent">
		<component type="window" name="window">
			<ribbon>
				<group template="navigation"/>
				<group template="formSaveAndBackAndRemoveActions"/>
			</ribbon>
			<component type="form" name="form" reference="form">
				<component type="gridLayout" name="gridLayout" columns="1" rows="2">
					<layoutElement column="1" row="1">
						<component type="lookup" name="operation" field="operation" reference="operation">
							<option type="column" name="name" fields="name"
								width="300" />
							<option type="searchable" value="name" />
							<option type="orderable" value="name" />
							<option type="expression" value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name"/>
							<option type="fieldCode" value="number" />
						</component>
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="checkbox" name="qualityControlRequired" reference="qualityControlRequired" field="qualityControlRequired" />
					</layoutElement>
				</component>
				<option type="header" value="true"/>
				<option type="expression" value="#operation['name']" />
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.products.TechnologyService" method="setTechnologyReferenceOperationComponentViewRequiredFields" />
	</view>
	<view name="technologyReferenceTechnologyComponent" model="technologyOperationComponent">
		<component type="window" name="window">
			<ribbon>
				<group template="navigation"/>
				<group template="formSaveAndBackAndRemoveActions"/>
			</ribbon>
			<component type="form" name="form" reference="form">
				<component type="gridLayout" name="gridLayout" columns="1" rows="2">
					<layoutElement column="1" row="1">
						<component type="lookup" name="technology" reference="technology" field="referenceTechnology">
							<option type="column" name="name" fields="name" link="true"
								width="300" />
							<option type="searchable" value="name,number" />
							<option type="orderable" value="name,number" />
							<option type="expression" value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name"/>
							<option type="fieldCode" value="number" />
						</component>
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="select" name="referenceMode" field="referenceMode" reference="referenceMode"/>
					</layoutElement>
				</component>
				<option type="header" value="true"/>
				<option type="expression" value="#technology['name']" />
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.products.TechnologyService" method="setTechnologyReferenceTechnologyComponentViewRequiredFields" />
	</view>
	<view name="operationProductInComponent" model="operationProductInComponent">
		<component type="window" name="window">
			<ribbon>
				<group template="navigation"/>
				<group template="formSaveAndRemoveActions"/>
			</ribbon>
			<component type="form" name="form" reference="form">
				<component type="gridLayout" name="gridLayout" columns="1" rows="3">
					<layoutElement column="1" row="1">
						<component type="lookup" name="product" field="product">
							<option type="column" name="name" fields="name" link="true"
								width="300" />
							<option type="column" name="category" fields="category" />
							<option type="searchable" value="name,category" />
							<option type="orderable" value="name,category" />
							<option type="expression" value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name"/>
							<option type="fieldCode" value="number" />
							<listener event="onSelectedEntityChange" bean="com.qcadoo.mes.products.TechnologyService" method="checkBatchNrReq"/>
						</component>
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="input" name="quantity" field="quantity" />
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="checkbox" name="batchRequired" reference="batchRequired" field="batchRequired" >
							<option type="labelWidth" value="35" />
						</component>
					</layoutElement>
				</component>
				<option type="header" value="true"/>
				<option type="expression" value="#product['name'] + ' x ' + #quantity" />
			</component>
		</component>
	</view>
