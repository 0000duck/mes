<view defaultAuthorizationRole="ROLE_MAINTENANCE" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
      name="sourceCostReports" modelName="timeUsageReportFilter" modelPlugin="cmmsMachineParts">

    <component type="window" name="window" reference="window">
        <ribbon>
            <group name="actions">
            	<bigButton name="save" icon="saveIcon24.png" state="enabled" action="#{form}.performSave;" accesskey="s" />
            </group>
            <group name="report">
                <bigButton name="workerCosts" icon="xlsIcon24.png" state="enabled"
	                action="#{window}.fireEvent(workerCosts);">

                </bigButton>
                <bigButton name="timeReport" icon="xlsIcon24.png" state="enabled"
	                action="#{window}.fireEvent(timeReport);">

                </bigButton>
                <bigButton name="partsCosts" icon="xlsIcon24.png" state="enabled"
	                action="#{window}.fireEvent(partsCosts);">

                </bigButton>
            </group>
        </ribbon>
        <component type="form" name="form" reference="form">
			<component type="gridLayout" name="gridLayout" columns="3" rows="2" hasBorders="false">
				<layoutElement column="1" row="1">
                    <component type="calendar" name="fromDate" reference="fromDate" field="fromDate"/>
                </layoutElement>
                <layoutElement column="1" row="2">
                    <component type="calendar" name="toDate" reference="toDate" field="toDate"/>
                
                </layoutElement>
			</component>
			<option type="header" value="true" />
            <option type="expression" value=""/>
        </component>
<!--        <listener event="printXlsReport" method="printXlsReport"
                  class="com.qcadoo.mes.cmmsMachineParts.listeners.TimeUsageReportListeners"/> -->
    </component>

    <hooks>
    	<!-- <beforeRender
                class="com.qcadoo.mes.cmmsMachineParts.hooks.TimeUsageReportHooks"
                method="onBeforeRender"/>-->
    </hooks>
</view>
