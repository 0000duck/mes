<?xml version="1.0" encoding="UTF-8"?>

<model name="inventoryReport" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="name" required="true">
			<validatesLength max="255" />
		</string>
		<date name="inventoryForDate" required="true"/>
		<datetime name="date" />
		<belongsTo name="staff" model="staff" plugin="basic" required="true"/>
		<boolean name="generated" />
		<string name= "fileName" />
		<belongsTo name="warehouse" model="warehouse" plugin="inventory" required="true"/>
	</fields>
	<hooks>
		<onCopy class="com.qcadoo.mes.inventory.InventoryService"
			method="clearGeneratedOnCopy" />
	</hooks>
</model>