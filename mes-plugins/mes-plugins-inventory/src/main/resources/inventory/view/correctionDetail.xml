<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="correctionDetail" modelName="correction">
	<component type="window" name="window">
		<ribbon>
			<group template="navigation" />
			<group template="formSaveCopyAndRemoveActions" />
		</ribbon>
		
		<component type="form" name="form" reference="form">
			<component type="gridLayout" name="grid" reference="grid"
				columns="3" rows="7">
				<layoutElement column="1" row="1">
					<component type="input" name="number" field="number" />
				</layoutElement>
				<layoutElement column="1" row="2">
					<component type="calendar" name="correctionDate" field="correctionDate"  reference="correctionDate">
					<listener event="onChange" class="com.qcadoo.mes.inventory.InventoryService"
								method="refreshShouldBe" />						
					</component>
				</layoutElement>
				<layoutElement column="1" row="3">
					<component type="lookup" name="warehouse" field="warehouse"  reference ="warehouse">
						<option type="searchable" value="name" />
						<option type="orderable" value=" name" />
						<option type="fullScreen" value="true" />
						<option type="expression" value="#name" />
						<option type="fieldCode" value="name" />
						<listener event="onSelectedEntityChange" class="com.qcadoo.mes.inventory.InventoryService"
								method="refreshShouldBe" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="4">
					<component type="lookup" name="product" field="product" reference="product" >
						<option type="searchable" value="name" />
						<option type="orderable" value=" name" />
						<option type="fullScreen" value="true" />
						<option type="expression" value="#name" />
						<option type="fieldCode" value="name" />
							<listener event="onSelectedEntityChange" class="com.qcadoo.mes.inventory.InventoryService"
								method="refreshShouldBe" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="5">
					<component type="input" name="shouldBe" field="shouldBe" hasDescription="true" reference ="shouldBe"/>
				</layoutElement>
				<layoutElement column="1" row="6">
					<component type="input" name="found" field="found" />
				</layoutElement>
				<layoutElement column="1" row="7">
					<component type="lookup" name="staff" field="staff">
						<option type="searchable" value="name" />
						<option type="orderable" value=" name" />
						<option type="fullScreen" value="true" />
						<option type="expression" value="#name" />
						<option type="fieldCode" value="name" />
					</component>
				</layoutElement>
			</component>
			<option type="header" value="true" />
		</component>
	</component>
	<hooks>
		<beforeRender class="com.qcadoo.mes.inventory.InventoryService" method="refreshShouldBe" /> 
	</hooks>
</view>