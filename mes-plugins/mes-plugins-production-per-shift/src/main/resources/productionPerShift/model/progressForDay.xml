<?xml version="1.0" encoding="UTF-8"?>
<model name="progressForDay" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<belongsTo name="technologyInstanceOperationComponent" model="technologyInstanceOperationComponent" plugin="technologies" />
		<integer name="day" />
		<hasMany name="dailyProgress" joinField="progressForDay" model="dailyProgress" cascade="delete" copyable="true"/> 
		<boolean name="corrected" default="false" />
		<date name="dateOfDay"/>
	</fields>
	<hooks >
	    <onSave class="com.qcadoo.mes.productionPerShift.hooks.ProgressForDayHooks" method="saveDateOfDay"/>
	    </hooks>
</model>