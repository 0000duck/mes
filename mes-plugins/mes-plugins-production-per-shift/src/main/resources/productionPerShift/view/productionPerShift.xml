<view name="productionPerShift" modelName="order" modelPlugin="orders"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">
	<component type="window" name="window" reference="window">
		<ribbon>
			<group name="navigation">
				<bigButton name="back" action="#{window}.performBack;"
					icon="backIcon24.png" />
			</group>
			<group name="action">
				<bigButton name="save" icon="saveIcon24.png" state="enabled"
					action="#{form}.performSave;" />
			</group>
		</ribbon>
		<component type="form" name="form" reference="form">
			<component type="borderLayout" name="plannedProgress">
				<component type="gridLayout" name="plannedProgressGridLayout"
					columns="1" rows="3">
					<layoutElement column="1" row="1">
						<component type="select" name="plannedProgressType"
							field="#{form}.plannedProgressType" reference="plannedProgressType">
						</component>
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="textarea" name="commentReasonTypeCorrectionDateFrom"
							field="#{form}.commentReasonTypeCorrectionDateFrom" reference="commentReasonTypeCorrectionDateFrom"
							defaultEnabled="false">
						</component>
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="calendar" name="orderStartDate"
							field="#{form}.correctedDateFrom" reference="orderStartDate"
							defaultEnabled="false">
							<option type="withTimePicker" value="true" />
						</component>
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="checkbox" name="wasItCorrected"
							reference="wasItCorrected" defaultEnabled="false">
						</component>
					</layoutElement>
				</component>
				<option type="label" value="plannedProgressLabel" />
			</component>
		</component>
	</component>
</view>