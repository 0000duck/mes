<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="usedproducts" version="0.4.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
    xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
    xmlns:menu="http://schema.qcadoo.org/modules/menu"
    xmlns:localization="http://schema.qcadoo.org/modules/localization"
    xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd">

	<information>
		<name>MES - Used products</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>www.qcadoo.com</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>orders</plugin>
			<version>[0.4.1</version>
		</dependency>
		<dependency>
			<plugin>materialRequirements</plugin>
			<version>[0.4.1</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />
		
		<model:model model="usedproducts" resource="model/usedproducts.xml" />
		
		<model:model-field plugin="orders" model="order">
			<model:hasMany name="usedproductsV" plugin="usedproducts"
				model="usedproducts" joinField="order" cascade="delete" />
		</model:model-field>		

		<view:view-ribbon-group resource="view/ribbonExtension/ribbonExtension.xml" />

		<view:view-listener plugin="orders" view="orderDetails" component="form" event="showUsedProducts"
			class="com.qcadoo.mes.usedProducts.UsedProductsService" method="showUsedProducts" />
		
		<view:view-hook plugin="usedproducts" view="usedproductsDetails" type="beforeRender" class="com.qcadoo.mes.usedProducts.UsedProductsService" method="disablePlannedQuantity" />
		
		<view:view resource="view/usedproducts.xml" />
		<view:view resource="view/usedproductsDetails.xml" />
		
		<view:resource uri="public/**/*" />

	</modules>

</plugin>