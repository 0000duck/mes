<?xml version="1.0" encoding="UTF-8"?>
<model name="lcs" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="name" required="true" unique="true">
			<validatesLength max="255" />
		</string>
		<integer name="numberOfTranslations" persistent="false" readonly="true"/>
		<integer name="numberOfWorkstands" persistent="false" readonly="true"/>
		<hasMany name="translations" model="lcsTranslation"
			joinField="lcs" cascade="delete" copyable="true" />
		<hasMany name="workstands" model="workstand"
			joinField="lcs" cascade="delete" copyable="true" />
	</fields>
	<hooks>
		<onView class="com.qcadoo.mes.lcs.LcsModelService" method="updateLcsNumbers"/>
	</hooks>
	<identifier expression="#name" />
</model>