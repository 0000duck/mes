<?xml version="1.0" encoding="UTF-8"?>
<model name="simpleMaterialBalance" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="name" required="true">
			<validatesLength max="255" />
		</string>
		<datetime name="date" />
		<string name="worker" />
		<boolean name="onlyComponents" default="1"/>
		<boolean name="generated" />
		<string name="fileName" />
		<hasMany name="orders" model="simpleMaterialBalanceOrdersComponent"
			joinField="simpleMaterialBalance" cascade="delete" copyable="true" />
		<hasMany name="stockAreas" model="simpleMaterialBalanceStockAreasComponent"
			joinField="simpleMaterialBalance" cascade="delete" copyable="true" />
	</fields>
	<hooks>
		<onCopy class="com.qcadoo.mes.simpleMaterialBalance.internal.SimpleMaterialBalanceService"
			method="clearGeneratedOnCopy" />
	</hooks>
	<identifier expression="#name" />
</model>