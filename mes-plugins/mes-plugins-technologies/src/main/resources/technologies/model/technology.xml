<model name="technology" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" activable="true"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" required="true" unique="true">
			<validatesLength max="255" />
		</string>
		<string name="name" required="true" >
			<validatesLength max="2048" />
		</string>
		
		<belongsTo name="product" plugin="basic" model="product" lazy="false"
			required="true" />
		<boolean name="master" default="true" />
		<string name="description" >
			<validatesLength max="2048" />
		</string>
		<tree name="operationComponents" model="technologyOperationComponent"
			joinField="technology" cascade="delete" copyable="true" />
		<enum name="componentQuantityAlgorithm" values="01perProductOut,02perTechnology"
			default="01perProductOut" required="true" />
	</fields>
	<hooks>
		<validatesWith class="com.qcadoo.mes.technologies.TechnologyService"
			method="checkTechnologyDefault" />
		<validatesWith class="com.qcadoo.mes.basic.ProductService"
			method="checkIfProductIsNotRemoved" />
		<validatesWith class="com.qcadoo.mes.technologies.TechnologyService"
			method="checkIfUnitSampligNrIsReq" />
		<onCopy class="com.qcadoo.mes.technologies.TechnologyService"
			method="clearMasterOnCopy" />
		<onSave class="com.qcadoo.mes.technologies.TechnologyService"
			method="setFirstTechnologyAsDefault" />
	</hooks>
	<identifier expression="#number + ' - ' + #name" />
</model>