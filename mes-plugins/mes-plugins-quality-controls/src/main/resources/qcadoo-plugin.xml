<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="qualityControls" version="0.4.0" xmlns="http://www.qcadoo.org/plugin" xmlns:model="http://www.qcadoo.org/modules/model" xmlns:view="http://www.qcadoo.org/modules/view">

	<information>
		<name>MES - Quality Controls</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>
	
	<dependencies>
		<dependency>
			<plugin>basic</plugin>
			<version>[0.4.0</version>
		</dependency>
		<dependency>
			<plugin>products</plugin>
			<version>[0.4.0</version>
		</dependency>
		<dependency>
			<plugin>genealogies</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>
	
	<modules>
		<model:model model="qualityControl" resource="model/qualityControl.xml"/>
		<model:field plugin="products" model="technology">
			<enum name="qualityControlType" values="01forBatch,02forUnit,03forOrder,04forOperation" />
		</model:field>
		<model:field plugin="products" model="technology">
			<decimal name="unitSamplingNr" />
		</model:field>
		<model:field plugin="products" model="technology">
			<string name="qualityControlInstruction">
				<validatesLength max="255" />
			</string>
		</model:field>
		<model:field plugin="products" model="technologyOperationComponent">
			<boolean name="qualityControlRequired" />
		</model:field>
		<model:field plugin="basic" model="parameter">
			<boolean name="checkDoneOrderForQuality" required="true" />
		</model:field>
		<model:field plugin="basic" model="parameter">
			<boolean name="autoGenerateQualityControl" required="true" />
		</model:field>
		<model:hook plugin="products" model="technologyOperationComponent">
			<onSave class="com.qcadoo.mes.qualityControls.QualityControlService" method="setQualityControlTypeForTechnology" />
		</model:hook>
		<model:hook plugin="genealogies" model="genealogy">
			<onSave class="com.qcadoo.mes.qualityControls.QualityControlService" method="generateOnSaveQualityControl" />
		</model:hook>
		
		<view:menu-category name="quality" />
		
		<view:menu-item name="qualityControlReport" category="reports" view="qualityControlReport" />
		<view:menu-item name="forOrder" category="quality" view="qualityControlsForOrder" />
		<view:menu-item name="forUnits" category="quality" view="qualityControlsForUnit" />
		<view:menu-item name="forBatch" category="quality" view="qualityControlsForBatch" />
		<view:menu-item name="forOperation" category="quality" view="qualityControlsForOperation" />
		
		<view:view>
			<resource>qualityControls/view/qualityControls.xml</resource>
			<resource>qualityControls/view/qualityControlsTest.xml</resource>
		</view:view>

		<view:viewRibbonExtension>
			<resource>qualityControls/view/viewExtension.xml</resource>
		</view:viewRibbonExtension>
		
		<view:viewWindowTabExtension>
			<resource>qualityControls/view/viewExtension.xml</resource>
		</view:viewWindowTabExtension>
		
		<view:viewHookExtension plugin="products" view="technology" hookType="preRenderHook" 
				bean="com.qcadoo.mes.qualityControls.QualityControlService" method="changeQualityControlType" />
				
		<view:viewListenerExtension plugin="products" view="orders" component="grid" event="activateOrder" 
				bean="com.qcadoo.mes.qualityControls.QualityControlService" method="autoGenerateQualityControl" />
		<view:viewListenerExtension plugin="products" view="orders" component="grid" event="generateQualityControl" 
				bean="com.qcadoo.mes.qualityControls.QualityControlService" method="generateQualityControl" />
				
		<view:viewListenerExtension plugin="products" view="order" component="form" event="activateOrder" 
				bean="com.qcadoo.mes.qualityControls.QualityControlService" method="autoGenerateQualityControl" />
		<view:viewListenerExtension plugin="products" view="order" component="form" event="generateQualityControl" 
				bean="com.qcadoo.mes.qualityControls.QualityControlService" method="generateQualityControl" />
		
		<!-- TODO remove after implementing import data -->
		<databasePreparation></databasePreparation>
		
		<!-- TODO mina test remove -->
		<resource uri="test/**/*" />
	</modules>

</plugin>