<qcd:models plugin="qualityControls" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="qualityControl">
		<belongsTo name="order" model="order" plugin="products" lookupField="name" >
			<validatesPresence/>
		</belongsTo>
		<belongsTo name="operation" model="operation" plugin="products" lookupField="name" />
		<string name="number">
			<validatesUniqueness/>
			<validatesPresence/>
		</string>		
		<enum name="controlResult" values="01correct,02incorrect,03objection"/>
		<string name="batchNr" />
		<string name="comment" />
		<string name="controlInstruction" />
		<decimal name="controlledQuantity" />
		<decimal name="takenForControlQuantity" />
		<decimal name="rejectedQuantity" />
		<decimal name="acceptedDefectsQuantity" />		
		<string name="staff" />
		<date name="date" />
		<boolean name="closed"/>
		<enum name="qualityControlType" values="qualityControlsForOrder,qualityControlsForUnit,qualityControlsForBatch,qualityControlsForOperation"/>
		<validatesWith bean="com.qcadoo.mes.qualityControls.QualityControlService" method="checkIfCommentForResultOrQuantityIsReq" />
		<validatesWith bean="com.qcadoo.mes.qualityControls.QualityControlService" method="checkIfOperationIsRequired" />
		<validatesWith bean="com.qcadoo.mes.qualityControls.QualityControlService" method="checkIfQuantitiesAreCorrect" />
		<date name="dateFrom" persistent="false"/>
		<date name="dateTo" persistent="false"/>
		<onCopy bean="com.qcadoo.mes.qualityControls.QualityControlService" method="clearQualityControlOnCopy" />
	</model>
</qcd:models>