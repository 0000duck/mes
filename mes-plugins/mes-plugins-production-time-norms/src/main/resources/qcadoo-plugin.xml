<plugin plugin="productionTimeNorms" version="${qcadoo.plugin.version}"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/report
       http://schema.qcadoo.org/modules/report.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Production time norms</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>productionScheduling</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>


	<modules>
		<localization:translation path="locales" />

		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="tpz" required="true" default="0"/>
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="tj" required="true" default="0"/>
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:decimal name="productionInOneCycle" required="true"
				default="1" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:enum values="01all,02specified" name="countRealized"
				default="01all" required="true" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:decimal name="countMachine" default="0" required="true"/>
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="timeNextOperation" required="true" default="0"/>
		</model:model-field>
		<model:model-field plugin="technologies" model="technologyOperationComponent">
			<model:decimal name="machineUtilization" required="true" default="1.0">
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies" model="technologyOperationComponent">
			<model:decimal name="laborUtilization" required="true" default="1.0">
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="tpz" required="true" default="0"/>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="tj" required="true" default="0"/>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:decimal name="productionInOneCycle" required="true"
				default="1" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:decimal name="countMachineOperation" default="0" required="true">
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:decimal name="machineUtilization" required="true" default="1.0">
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:decimal name="laborUtilization" required="true" default="1.0">
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:enum values="01all,02specified" name="countRealizedOperation"
				default="01all" required="true" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="timeNextOperation" required="true" default="0"/>
		</model:model-field>

		<view:view-tab resource="view/tabExtensions/technologyOperationComponentDetails.xml" />
		<view:view-tab resource="view/tabExtensions/operationDetails.xml" />

		<view:view-ribbon-group
			resource="view/ribbonExtensions/technologyOperationComponentDetails.xml" />
		<view:view-ribbon-group
			resource="view/ribbonExtensions/orderOperationComponentDetails.xml" />

		<view:view-hook view="operationDetails" type="beforeRender"
			plugin="technologies" class="com.qcadoo.mes.productionTimeNorms.OperationService"
			method="updateCountMachineOperationFieldStateonWindowLoad" />
			
		<view:view-hook view="operationDetails" type="beforeRender"
			plugin="technologies" class="com.qcadoo.mes.productionTimeNorms.OperationService"
			method="setCountRealizedOperationValue" />

		<view:view-hook view="technologyOperationComponentDetails"
			type="beforeRender" plugin="technologies"
			class="com.qcadoo.mes.productionTimeNorms.NormService" method="updateCountMachineOperationFieldStateonWindowLoad" />

		<view:view-hook view="technologyOperationComponentDetails"
			type="beforeRender" plugin="technologies"
			class="com.qcadoo.mes.productionTimeNorms.NormService" method="updateFieldsStateOnWindowLoad" />

		<view:view-hook view="technologyOperationComponentDetails"
			type="beforeRender" plugin="technologies"
			class="com.qcadoo.mes.productionTimeNorms.NormService" method="fillUnitFields" />

		<view:view-listener component="operation"
			event="onSelectedEntityChange" plugin="technologies"
			view="technologyOperationComponentDetails" class="com.qcadoo.mes.productionTimeNorms.NormService"
			method="inheritOperationNormValues" />

		<view:view-listener component="form"
			event="copyTimeNormsFromTechnology" plugin="productionScheduling"
			view="orderOperationComponentDetails" class="com.qcadoo.mes.productionTimeNorms.NormService"
			method="copyTimeNormsFromTechnology" />

		<view:view-listener component="form"
			event="copyTimeNormsFromOperation" plugin="technologies"
			view="technologyOperationComponentDetails" class="com.qcadoo.mes.productionTimeNorms.NormService"
			method="copyTimeNormsFromOperation" />

	</modules>

</plugin>