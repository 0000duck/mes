<?xml version="1.0" encoding="UTF-8"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="transformationsDetail" modelName="transformations">
	<component type="window" name="window" reference="window">
		<ribbon>
			<group template="navigation" />
			<group template="formSaveCopyAndRemoveActions" />
		</ribbon>
		<component type="form" name="form" reference="form">
			<script>
				<![CDATA[
					var containsAtLeastOneConsumption = false;
					var containsArLeastOneProduction = false;
					var entityExists = false;
					var time = #{time};
					var staff = #{staff};
					var stockAreasFrom = #{stockAreasFrom};
					var stockAreasTo = #{stockAreasTo};
					
					#{transformationsConsumption}.addOnChangeListener({
						onSetValue: function(value) {
							if (value.content.totalEntities > 0) {
								containsAtLeastOneConsumption = true;
							} else {
								containsAtLeastOneConsumption = false;
							}
							updateFieldsState();
						}
					});
					
					#{transformationsProduction}.addOnChangeListener({
						onSetValue: function(value) {
							if (value.content.totalEntities > 0) {
								containsAtLeastOneProduction = true;
							} else {
								containsAtLeastOneProduction = false;
							}
							updateFieldsState();
						}
					});
					
					
					function updateFieldsState() {
						if (containsAtLeastOneConsumption || containsAtLeastOneProduction) {
							time.setEnabled(false);
							staff.setEnabled(false);
							stockAreasFrom.setEnabled(false);
							stockAreasTo.setEnabled(false);
						} else {
							time.setEnabled(true);
							staff.setEnabled(true);
							stockAreasFrom.setEnabled(true);
							stockAreasTo.setEnabled(true);
						}
					}
				]]>
			</script>
			<component type="gridLayout" name="gridLayout" columns="2"
				rows="9">
				<layoutElement column="1" row="1">
					<component type="input" name="number" reference="number"
						field="number" />
				</layoutElement>
				<layoutElement column="1" row="2" height="2">
					<component type="textarea" name="name" reference="name"
						field="name" />
				</layoutElement>
				<layoutElement column="1" row="4">
					<component type="calendar" name="time" reference="time"
						field="time">
						<option type="withTimePicker" value="true" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="5" width="1" height="5">
					<component type="borderLayout" name="consumption">
						<component type="awesomeDynamicList" name="consumption"
							source="#{form}.transfersConsumption" reference="consumption">
							<option type="hasBorder" value="false" />
							<option type="hasButtons" value="true" />
							<components>
								<component type="gridLayout" name="productLayout"
									columns="4" rows="1">
									<layoutElement column="1" row="1">
										<component type="input" name="number" field="number" />
									</layoutElement>
									<layoutElement column="2" width="2" row="1">
										<component type="lookup" name="product" field="product">
											<option type="searchable" value="name" />
											<option type="orderable" value=" name" />
											<option type="fullScreen" value="true" />
											<option type="expression" value="#name" />
											<option type="fieldCode" value="name" />
										</component>
									</layoutElement>
									<layoutElement column="4" row="1">
										<component type="input" name="quantity" field="quantity">
											<option type="alignment" value="right" />
										</component>
									</layoutElement>
								</component>
							</components>
						</component>
						<option type="label" value="consumption" />
					</component>
				</layoutElement>
				<layoutElement column="2" row="1">
					<component type="lookup" name="staff" field="staff"
						reference="staff">
						<option type="searchable" value="name" />
						<option type="orderable" value=" name" />
						<option type="fullScreen" value="true" />
						<option type="expression" value="#name" />
						<option type="fieldCode" value="name" />
					</component>
				</layoutElement>
				<layoutElement column="2" row="2">
					<component type="lookup" name="stockAreasFrom" field="stockAreasFrom"
						reference="stockAreasFrom">
						<option type="searchable" value="name" />
						<option type="orderable" value=" name" />
						<option type="expression" value="#name" />
						<option type="fieldCode" value="name" />
						<listener event="onSelectedEntityChange"
							class="com.qcadoo.mes.materialFlow.MaterialFlowService" 
							method="fillDefaultStockAreaToFieldInTransformations" />
					</component>
				</layoutElement>
				<layoutElement column="2" row="3">
					<component type="lookup" name="stockAreasTo" field="stockAreasTo"
						reference="stockAreasTo">
						<option type="searchable" value="name" />
						<option type="orderable" value="name" />
						<option type="expression" value="#name" />
						<option type="fieldCode" value="name" />
					</component>
				</layoutElement>
				<layoutElement column="2" row="4">
					<component type="lookup" name="operation" field="operation"
						reference="operation">
						<option type="searchable" value="name,number" />
						<option type="column" fields="name" name="name" link="true" />
						<option type="orderable" value="name,number" />
						<option type="expression" value="#number" />
						<option type="fieldCode" value="number" />
						<listener event="onSelectedEntityChange"
							class="com.qcadoo.mes.materialFlow.listeners.TransformationListeners"
							method="fillProductionAndConsumption" />
					</component>
				</layoutElement>
				<layoutElement column="2" row="5" width="1" height="5">
					<component type="borderLayout" name="production">
						<component type="awesomeDynamicList" name="production"
							source="#{form}.transfersProduction" reference="production">
							<option type="hasBorder" value="false" />
							<option type="hasButtons" value="true" />
							<components>
								<component type="gridLayout" name="productLayout"
									columns="4" rows="1">
									<layoutElement column="1" row="1">
										<component type="input" name="number" field="number" />
									</layoutElement>
									<layoutElement column="2" width="2" row="1">
										<component type="lookup" name="product" field="product">
											<option type="searchable" value="name" />
											<option type="orderable" value=" name" />
											<option type="fullScreen" value="true" />
											<option type="expression" value="#name" />
											<option type="fieldCode" value="name" />
										</component>
									</layoutElement>
									<layoutElement column="4" row="1">
										<component type="input" name="quantity" field="quantity">
											<option type="alignment" value="right" />
										</component>
									</layoutElement>
								</component>
							</components>
						</component>
						<option type="label" value="production" />
					</component>
				</layoutElement>
			</component>
			<option type="header" value="true" />
			<option type="expression" value="#name + ' - ' + #number" />
		</component>
	</component>
	<hooks>
		<beforeRender
			class="com.qcadoo.mes.materialFlow.hooks.TransformationViewHooks"
			method="disableExistingADLelements" />
		<beforeRender 
			class="com.qcadoo.mes.materialFlow.MaterialFlowService"
			method="fillNumberFieldValue" />
	</hooks>
</view>