<plugin plugin="materialRequirements" group="calculations" version="${qcadoo.plugin.version}"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xsi:schemaLocation="
		http://schema.qcadoo.org/plugin 
		http://schema.qcadoo.org/plugin.xsd 
		http://schema.qcadoo.org/modules/model 
		http://schema.qcadoo.org/modules/model.xsd 
		http://schema.qcadoo.org/modules/view 
		http://schema.qcadoo.org/modules/view.xsd 
		http://schema.qcadoo.org/modules/localization 
		http://schema.qcadoo.org/modules/localization.xsd 
		http://schema.qcadoo.org/modules/menu 
		http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Material Requirements</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
		<description>Calculate how many products will have to be consumed in the technology to produce a specified quantity of products.</description>
		<license>AGPL</license>
	</information>

	<dependencies>
		<dependency>
			<plugin>orders</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<model:model model="materialRequirement" resource="model/materialRequirement.xml" />
	
		<model:model-field plugin="basic" model="parameter">
			<model:enum values="01startOrder" name="inputProductsRequiredForType" />
		</model:model-field>
		
		<model:model-field plugin="orders" model="order">
			<model:manyToMany name="materialRequirements"
				joinField="orders" model="materialRequirement" plugin="materialRequirements" />
		</model:model-field>
		<model:model-field plugin="orders" model="order">
			<model:enum values="01startOrder" name="inputProductsRequiredForType" />
		</model:model-field>

		<model:model-hook plugin="basic" model="parameter">
			<model:validatesWith
				class="com.qcadoo.mes.materialRequirements.internal.hooks.ParameterHooksMR"
				method="checkIfInputProductsRequiredForTypeIsSelected" />
		</model:model-hook>
		<model:model-hook plugin="basic" model="parameter">
			<model:onCreate
				class="com.qcadoo.mes.materialRequirements.internal.hooks.ParameterHooksMR"
				method="setInputProductsRequiredForTypeDefaultValue" />
		</model:model-hook>

		<model:model-hook plugin="orders" model="order">
			<model:validatesWith
				class="com.qcadoo.mes.materialRequirements.internal.hooks.OrderHooksMR"
				method="checkIfInputProductsRequiredForTypeIsSelected" />
		</model:model-hook>
		<model:model-hook plugin="orders" model="order">
			<model:onCreate
				class="com.qcadoo.mes.materialRequirements.internal.hooks.OrderHooksMR"
				method="setInputProductsRequiredForTypeDefaultValue" />
		</model:model-hook>
		<model:model-hook plugin="orders" model="order">
			<model:onCopy
				class="com.qcadoo.mes.materialRequirements.internal.hooks.OrderHooksMR"
				method="setInputProductsRequiredForTypeDefaultValueOnCopy" />
		</model:model-hook>

		<menu:menu-category name="requirements" />
		<menu:menu-item name="materialRequirements" category="requirements"
			view="materialRequirementsList" />

		<view:view resource="view/materialRequirementsList.xml" />
		<view:view resource="view/materialRequirementDetails.xml" />

		<view:view-tab resource="view/tabExtensions/ordersParameters.xml" />
		<view:view-tab resource="view/tabExtensions/orderDetails.xml" />

		<view:view-ribbon-group resource="view/ribbonExtensions/ordersPlanningList.xml" />

		<view:view-listener plugin="orders" view="ordersPlanningList"
			component="grid" event="printMaterialReqForOrder"
			class="com.qcadoo.mes.materialRequirements.internal.MaterialRequirementServiceImpl"
			method="printMaterialReqForOrder" />

		<view:view-hook view="orderDetails" type="beforeRender"
			plugin="orders"
			class="com.qcadoo.mes.materialRequirements.internal.hooks.OrderDetailsHooksMR"
			method="setInputProductsRequiredForTypeFromParameters" />

	</modules>
	
	<features>
		<end-user />
	</features>

</plugin>