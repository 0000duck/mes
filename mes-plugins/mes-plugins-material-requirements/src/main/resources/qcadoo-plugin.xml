<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="materialRequirements" version="0.4.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd">

	<information>
		<name>Material Requirements</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>orders</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>


	<modules>
		<localization:translation path="locales" />

		<model:model model="materialRequirement" resource="model/materialRequirement.xml" />
		<model:model model="materialRequirementComponent"
			resource="model/materialRequirementComponent.xml" />

		<model:field plugin="orders" model="order">
			<model:hasMany name="materialRequirements" plugin="materialRequirements"
				model="materialRequirementComponent" joinField="order" cascade="none" />
		</model:field>

		<view:menu-item name="materialRequirements" category="reports"
			view="materialRequirements" />

		<view:view resource="view/materialRequirements.xml" />

		<view:viewRibbonExtension>
			<view:resource>view/ordersExtension.xml</view:resource>
		</view:viewRibbonExtension>

		<view:viewListenerExtension plugin="orders"
			view="orders" component="grid" event="printMaterialReqForOrder"
			bean="com.qcadoo.mes.materialRequirements.MaterialRequirementService"
			method="printMaterialReqForOrder" />

	</modules>

</plugin>