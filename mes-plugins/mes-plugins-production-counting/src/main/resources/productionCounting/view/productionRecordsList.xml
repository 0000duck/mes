<view name="productionRecordsList" modelName="productionRecord"
	menuAccessible="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/view" xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">
	<component type="window" name="window" reference="window">
		<ribbon>
			<template name="standardGridTemplate" />
		</ribbon>
		<component type="grid" name="productionRecordsList"
			reference="grid">
			<script>
			<![CDATA[ 
					var deleteButton = #{window}.getRibbonItem("actions.delete");
					
					var listener = {
						onChange: function(selectedEntitiesArray) {
							var deleteable = true;
							if (!selectedEntitiesArray || selectedEntitiesArray.length == 0) {
								deleteButton.disable();
								console.log(deleteButton);
							}else{
								for (var i in selectedEntitiesArray) {
									console.log(selectedEntitiesArray[i].fields);
									if(selectedEntitiesArray[i].fields.state == "02accepted"){
										deleteable = false;
										break;
									}
								}
								if(deleteable == false){
									console.log("Wylaczam delete");
									deleteButton.disable("#{translate(productionCounting.productionRecordsList.window.mainTab.productionRecordsList.grid.error.delete)}");
								}else{
									console.log("Wlaczam delete");
									deleteButton.enable();
								}
							}
						}
					}
					this.addOnChangeListener(listener);
				]]>
				</script>
			<option type="column" name="number" fields="number" link="true"
				width="150" />
			<option type="column" name="order" fields="order" link="true"
				width="300" expression="#order != null ? #order['name'] : 'N/A'" />
			<option type="column" name="orderOperationComponent" fields="orderOperationComponent"
				link="true" width="300"
				expression="#orderOperationComponent != null ? #orderOperationComponent['nodeNumber'] + ' ' + #orderOperationComponent['operation']['name'] : 'N/A'" />
			<option type="column" name="lastRecord" fields="lastRecord"
				expression="#lastRecord" />
			<option type="column" name="shift" fields="shift" link="true"
				width="300" expression="#shift!=null ? #shift['name'] : 'N/A'" />
			<option type="column" name="creationTime" fields="creationTime"
				link="true" width="300" />
			<option type="column" name="worker" fields="worker" link="true"
				width="300" />
			<option type="column" name="state" fields="state" reference="state" hidden="true"/>
			<option type="order" column="number" direction="asc" />
			<option type="correspondingView" value="productionCounting/productionRecordDetails" />
			<option type="correspondingComponent" value="form" />
			<option type="searchable" value="number,order,orderOperationComponent" />
			<option type="orderable" value="number,order,orderOperationComponent" />
			<option type="fullscreen" value="true" />
			<option type="multiselect" value="true" />
		</component>
		<option type="fixedHeight" value="true" />
		<option type="header" value="false" />
	</component>
</view>