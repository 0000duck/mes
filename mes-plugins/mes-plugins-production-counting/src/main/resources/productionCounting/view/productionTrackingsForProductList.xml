<view defaultAuthorizationRole="ROLE_PRODUCTION_TRACKING" name="productionTrackingsForProductList"
	  modelName="productionTrackingForProductDto"
	  menuAccessible="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xmlns="http://schema.qcadoo.org/view"
	  xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">

	<component type="window" name="window" reference="window">

		<ribbon>
			<template name="standardGridTemplate" includeItems="actions.refresh"/>
		</ribbon>

		<component type="grid" name="productionTrackingsForProductList"
				   reference="grid">
			<option type="column" name="productionTrackingNumber" fields="productionTrackingNumber" link="true"
					width="120"/>
			<option type="column" name="orderNumber" fields="orderNumber" link="true"
					width="200"/>
			<option type="column" name="technologyOperationComponentNumber"
					fields="technologyOperationComponentNumber" width="120"/>
			<option type="column" name="shiftName" fields="shiftName"
					width="80"/>
			<option type="column" name="staffName" fields="staffName"
					width="100"/>
			<option type="column" name="divisionNumber" fields="divisionNumber"
					width="80"/>
			<option type="column" name="productNumber" fields="productNumber"
					width="100"/>
			<option type="column" name="plannedQuantity" fields="plannedQuantity"
					width="80"/>
			<option type="column" name="usedQuantity" fields="usedQuantity"
					width="80"/>
			<option type="column" name="productUnit" fields="productUnit"
					width="60"/>
			<option type="column" name="productionTrackingState" fields="productionTrackingState"
					width="90"/>
			<option type="column" name="productionTrackingCreateDate" fields="productionTrackingCreateDate"
					width="100"/>
			<option type="column" name="productionTrackingLastTracking" fields="productionTrackingLastTracking"
					expression="#productionTrackingLastTracking" width="60"/>
			<option type="column" name="productionTrackingTimeRangeFrom" fields="productionTrackingTimeRangeFrom"
					width="100"/>
			<option type="column" name="productionTrackingTimeRangeTo" fields="productionTrackingTimeRangeTo"
					width="100"/>
			<option type="column" name="orderState" fields="orderState" hidden="true"/>

			<option type="order" column="productionTrackingNumber" direction="asc"/>

			<option type="searchable"
					value="productionTrackingNumber,orderNumber,technologyOperationComponentNumber,shiftName,staffName,divisionNumber,productNumber,plannedQuantity,usedQuantity,productUnit,productionTrackingState,productionTrackingCreateDate,productionTrackingLastTracking,productionTrackingTimeRangeFrom,productionTrackingTimeRangeTo"/>
			<option type="orderable"
					value="productionTrackingNumber,orderNumber,technologyOperationComponentNumber,shiftName,staffName,divisionNumber,productNumber,plannedQuantity,usedQuantity,productUnit,productionTrackingState,productionTrackingCreateDate,productionTrackingLastTracking,productionTrackingTimeRangeFrom,productionTrackingTimeRangeTo"/>

			<option type="correspondingView" value="productionCounting/productionTrackingDetails"/>
			<option type="correspondingComponent" value="form"/>

			<option type="fullscreen" value="true"/>
			<option type="multiselect" value="true"/>
		</component>

		<option type="fixedHeight" value="true"/>
		<option type="header" value="false"/>
	</component>

</view>