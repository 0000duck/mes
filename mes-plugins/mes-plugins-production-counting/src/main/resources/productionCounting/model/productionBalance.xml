<?xml version="1.0" encoding="UTF-8"?>
<model name="productionBalance" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<boolean name="generated" />
		<belongsTo name="order" plugin="orders" model="order" required="true"/>
		<belongsTo name="product" plugin="basic" model="product"/>
		<string name="name" required="true">
			<validatesLength max="255" />
		</string>
		<datetime name="date" />
		<string name="worker" />
		<integer name="recordsNumber" />
		<string name="description" />
		<string name="fileName" />
		<hasMany name="productionRecords" joinField="productionReport" model="productionRecord" />
		<hasMany name="recordOperationProductInComponents" joinField="productionRecord" model="recordOperationProductInComponent" />
		<hasMany name="recordOperationProductOutComponents" joinField="productionRecord" model="recordOperationProductOutComponent" />
	</fields>
	<hooks>
		<onCopy class="com.qcadoo.mes.productionCounting.internal.ProductionBalanceService"
			method="clearGeneratedOnCopy" />
	</hooks>
	<identifier expression="#name" />
</model>