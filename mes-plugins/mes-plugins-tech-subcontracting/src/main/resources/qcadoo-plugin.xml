<plugin plugin="techSubcontracting" version="${qcadoo.plugin.version}"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/report
       http://schema.qcadoo.org/modules/report.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Technology subcontracting</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>technologies</plugin>
			<version>[1.1.7</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<model:model-field model="operation" plugin="technologies">
			<model:boolean name="isSubcontracting" default="false" />
		</model:model-field>
		<model:model-field model="technologyOperationComponent"
			plugin="technologies">
			<model:boolean name="isSubcontracting" default="false" />
		</model:model-field>
		<model:model-field model="technologyInstanceOperationComponent"
			plugin="technologies">
			<model:boolean name="isSubcontracting" default="false" />
		</model:model-field>

		<model:model-field model="company" plugin="basic">
			<model:hasMany name="operationsGroup" model="operationGroup"
				plugin="technologies" joinField="companyOperationGroup" cascade="nullify" />
		</model:model-field>

		<model:model-field model="operationGroup" plugin="technologies">
			<model:belongsTo name="companyOperationGroup" model="company"
				plugin="basic" />
		</model:model-field>

		<model:model-field model="company" plugin="basic">
			<model:hasMany name="operations" model="operation"
				plugin="technologies" joinField="company" cascade="nullify" />
		</model:model-field>

		<model:model-field model="operation" plugin="technologies">
			<model:belongsTo name="company" model="company"
				plugin="basic" />
		</model:model-field>

		<model:model-enum-value plugin="materialRequirements"
			model="materialRequirement" enum="mrpAlgorithm"
			value="03componentsAndSubcontractorsProducts" />

		<model:model-enum-value plugin="simpleMaterialBalance"
			model="simpleMaterialBalance" enum="mrpAlgorithm"
			value="03componentsAndSubcontractorsProducts" />

		<model:model-hook model="technologyOperationComponent"
			plugin="technologies">
			<model:onCreate
				class="com.qcadoo.mes.techSubcontracting.hooks.TechnologyOperationHooksTS"
				method="copySubstractingFieldFromLowerInstance" />
		</model:model-hook>
		<model:model-hook model="technologyInstanceOperationComponent"
			plugin="technologies">
			<model:onCreate
				class="com.qcadoo.mes.techSubcontracting.hooks.TechInstOperCompHooksTS"
				method="copySubstractingFieldFromLowerInstance" />
		</model:model-hook>
		
		<view:view-hook view="companyDetails" type="beforeRender"
			plugin="basic" class="com.qcadoo.mes.techSubcontracting.hooks.CompanyDetailsHooksTS"
			method="disabledGridWhenCompanyIsAnOwner" />		

		<view:view-tab resource="view/tabExtensions/operationDetails.xml" />
		<view:view-tab
			resource="view/tabExtensions/technologyInstanceOperationComponentDetails.xml" />
		<view:view-tab
			resource="view/tabExtensions/technologyOperationComponentDetails.xml" />
		<view:view-tab resource="view/tabExtensions/companyDetails.xml" />
	</modules>

</plugin>