<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="genealogiesForComponents" version="0.4.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Genealogies For Components</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>
	
	<dependencies>
		<dependency>
			<plugin>genealogies</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>


	<modules>
		<localization:translation path="locales" />
		
		<model:model model="productInBatch" resource="model/productInBatch.xml" />
		<model:model model="genealogyProductInComponent" resource="model/genealogyProductInComponent.xml" />
		
		<model:model-field plugin="technologies" model="operationProductInComponent">
			<model:boolean name="batchRequired" />
		</model:model-field>
		
		<model:model-field plugin="technologies" model="operationProductInComponent">
			<model:hasMany name="genealogyProductInComponents"
				plugin="genealogiesForComponents" model="genealogyProductInComponent" joinField="productInComponent"
				cascade="delete" />
		</model:model-field>
		
		<model:model-field plugin="genealogies" model="genealogy">
			<model:hasMany name="productInComponents"
				plugin="genealogiesForComponents" model="genealogyProductInComponent" joinField="genealogy"
				cascade="delete" copyable="true" />
		</model:model-field>
		
		<model:model-hook plugin="technologies" model="operationProductInComponent">
			<model:onSave class="com.qcadoo.mes.genealogies.GenealogyService"
				method="fillBatchRequiredForTechnology" />
		</model:model-hook>
		
		<menu:menu-item name="genealogyForComponent" category="reports"
			view="genealogyForComponent" />
			
		<view:view resource="view/genealogiesForComponent.xml" />
			
		<view:view-tab resource="view/viewExtension.xml" />
		
		<view:view-hook plugin="technologies"
			view="technology" hookType="preRenderHook"
			bean="com.qcadoo.mes.genealogies.GenealogyTechnologyService" method="disableBatchRequiredForTechnology" />
			
		<view:view-hook plugin="genealogies"
			view="orderGenealogy" hookType="preRenderHook"
			bean="com.qcadoo.mes.genealogies.GenealogyService" method="fillProductInComponents" />
			
			
		<view:view-listener plugin="technologies"
			view="operationProductInComponent" component="product" event="onSelectedEntityChange"
			bean="com.qcadoo.mes.genealogies.GenealogyTechnologyService" method="checkBatchNrReq" />
	

	</modules>

</plugin>