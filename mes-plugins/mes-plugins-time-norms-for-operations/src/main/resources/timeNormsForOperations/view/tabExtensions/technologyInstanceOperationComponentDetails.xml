<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    plugin="technologies"
    view="technologyInstanceOperationComponentDetails"
    xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
    xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd" >

    
    <windowTab name="norm" reference="norm">
				
				<component type="gridLayout" name="gridsLayout" columns="3" rows="4" hasBorders="false">
			<layoutElement column="1" row="1">
				<component type="time" name="tpz" field="#{form}.tpz" reference="tpz" defaultEnabled="false" />
			</layoutElement>
			<layoutElement column="1" row="2" height="2">
				<component type="borderLayout" name="borderLayoutCycleTime" reference="borderLayoutCycleTime">
					<component type="gridLayout" name="gridLayoutOther" hasBorders="false" columns="4" rows="2">
					<layoutElement column="1" row="1" width="3">
						<component type="input" name="productionInOneCycle" field="#{form}.productionInOneCycle"
						reference="productionInOneCycle" defaultEnabled="true" required="true" hasDescription="true">
							<option type="labelWidth" value="40"/>
						</component>
			    	</layoutElement>
			    	<layoutElement column="4" row="1">
						<component type="select" name="productionInOneCycleUNIT" field="#{form}.productionInOneCycleUNIT" reference="productionInOneCycleUNIT">
							<option type="required" value="true" />
							<option type="labelWidth" value="10"/>
							<option type = "alingment" value="right"/>
						</component>
					</layoutElement>
					<layoutElement column="1" row="4">
						<component type="time" name="timeNextOperation" field="#{form}.timeNextOperation"
							reference="timeNextOperation" hasDescription="true" />
					</layoutElement>
					<layoutElement column="2" row="1">
						<component type="input" name="machineUtilization" field="#{form}.machineUtilization"
							reference="machineUtilization" />
					</layoutElement>
					<layoutElement column="2" row="2">
						<component type="input" name="laborUtilization" field="#{form}.laborUtilization"
							reference="laborUtilization" />
					</layoutElement>
					<layoutElement column="2" row="3">
						<component type="select" name="countRealized" field="#{form}.countRealized"
							reference="countRealized" hasDescription="true">
						</component>
					</layoutElement>
					<layoutElement column="1" row="2" width="4">
						<component type="time" name="tj" field="#{form}.tj" reference="tj" required="true" >
							<option type="labelWidth" value="60"/>
							<option type="alingment" value="right"/>
						</component>
					</layoutElement>	
					</component>
					<option type="label" value="cycleTimeBorderLabel" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="4">
				<component type="time" name="timeNextOperation" field="#{form}.timeNextOperation"
					reference="timeNextOperation" hasDescription="true" defaultEnabled="false" />
			</layoutElement>
				<layoutElement column="2" row="1" height="3">
					<component type="borderLayout" name="borderLayoutDivisibleCostNorms" reference="borderLayoutDivisibleCostNorms">
						<component type="gridLayout" name="gridLayout" hasBorders="false" columns="1" rows="2">
							<layoutElement column="1" row="1">
								<component type="checkbox" name="areProductQuantitiesDivisible" field="#{form}.areProductQuantitiesDivisible"
									reference="areProductQuantitiesDivisible" defaultEnabled="true" hasDescription="true" >
									<option type="labelWidth" value="60"/>
								</component>
							</layoutElement>
							<layoutElement column="1" row="2">
								<component type="checkbox" name="isTjDivisible" field="#{form}.isTjDivisible"
									reference="isTjDivisible" defaultEnabled="true" hasDescription="true" >
								<option type="labelWidth" value="60"/>
								</component>
							</layoutElement>
			</component>
				 <option type="label" value="divisibleCostNormsBorderLabel" />
			</component>
			</layoutElement>
			<layoutElement column="3" row="1">
				<component type="input" name="machineUtilization" field="#{form}.machineUtilization"
					reference="machineUtilization" defaultEnabled="true" />
			</layoutElement>
			<layoutElement column="3" row="2">
				<component type="input" name="laborUtilization" field="#{form}.laborUtilization"
					reference="laborUtilization" defaultEnabled="true" />
			</layoutElement>
			<layoutElement column="3" row="3">
				<component type="select" name="countRealized" field="#{form}.countRealized"
					reference="countRealized" hasDescription="true" defaultEnabled="true">
					<option type="required" value="true" />
					<listener event="onSelectedEntityChange"
						class="com.qcadoo.mes.timeNormsForOperations.listeners.TechnologyOperCompDetailsListenersTNFO" method="changeCountRealizedNorm" />
				</component>
			</layoutElement>
			<layoutElement column="3" row="4">
				<component type="gridLayout" name="gridsLayoutUnit2" columns="3"
					rows="1" hasBorders="false">
					<layoutElement column="1" row="1" width="2">
						<component type="input" name="countMachine" field="#{form}.countMachine"
							reference="countMachine" hasDescription="true" defaultEnabled="false" >
							<option type="labelWidth" value="40" />
						</component>
					</layoutElement>
					<layoutElement column="3" row="1">
						<component type="select" name="countMachineUNIT" field="#{form}.countMachineUNIT" reference="countMachineUNIT">
							<option type="required" value="true" />
							<option type = "alingment" value="right"/>
						</component>
					</layoutElement>
				</component>
			</layoutElement>
		</component>
				<option type="header" value="true" />
				<option type="expression"
					value="#operation['number'] + ' - ' + #operation['name'] + ' @timeNormsForOperations.technologyOperationComponentInOrderDetails.headerEdit ' + #order['number'] + ' - ' + #order['name'] " />
				<option type="expressionNew"
					value="#operation['number'] + ' - ' + #operation['name']" />
		</windowTab>
    
</windowTabExtension>