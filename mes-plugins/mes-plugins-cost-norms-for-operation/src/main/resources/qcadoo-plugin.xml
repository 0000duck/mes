<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="costNormsForOperation" version="0.4.6"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report" xmlns:xi="http://www.w3.org/2001/XInclude"
	xsi:schemaLocation="
http://schema.qcadoo.org/plugin
http://schema.qcadoo.org/plugin.xsd
http://schema.qcadoo.org/modules/model
http://schema.qcadoo.org/modules/model.xsd
http://schema.qcadoo.org/modules/view
http://schema.qcadoo.org/modules/view.xsd
http://schema.qcadoo.org/modules/localization
http://schema.qcadoo.org/modules/localization.xsd
http://schema.qcadoo.org/modules/report
http://schema.qcadoo.org/modules/report.xsd
http://schema.qcadoo.org/modules/menu
http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Cost Norms for Operation</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>productionScheduling</plugin>
			<version>[0.4.2</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />
		<view:resource uri="public/**/*" />

		<view:view-tab resource="view/tabExtensions/operationDetails.xml" />
		<view:view-tab resource="view/tabExtensions/orderOperationComponentDetails.xml" />
		<view:view-tab
			resource="view/tabExtensions/technologyOperationComponentDetails.xml" />

		<!-- operation -->
		<model:model-field plugin="technologies" model="operation">
			<model:decimal name="pieceworkCost">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:decimal name="laborHourlyCost">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:decimal name="machineHourlyCost">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="numberOfOperations" default="1">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="0" />
			</model:integer>
		</model:model-field>

		<!-- operation - technology -->
		<model:model-field plugin="productionScheduling"
			model="orderOperationComponent">
			<model:decimal name="pieceworkCost">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionScheduling"
			model="orderOperationComponent">
			<model:decimal name="laborHourlyCost">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionScheduling"
			model="orderOperationComponent">
			<model:decimal name="machineHourlyCost">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="productionScheduling"
			model="orderOperationComponent">
			<model:integer name="numberOfOperations" default="1">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="0" />
			</model:integer>
		</model:model-field>

		<!-- operation - instance of technology -->
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:decimal name="pieceworkCost">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:decimal name="laborHourlyCost">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:decimal name="machineHourlyCost">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="numberOfOperations" default="1">
				<validatesRange from="0" exclusively="true" />
				<validatesPrecision max="7" />
				<validatesScale max="0" />
			</model:integer>
		</model:model-field>

		<!-- operation - technology -->
		<view:view-hook plugin="technologies"
			view="technologyOperationComponentDetails" type="beforeRender"
			class="com.qcadoo.mes.costNormsForOperation.CostNormsForOperationService"
			method="inheritOperationCostValues" />

		<!-- operation - instance of technology -->
		<view:view-hook plugin="productionScheduling" view="orderOperationComponentDetails"
			type="beforeRender"
			class="com.qcadoo.mes.costNormsForOperation.CostNormsForOperationService"
			method="inheritOperationCostValues" />

		<model:model-hook model="order" plugin="orders">
			<model:onSave
				class="com.qcadoo.mes.costNormsForOperation.CostNormsForOperationService"
				method="copyCostNormsFromTechnologyToOrder" />
		</model:model-hook>

	</modules>

</plugin>