<plugin plugin="producedProducts" version="0.4.6"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
    xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
    xmlns:menu="http://schema.qcadoo.org/modules/menu"
    xmlns:localization="http://schema.qcadoo.org/modules/localization"
    xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd">

	<information>
		<name>MES - Produced products</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>materialRequirements</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />
		
		<model:model model="producedProducts" resource="model/producedProducts.xml" />
		
		<model:model-field plugin="orders" model="order">
			<model:hasMany name="producedProductsV" plugin="producedProducts"
				model="producedProducts" joinField="order" cascade="delete" />
		</model:model-field>		

		<view:view-ribbon-group resource="view/ribbonExtensions/orderDetails.xml" />

		<view:view-listener plugin="orders" view="orderDetails" component="form" event="showProducedProducts"
			class="com.qcadoo.mes.producedProducts.ProducedProductsService" method="showProducedProducts" />
		
		<view:view-hook plugin="producedProducts" view="producedProductsDetails" type="beforeRender" class="com.qcadoo.mes.producedProducts.ProducedProductsService" method="disablePlannedQuantity" />
		<view:view-hook plugin="orders" view="orderDetails" type="beforeRender" class="com.qcadoo.mes.producedProducts.ProducedProductsService" method="generateProducedProducts" />
		
		<view:view resource="view/producedProducts.xml" />
		<view:view resource="view/producedProductsDetails.xml" />
	</modules>

</plugin>