<qcd:views plugin="plugins" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="pluginGridView" model="plugin" menuAccessible="true">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="plugins">
					<bigButton name="download" icon="downloadIcon24.png" action="#{mainWindow}.performCallFunction(goToUrl,../download.html);" />
					<bigButton name="update" icon="updateIcon24.png" action="#{mainWindow.pluginsGrid}.performCallFunction(goToUrl,../update.html);" />
				</group>
				<group name="actions">
					<smallButton name="enable" icon="enableIcon16.png" action="#{mainWindow.pluginsGrid}.performCallFunction(goToUrl,../enable.html);" />
					<smallButtons name="disable" icon="disableIcon16.png" action="#{mainWindow.pluginsGrid}.performCallFunction(goToUrl,../disable.html);">
						<smallButton name="deinstall" icon="deinstallIcon16.png" action="#{mainWindow.pluginsGrid}.performCallFunction(goToUrl,../deinstall.html);" />
						<smallButton name="remove" icon="deleteIcon16.png" action="#{mainWindow.pluginsGrid}.performCallFunction(goToUrl,../remove.html);" />
					</smallButtons>
				</group>
			</ribbon>
			<component type="grid" name="pluginsGrid">
				<option type="column" name="name" fields="name" link="true" />
				<option type="column" name="description" fields="description" />
				<option type="column" name="version" fields="version" />
				<option type="column" name="vendor" fields="vendor" />
				<option type="column" name="status" fields="status" />
				<option type="correspondingView" value="plugins/pluginDetailsView" />
				<option type="correspondingComponent" value="mainWindow.pluginDetailsForm" />
				<option type="searchable" value="name,vendor,status" />
				<option type="orderable" value="name" />
				<option type="deletable" value="false" />
				<option type="creatable" value="false" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="backButton" value="false" />
			<option type="fullscreen" value="true" />
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="pluginDetailsView" model="plugin">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{mainWindow}.performBack" />
				</group>
				<group name="plugins">
					<bigButton name="update" icon="updateIcon24.png" action="#{mainWindow.pluginDetailsForm}.performCallFunction(goToUrl,../update.html);" />
				</group>
			</ribbon>
			<component type="form" name="pluginDetailsForm">
				<component type="textarea" name="name" field="name" defaultEnabled="false" />
				<component type="input" name="version" field="version" defaultEnabled="false" />
				<component type="input" name="vendor" field="vendor" defaultEnabled="false" />
				<component type="textarea" name="description" field="description" defaultEnabled="false" />
				<component type="select" name="status" field="status" defaultEnabled="false" />
				<component type="checkbox" name="base" field="base" defaultEnabled="false" />
				<option type="header" value="false" />
				<option type="expression" value="#name" />
			</component>
		</component>
	</view>
	
	<view name="pluginDownloadView">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{mainWindow}.performBack" />
				</group>
			</ribbon>
			<component type="staticPage" name="infoPage">
				<option type="page" value="plugins/download.jsp" />
			</component>
			<option type="header" value="false" />
			<option type="static" value="true" />
		</component>
	</view>
	
	<!-- ERROR PAGES -->
	
	<view name="pluginInfoView">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{mainWindow}.performBack" />
				</group>
			</ribbon>
			<component type="staticPage" name="infoPage">
				<option type="page" value="plugins/pluginInfo.jsp" />
			</component>
			<option type="header" value="false" />
			<option type="static" value="true" />
		</component>
	</view>
	
</qcd:views>