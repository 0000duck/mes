<?xml version="1.0" encoding="UTF-8"?>
<qcd:views plugin="plugins" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="pluginGridView" model="plugin">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="plugins">
					<bigButton name="download" action="" />
					<bigButton name="update" action="" />
				</group>
				<group name="actions">
					<smallButton name="enable" action="" />
					<smallButtons name="disable" action="">
						<smallButton name="deinstall" action="" />
						<smallButton name="remove" action="" />
					</smallButtons>
				</group>
			</ribbon>
			<component type="grid" name="pluginsGrid">
				<option type="column" name="name" fields="name" link="true" />
				<option type="column" name="description" fields="description" />
				<option type="column" name="version" fields="version" />
				<option type="column" name="vendor" fields="vendor" />
				<option type="column" name="status" fields="status" />
				<option type="header" value="false" />
				<option type="correspondingView" value="plugins/pluginDetailsView" />
				<option type="paginable" value="true" />
				<option type="searchable" value="name,vendor,status" />
				<option type="orderable" value="name" />
				<option type="multiselect" value="false" />
				<option type="height" value="450" />
				<option type="deletable" value="false" />
				<option type="creatable" value="false" />
				<option type="fullScreen" value="true" />
			</component>
			<component type="button" name="download">
				<option type="url" value="../download.html" />
			</component>
			<component type="button" name="remove" source="#{mainWindow.pluginsGrid}">
				<option type="url" value="../remove.html" />
			</component>
			<component type="button" name="enable" source="#{mainWindow.pluginsGrid}">
				<option type="url" value="../enable.html" />
			</component>
			<component type="button" name="disable" source="#{mainWindow.pluginsGrid}">
				<option type="url" value="../disable.html" />
			</component>
			<component type="button" name="deinstall" source="#{mainWindow.pluginsGrid}">
				<option type="url" value="../deinstall.html" />
			</component>
			<component type="button" name="update" source="#{mainWindow.pluginsGrid}">
				<option type="url" value="../update.html" />
			</component>
			<component type="button" name="pdfOrderView">
				<option type="url" value="../pdfOrderView.html" />
			</component>
			<option type="backButton" value="false" />
			<option type="fullScreen" value="true" />
		</component>
	</view>
	<view name="pluginDetailsView" model="plugin">
		<component type="window" name="mainWindow">
			<ribbon>
			</ribbon>
			<component type="form" name="pluginDetailsForm">
				<component type="textarea" name="name" field="name" enabled="false" />
				<component type="input" name="version" field="version" enabled="false" />
				<component type="input" name="vendor" field="vendor" enabled="false" />
				<component type="textarea" name="description" field="description" enabled="false" />
				<component type="select" name="status" field="status" enabled="false" />
				<component type="checkbox" name="base" field="base" enabled="false" />
				<option type="header" value="false" />
			</component>
		</component>
	</view>
</qcd:views>