<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="plugins" version="0.4.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd">

	<information>
		<name>Plugin Management</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>qcadooPlugin</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>

	<modules>
		<model:hook plugin="qcadooPlugin" model="plugin">
			<onView class="com.qcadoo.mes.plugins.controller.PluginManagmentDataHook"
				method="updatePluginData" />
		</model:hook>

		<view:menu-item name="plugins" category="administration"
			view="plugins" />

		<view:view>
			<view:resource>view/plugins.xml</view:resource>
		</view:view>

		<view:resource uri="public/**/*" />

	</modules>

</plugin>