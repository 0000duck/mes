<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="plugins" version="0.4.0" xmlns="http://www.qcadoo.org/plugin" xmlns:model="http://www.qcadoo.org/modules/model" xmlns:view="http://www.qcadoo.org/modules/view">

	<information>
		<name>Plugin Management</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>
	
	<dependencies>
		<dependency>
			<plugin>qcadooPlugin</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>
	
	<modules>
		<model:hook plugin="qcadooPlugin" model="plugin">
			<onView class="com.qcadoo.mes.plugins.controller.PluginManagmentDataHook" method="updatePluginData" />
		</model:hook>
	
		<view:menu-item name="plugins" category="administration" view="plugins" />

		<view:view>
			<resource>plugins/view/plugins.xml</resource>
		</view:view>
		
		<resource uri="public/**/*" />
		
	</modules>

</plugin>