<qcd:models plugin="genealogies" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="genealogy">
		<string name="batch">
			<validatesPresence />
			<validatesLength max="255" />
		</string>
		<decimal name="quantity">
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
		<belongsTo name="order" plugin="products" lookupField="number" model="order" lazy="false">
			<validatesPresence />
		</belongsTo>
		<date name="date" readonly="true" />
		<string name="worker" readonly="true" />
		<hasMany name="shiftFeatures" model="shiftFeature" joinField="genealogy" cascade="delete"/>
		<hasMany name="otherFeatures" model="otherFeature" joinField="genealogy" cascade="delete"/>
		<hasMany name="postFeatures" model="postFeature" joinField="genealogy" cascade="delete"/>
		<hasMany name="genealogyProductInComponents" model="genealogyProductInComponent" joinField="genealogy" cascade="delete"/>
		<onSave bean="com.qcadoo.mes.products.OrderService" method="fillLastUsedBatchForGenealogy" />
	</model>
	<model name="genealogyProductInComponent">
		<belongsTo name="genealogy" model="genealogy" lookupField="batch" />
		<belongsTo name="productInComponent" plugin="products" model="operationProductInComponent" lookupField="operationComponent" />
		<hasMany name="batch" model="productInBatch" joinField="productInComponent" cascade="delete"/>
	</model>
	<model name="productInBatch">
		<string name="batch">
			<validatesPresence />
			<validatesLength max="255" />
		</string>
		<decimal name="quantity">
			<validatesRange from="0" inclusive="false" />
			<validatesPrecision max="7" />
			<validatesScale max="3" />
		</decimal>
		<date name="date" readonly="true" />
		<string name="worker" readonly="true" />
		<belongsTo name="productInComponent" model="genealogyProductInComponent" lookupField="productInComponent" />
		<onSave bean="com.qcadoo.mes.products.OrderService" method="fillLastUsedBatchForProduct" />
	</model>
	<model name="shiftFeature">
		<string name="value">
			<validatesLength max="255" />
		</string>
		<date name="date" readonly="true" />
		<string name="worker" readonly="true" />
		<belongsTo name="genealogy" model="genealogy" lookupField="batch" />
	</model>
	<model name="postFeature">
		<string name="value">
			<validatesLength max="255" />
		</string>
		<date name="date" readonly="true" />
		<string name="worker" readonly="true" />
		<belongsTo name="genealogy" model="genealogy" lookupField="batch" />
	</model>
	<model name="otherFeature">
		<string name="value">
			<validatesLength max="255" />
		</string>
		<date name="date" readonly="true" />
		<string name="worker" readonly="true" />
		<belongsTo name="genealogy" model="genealogy" lookupField="batch" />
	</model>
	<model name="currentAttribute">
		<string name="name"></string>
		<string name="value"></string>
	</model>
</qcd:models>