<qcd:models plugin="genealogies" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="genealogy">
		<string name="batch">
			<validatesPresence />
			<validatesLength max="255" />
		</string>
		<belongsTo name="order" plugin="products" lookupField="number" model="order" lazy="false">
			<validatesPresence />
		</belongsTo>
		<date name="date" readonly="true" readonlyOnCreate="true" />
		<string name="worker" readonly="true" readonlyOnCreate="true" />
		<hasMany name="shiftFeatures" model="shiftFeature" joinField="genealogy" cascade="delete" copyable="true" />
		<hasMany name="otherFeatures" model="otherFeature" joinField="genealogy" cascade="delete" copyable="true" />
		<hasMany name="postFeatures" model="postFeature" joinField="genealogy" cascade="delete" copyable="true" />
		<hasMany name="productInComponents" model="genealogyProductInComponent" joinField="genealogy" cascade="delete" copyable="true" />
		<onSave bean="com.qcadoo.mes.genealogies.AutoGenealogyService" method="fillLastUsedBatchForGenealogy" />
		<onSave bean="com.qcadoo.mes.products.QualityControlService" method="generateOnSaveQualityControl" />
	</model>
	<model name="genealogyProductInComponent">
		<belongsTo name="genealogy" model="genealogy" lookupField="batch" />
		<belongsTo name="productInComponent" plugin="products" model="operationProductInComponent" lookupField="operationComponent" />
		<hasMany name="batch" model="productInBatch" joinField="productInComponent" cascade="delete" copyable="true">
			<validatesPresence />
		</hasMany>
	</model>
	<model name="productInBatch">
		<string name="batch">
			<validatesPresence />
			<validatesLength max="255" />
		</string>
		<date name="date" readonly="true" readonlyOnCreate="true" />
		<string name="worker" readonly="true" readonlyOnCreate="true" />
		<string name="workerAndDate" expression="#worker + ' (' + #date + ')'" default="-" />
		<belongsTo name="productInComponent" model="genealogyProductInComponent" lookupField="productInComponent" />
		<onSave bean="com.qcadoo.mes.genealogies.AutoGenealogyService" method="fillLastUsedBatchForProduct" />
	</model>
	<model name="shiftFeature">
		<dictionary name="value" dictionary="shifts">
			<validatesPresence />
			<validatesLength max="255" />
		</dictionary>
		<date name="date" readonly="true" readonlyOnCreate="true" />
		<string name="worker" readonly="true" readonlyOnCreate="true" />
		<string name="workerAndDate" expression="#worker + ' (' + #date + ')'" default="-" />		
		<belongsTo name="genealogy" model="genealogy" lookupField="batch" />
		<onSave bean="com.qcadoo.mes.genealogies.AutoGenealogyService" method="fillLastUsedShiftFeature" />
	</model>
	<model name="postFeature">
		<dictionary name="value" dictionary="posts">
			<validatesPresence />
			<validatesLength max="255" />
		</dictionary>
		<date name="date" readonly="true" readonlyOnCreate="true" />
		<string name="worker" readonly="true" readonlyOnCreate="true" />
		<string name="workerAndDate" expression="#worker + ' (' + #date + ')'" default="-" />
		<belongsTo name="genealogy" model="genealogy" lookupField="batch" />
		<onSave bean="com.qcadoo.mes.genealogies.AutoGenealogyService" method="fillLastUsedPostFeature" />
	</model>
	<model name="otherFeature">
		<string name="value">
			<validatesPresence />
			<validatesLength max="255" />
		</string>
		<date name="date" readonly="true" readonlyOnCreate="true" />
		<string name="worker" readonly="true" readonlyOnCreate="true" />
		<string name="workerAndDate" expression="#worker + ' (' + #date + ')'" default="-" />
		<belongsTo name="genealogy" model="genealogy" lookupField="batch" />
		<onSave bean="com.qcadoo.mes.genealogies.AutoGenealogyService" method="fillLastUsedOtherFeature" />
	</model>
	<model name="currentAttribute">
		<dictionary name="shift" dictionary="shifts" />
		<boolean name="shiftReq" />
		<dictionary name="post" dictionary="posts" />
		<boolean name="postReq" />
		<string name="other"/>
		<boolean name="otherReq" />
		<dictionary name="lastUsedShift" dictionary="shifts" />
		<dictionary name="lastUsedPost" dictionary="posts" />
		<string name="lastUsedOther" />
	</model>
</qcd:models>