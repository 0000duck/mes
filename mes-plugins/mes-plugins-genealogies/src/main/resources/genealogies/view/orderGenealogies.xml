<views plugin="genealogies" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/view" xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">
	<view name="orderGenealogies" plugin="orders" model="order">
		<component type="window" name="window" reference="window">
			<ribbon>
				<group template="navigation" />
				<group template="gridNewCopyAndRemoveAction"/>
				<group name="autoGenealogy">
					<bigButton name="activeComplete" icon="genealogyClockIcon24.png"
						action="#{order}.fireEvent(autocompleteGenealogy,false);" state="enabled" />
					<bigButton name="lastUsedComplete" icon="genealogyArrowIcon24.png"
						action="#{order}.fireEvent(autocompleteGenealogy,true);" state="enabled" />
				</group>
			</ribbon>
			<component type="form" name="order" reference="order">
				<listener event="autocompleteGenealogy" bean="com.qcadoo.mes.genealogies.AutoGenealogyService" method="autocompleteGenealogy" />
			</component>
			<component type="grid" name="genealogies" reference="grid" source="#{order}.genealogies">
				<option type="column" name="batch" fields="batch" link="true" />
				<option type="order" column="batch" direction="desc" />
				<option type="searchable" value="batch" />
				<option type="orderable" value="batch" />
				<option type="correspondingView" value="genealogies/orderGenealogy" />
				<option type="correspondingComponent" value="form" />
				<option type="height" value="100" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	
	<view name="orderGenealogy" model="genealogy">
		<component type="window" name="window" reference="window">
			<ribbon>
				<group template="navigation" />
				<group template="formSaveCopyAndRemoveActions"/>
			</ribbon>	
			<component type="form" name="genealogy" reference="form">

				<component type="gridLayout" name="gridLayout" columns="3"
					rows="1" reference="layout">
					<layoutElement column="1" row="1">
						<component type="input" name="batch" field="batch" />
					</layoutElement>
				</component>

				<component type="verticalLayout" name="verticalLayout"
					reference="featuresLayout">
					<component type="borderLayout" name="shiftBorderLayout"
						reference="shiftBorderLayout">
						<option type="label" value="shiftLabel" />
						<component type="awesomeDynamicList" name="shiftFeaturesList" reference="shiftFeaturesList" 
							source="#{form}.shiftFeatures">
							<option type="hasBorder" value="false" />
							<components>
								<component type="gridLayout" name="gridLayout"
									columns="1" rows="2" fixedRowHeight="false">
									<layoutElement column="1" row="1">
										<component type="select" name="value" field="value" />
									</layoutElement>
									<layoutElement column="1" row="2">
										<component type="input" name="workerAndDate" field="workerAndDate"
											defaultEnabled="false">
											<option type="textRepresentationOnDisabled" value="true" />
										</component>
									</layoutElement>
								</component>
							</components>
						</component>
					</component>
					<component type="borderLayout" name="postBorderLayout"
						reference="postBorderLayout">
						<option type="label" value="postLabel" />
						<component type="awesomeDynamicList" name="postFeaturesList" reference="postFeaturesList"
							source="#{form}.postFeatures">
							<option type="hasBorder" value="false" />
							<components>
								<component type="gridLayout" name="gridLayout"
									columns="1" rows="2" fixedRowHeight="false">
									<layoutElement column="1" row="1">
										<component type="select" name="value" field="value" />
									</layoutElement>
									<layoutElement column="1" row="2">
										<component type="input" name="workerAndDate" field="workerAndDate"
											defaultEnabled="false">
											<option type="textRepresentationOnDisabled" value="true" />
										</component>
									</layoutElement>
								</component>
							</components>
						</component>
					</component>
					<component type="borderLayout" name="otherBorderLayout"
						reference="otherBorderLayout">
						<option type="label" value="otherLabel" />
						<component type="awesomeDynamicList" name="otherFeaturesList" reference="otherFeaturesList"
							source="#{form}.otherFeatures">
							<option type="hasBorder" value="false" />
							<components>
								<component type="gridLayout" name="gridLayout"
									columns="1" rows="2" fixedRowHeight="false">
									<layoutElement column="1" row="1">
										<component type="input" name="value" field="value" />
									</layoutElement>
									<layoutElement column="1" row="2">
										<component type="input" name="workerAndDate" field="workerAndDate"
											defaultEnabled="false">
											<option type="textRepresentationOnDisabled" value="true" />
										</component>
									</layoutElement>
								</component>
							</components>
						</component>
					</component>
				</component>

				<component type="gridLayout" name="mainGridLayout"
					columns="1" rows="1" fixedRowHeight="false" reference="productGridLayout">
					<layoutElement column="1" row="1">
						<component type="awesomeDynamicList" name="productInComponentsList"
							source="#{form}.productInComponents" reference="productInComponentsList">
							<header>
								<component type="gridLayout" name="mainGridLayout"
									columns="6" rows="1" fixedRowHeight="false">
									<layoutElement column="1" row="1" width="2">
										<component type="label" name="productInLabel" />
									</layoutElement>
									<layoutElement column="3" row="1" width="4">
										<component type="label" name="productInBatchLabel" />
									</layoutElement>
								</component>
							</header>
							<components>
								<component type="gridLayout" name="gridLayout"
									columns="6" rows="1" fixedRowHeight="false">
									<layoutElement column="1" row="1" width="2">
										<component type="lookup" name="productInComponent"
											field="productInComponent" hasLabel="false">
											<option type="expression"
												value="#operationComponent['operation']['name'] + ': &lt;b&gt;' + #product['number'] + '&lt;/b&gt; - ' + #product['name']" />
											<option type="fieldCode" value="product" />
											<option type="textRepresentationOnDisabled" value="true" />
										</component>
									</layoutElement>
									<layoutElement column="3" row="1" width="4">
										<component type="awesomeDynamicList" name="productInComponentsBatchList"
											source="batch">
											<option type="hasBorder" value="false" />
											<components>
												<component type="gridLayout" name="gridLayout"
													columns="3" rows="1" fixedRowHeight="false">
													<layoutElement column="1" row="1" width="2">
														<component type="input" name="batch" field="batch"
															hasLabel="true" />
													</layoutElement>
													<layoutElement column="3" row="1">
														<component type="input" name="workerAndDate"
															field="workerAndDate" defaultEnabled="false">
															<option type="textRepresentationOnDisabled" value="true" />
														</component>
													</layoutElement>
												</component>
											</components>
										</component>
									</layoutElement>
								</component>
							</components>
							<option type="hasButtons" value="false" />
						</component>
					</layoutElement>
				</component>
				
				<option type="header" value="true"/>
				<option type="expression" value="#batch + ' @genealogies.orderGenealogy.window.genealogy.headerOrder ' + #order['name'] + ( #order['product'] != null ? ' (' + (#order['doneQuantity'] != null ? #order['doneQuantity'] : #order['plannedQuantity']) + ' x ' + #order['product']['number'] + ' - ' + #order['product']['name'] + ')' : '' )" />
				<option type="expressionNew" value="#order['name'] + ( #order['product'] != null ? ' (' + (#order['doneQuantity'] != null ? #order['doneQuantity'] : #order['plannedQuantity']) + ' x ' + #order['product']['number'] + ' - ' + #order['product']['name'] + ')' : '' )" />
			</component>
		</component>

		<preRenderHook bean="com.qcadoo.mes.genealogies.GenealogyService"
			method="fillProductInComponents" />
		<preRenderHook bean="com.qcadoo.mes.genealogies.GenealogyService"
			method="hideComponents" />
	</view>

</views>