<views plugin="genealogies" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/view" xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">
	<view name="currentAttribute" model="currentAttribute">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{form}.performSave;" />
				</group>
			</ribbon>		
			<component type="form" name="currentAttribute" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="4" hasBorders="false">
					<layoutElement column="1" row="1">
						<component type="select" name="shift" field="shift" />
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="select" name="post" field="post" />
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="input" name="other" field="other" defaultEnabled="true"/>
					</layoutElement>
					<layoutElement column="2" row="1">
						<component type="checkbox" name="shiftReq" field="shiftReq"/>
					</layoutElement>
					<layoutElement column="2" row="2">
						<component type="checkbox" name="postReq" field="postReq"/>
					</layoutElement>
					<layoutElement column="2" row="3">
						<component type="checkbox" name="otherReq" field="otherReq"/>
					</layoutElement>
				</component>
				<option type="header" value="true"/>
				<option type="expression" value="' '"/>
			</component>
		</component>
	</view>
	<view name="genealogyForComponent" plugin="products" model="product" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group name="report">
					<bigButton name="printReport" icon="pdfIcon24.png"
						action="#{form}.fireEvent(generateReportForComponent);" state="disabled" message="genealogies.genealogyForComponent.window.ribbon.report.printReport.noBatchInfo">
						<script>
							<![CDATA[
								#{batches}.addOnChangeListener({
									onChange: function(selectedEntitiesArray) {
										if (! selectedEntitiesArray || selectedEntitiesArray.length == 0) {
											this.disable("#{translate(genealogies.genealogyForComponent.window.ribbon.report.printReport.noBatchInfo)}");
										} else if (selectedEntitiesArray.length > 1) {
											this.disable("#{translate(moreThanOneRecordSelected)}");
										} else {
											this.enable();
										}
									}
								});
							]]>
						</script>
					</bigButton>
				</group>
			</ribbon>		
			<component type="form" name="genealogyForComponent" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="7" hasBorders="false">
					<layoutElement column="1" row="1">
					  	<component type="lookup" name="product" reference="product">
							<option type="column" name="name" fields="name" link="true"
								width="200" />
							<option type="column" name="ean" fields="ean" />
							<option type="searchable" value="name,ean" />
							<option type="orderable" value="name,ean" />
							<option type="expression" value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name"/>
							<option type="fieldCode" value="number" />
							<listener event="onSelectedEntityChange" bean="com.qcadoo.mes.genealogies.print.ReportService" method="changeProduct"/>
						</component>
					</layoutElement>
					<layoutElement column="1" row="2" width="3" height="6">
						<component type="grid" name="batches" reference="batches" model="productInBatch">
							<option type="column" name="batch" fields="batch" />
							<option type="searchable" value="batch" />
							<option type="orderable" value="batch" />
							<option type="order" column="batch" direction="desc" />
							<option type="height" value="300" />
							<option type="width" value="300" />
							<option type="paginable" value="false" />
							<option type="deletable" value="false" />
							<option type="creatable" value="false" />					
						</component>
					</layoutElement>
				</component>
				<option type="header" value="true"/>
				<option type="expression" value="' '"/>
				<listener event="generateReportForComponent" bean="com.qcadoo.mes.genealogies.print.ReportService" method="generateReportForComponent" />
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.genealogies.print.ReportService" method="addRestrictionToComponentGrid" />	
	</view>
	<view name="genealogyForProduct" plugin="products" model="product" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group name="report">
					<bigButton name="printReport" icon="pdfIcon24.png"
						action="#{form}.fireEvent(generateReportForProduct);" state="disabled" message="genealogies.genealogyForComponent.window.ribbon.report.printReport.noBatchInfo">
						<script>
							<![CDATA[
								#{batches}.addOnChangeListener({
									onChange: function(selectedEntitiesArray) {
										if (! selectedEntitiesArray || selectedEntitiesArray.length == 0) {
											this.disable("#{translate(genealogies.genealogyForComponent.window.ribbon.report.printReport.noBatchInfo)}");
										} else if (selectedEntitiesArray.length > 1) {
											this.disable("#{translate(moreThanOneRecordSelected)}");
										} else {
											this.enable();
										}
									}
								});
							]]>
						</script>
					</bigButton>
				</group>
			</ribbon>		
			<component type="form" name="genealogyForProduct" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="7" hasBorders="false">
					<layoutElement column="1" row="1">
					  	<component type="lookup" name="product" reference="product">
							<option type="column" name="name" fields="name" link="true"
								width="200" />
							<option type="column" name="ean" fields="ean" />
							<option type="searchable" value="name,ean" />
							<option type="orderable" value="name,ean" />
							<option type="expression" value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name"/>
							<option type="fieldCode" value="number" />
							<listener event="onSelectedEntityChange" bean="com.qcadoo.mes.genealogies.print.ReportService" method="changeProduct"/>
						</component>
					</layoutElement>
					<layoutElement column="1" row="2" width="3" height="6">
						<component type="grid" name="batches" reference="batches" model="genealogy">
							<option type="column" name="batch" fields="batch" />
							<option type="searchable" value="batch" />
							<option type="orderable" value="batch" />
							<option type="order" column="batch" direction="desc" />
							<option type="height" value="300" />
							<option type="width" value="300" />
							<option type="paginable" value="false" />
							<option type="deletable" value="false" />
							<option type="creatable" value="false" />
						</component>
					</layoutElement>
				</component>
				<option type="header" value="true"/>
				<option type="expression" value="' '"/>
				<listener event="generateReportForProduct" bean="com.qcadoo.mes.genealogies.print.ReportService" method="generateReportForProduct" />
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.genealogies.print.ReportService" method="addRestrictionToGenealogyGrid" />
	</view>
</views>