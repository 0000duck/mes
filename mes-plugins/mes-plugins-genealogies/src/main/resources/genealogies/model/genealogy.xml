<model name="genealogy" xmlns="http://www.qcadoo.com/model">
	<fields>
		<string name="batch" required="true">
			<validatesLength max="255" />
		</string>
		<belongsTo name="order" plugin="products" model="order" lazy="false" required="true" />
		<date name="date" readonly="true" />
		<string name="worker" readonly="true" />
		<hasMany name="shiftFeatures" model="shiftFeature" joinField="genealogy" cascade="delete" copyable="true" />
		<hasMany name="otherFeatures" model="otherFeature" joinField="genealogy" cascade="delete" copyable="true" />
		<hasMany name="postFeatures" model="postFeature" joinField="genealogy" cascade="delete" copyable="true" />
		<hasMany name="productInComponents" model="genealogyProductInComponent" joinField="genealogy" cascade="delete" copyable="true" />
	</fields>
	<hooks>
		<onSave class="com.qcadoo.mes.genealogies.AutoGenealogyService" method="fillLastUsedBatchForGenealogy" />
	</hooks>
</model>