<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="genealogies" version="0.4.0" xmlns="http://www.qcadoo.com/plugin" xmlns:model="http://www.qcadoo.com/modules/model" xmlns:view="http://www.qcadoo.com/modules/view">

	<information>
		<name>MES - Genealogies</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>
	
	<dependencies>
		<dependency>
			<plugin>basic</plugin>
			<version>[0.4.0</version>
		</dependency>
		<dependency>
			<plugin>products</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>
	
	<modules>
		<model:model model="currentAttribute" resource="genealogies/model/currentAttribute.xml"/>
		<model:model model="genealogy" resource="genealogies/model/genealogy.xml"/>
		<model:model model="genealogyInBatch" resource="genealogies/model/genealogyInBatch.xml"/>
		<model:model model="genealogyProductInComponent" resource="genealogies/model/genealogyProductInComponent.xml"/>
		<model:model model="otherFeature" resource="genealogies/model/otherFeature.xml"/>
		<model:model model="postFeature" resource="genealogies/model/postFeature.xml"/>
		<model:model model="shiftFeature" resource="genealogies/model/shiftFeature.xml"/>
		<model:field plugin="products" model="technology">
			<boolean name="batchRequired" />
		</model:field>
		<model:field plugin="products" model="technology">
			<boolean name="shiftFeatureRequired" />
		</model:field>
		<model:field plugin="products" model="technology">
			<boolean name="postFeatureRequired" />
		</model:field>
		<model:field plugin="products" model="technology">
			<boolean name="otherFeatureRequired" />
		</model:field>
		<model:field plugin="products" model="technology">
			<enum name="componentQuantityAlgorithm" values="01perProductOut,02perTechnology" default="01perProductOut" required="true" />
		</model:field>
		<model:field plugin="products" model="operationProductInComponent">
			<boolean name="batchRequired" />
		</model:field>
		<model:field plugin="products" model="product">
			<string name="batch">
				<validatesLength max="255" />
			</string>
		</model:field>
		<model:field plugin="products" model="product">
			<string name="lastUsedBatch">
				<validatesLength max="255" />
			</string>
		</model:field>
		<model:field plugin="products" model="product">
			<boolean name="genealogyBatchReq" />
		</model:field>
		<model:field plugin="products" model="order">
			<hasMany name="genealogies" plugin="genealogies" model="genealogy" joinField="order" cascade="delete"/>
		</model:field>
		<model:field plugin="products" model="operationProductInComponent">
			<hasMany name="genealogyProductInComponents" plugin="genealogies" model="genealogyProductInComponent" joinField="productInComponent" cascade="delete"/>
		</model:field>
		<model:field plugin="basic" model="parameter">
			<enum name="batchForDoneOrder" values="01none,02active,03lastUsed" default="01none" />
		</model:field>
		<model:hook plugin="products" model="operationProductInComponent">
			<onSave class="com.qcadoo.mes.genealogies.GenealogyService" method="fillBatchRequiredForTechnology" />
		</model:hook>

		<view:view>
			<resource>genealogies/view/genealogies.xml</resource>
			<resource>genealogies/view/orderGenealogies.xml</resource>
		</view:view>
	</modules>

</plugin>