<qcd:views plugin="genealogies" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="orderGenealogies" plugin="products" model="order">
		<component type="window" name="window" reference="window">
			<ribbon>
				<group template="navigation"/>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png"
						action="#{form}.fireEvent(newBatch);" />
					<bigButton name="save" icon="saveIcon24.png"
						action="#{form}.performSave;" />
					<bigButton name="copy" icon="copyIcon24.png"
						action="#{grid}.performCopy;" state="disabled" />
					<smallButton name="cancel" icon="cancelIcon16.png" 
						action="#{form}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png" 
						action="#{grid}.performDelete;" state="disabled" />
				</group>
			</ribbon>
			<component type="form" name="order" reference="order">
				<option type="header" value="true" />
				<option type="expression" value="#name" />
			</component>
			<component type="grid" name="genealogies" reference="grid" source="#{order}.genealogies">				
				<option type="column" name="batch" fields="batch" />
				<option type="column" name="quantity" fields="quantity" />
				<option type="order" column="batch" direction="desc" />
				<option type="searchable" value="batch" />
				<option type="orderable" value="batch,quantity" />
				<option type="height" value="100" />
			</component>
			<component type="form" name="genealogy" reference="form" field="#{grid}">
			
				<component type="borderLayout" name="mainBorderLayout" reference="mainBorderLayout">
					<component type="gridLayout" name="gridLayout" columns="2" rows="1" reference="layout">			
						<layoutElement column="1" row="1">						
							<component type="input" name="batch" field="batch" />
						</layoutElement>
						<layoutElement column="2" row="1">
							<component type="input" name="quantity" field="quantity" />
						</layoutElement>
					</component>
					<option type="label" value="genealogyLabel" />
				</component>
				
				<component type="borderLayout" name="featureBorderLayout" reference="featureBorderLayout">
					<component type="gridLayout" name="gridLayout" columns="1" rows="3" fixedRowHeight="false"  reference="featureGridLayout">			
						<layoutElement column="1" row="1">						
							<component type="awesomeDynamicList" name="shiftFeaturesList" source="#{form}.shiftFeatures">
								<components>
									<component type="gridLayout" name="gridLayout" columns="3" rows="1" fixedRowHeight="false" >
										<layoutElement column="1" row="1">
											<component type="input" name="value" field="value" />
										</layoutElement>
										<layoutElement column="2" row="1">
											<component type="input" name="worker" field="worker" />
										</layoutElement>
										<layoutElement column="3" row="1">
											<component type="input" name="date" field="date" />
										</layoutElement>
									</component>				
								</components>
							</component>
						</layoutElement>
						<layoutElement column="1" row="2">
							<component type="awesomeDynamicList" name="postFeaturesList" source="#{form}.postFeatures">
								<components>
									<component type="gridLayout" name="gridLayout" columns="3" rows="1" fixedRowHeight="false" >
										<layoutElement column="1" row="1">
											<component type="input" name="value" field="value" />
										</layoutElement>
										<layoutElement column="2" row="1">
											<component type="input" name="worker" field="worker" />
										</layoutElement>
										<layoutElement column="3" row="1">
											<component type="input" name="date" field="date" />
										</layoutElement>
									</component>				
								</components>
							</component>
						</layoutElement>
						<layoutElement column="1" row="3">
							<component type="awesomeDynamicList" name="otherFeaturesList" source="#{form}.otherFeatures">
								<components>
									<component type="gridLayout" name="gridLayout" columns="3" rows="1" fixedRowHeight="false" >
										<layoutElement column="1" row="1">
											<component type="input" name="value" field="value" />
										</layoutElement>
										<layoutElement column="2" row="1">
											<component type="input" name="worker" field="worker" />
										</layoutElement>
										<layoutElement column="3" row="1">
											<component type="input" name="date" field="date" />
										</layoutElement>
									</component>				
								</components>
							</component>							
						</layoutElement>
					</component>
					<option type="label" value="featuresLabel" />
				</component>
				
					<component type="gridLayout" name="mainGridLayout" columns="1" rows="1" fixedRowHeight="false" >
						<layoutElement column="1" row="1">
							<component type="awesomeDynamicList" name="productInComponentsList" source="#{form}.productInComponents" reference="productInComponentsList">
								<header>
									<component type="gridLayout" name="mainGridLayout" columns="6" rows="1" fixedRowHeight="false" >
										<layoutElement column="1" row="1" width="2">	
											<component type="label" name="productInLabel" />
										</layoutElement>
										<layoutElement column="3" row="1" width="4">
											<component type="label" name="productInBatchLabel" />
										</layoutElement>
									</component>
								</header>
								<components>
									<component type="gridLayout" name="gridLayout" columns="6" rows="1" fixedRowHeight="false" >
										<layoutElement column="1" row="1" width="2">
											<component type="lookup" name="productInComponent" field="productInComponent" hasLabel="false">
												<option type="expression" value="#operationComponent['operation'].getField('name') + ': ' + #quantity + ' x &lt;b&gt;' + #product['number'] + '&lt;/b&gt; - ' + #product['name']"/>
												<option type="fieldCode" value="product" />
												<option type="textRepresentationOnDisabled" value="true" />
											</component>
										</layoutElement>
										<layoutElement column="3" row="1" width="4">
											<component type="awesomeDynamicList" name="productInComponentsBatchList" source="batch">
												<components>
													<component type="gridLayout" name="gridLayout" columns="3" rows="1" fixedRowHeight="false" >
														<layoutElement column="1" row="1">
															<component type="input" name="batch" field="batch" hasLabel="true" />
														</layoutElement>
														<layoutElement column="2" row="1">
															<component type="input" name="quantity" field="quantity" hasLabel="true" />
														</layoutElement>
														<layoutElement column="3" row="1">
															<component type="input" name="worker" field="worker" hasLabel="false" />
														</layoutElement>
														<!--<layoutElement column="4" row="1">
															<component type="input" name="date" field="date" hasLabel="false" />
														</layoutElement>-->
													</component>
												</components>
											</component>
										</layoutElement>
									</component>
								</components>
								<option type="hasButtons" value="false"/>
							</component>			
						</layoutElement>
					</component>
				
				<script>
					<![CDATA[
						var copyRibbonItem = #{window}.getRibbonItem("actions.copy");
						var deleteRibbonItem = #{window}.getRibbonItem("actions.delete");
						var cancelRibbonItem = #{window}.getRibbonItem("actions.cancel");
						
						this.addOnChangeListener({
							onSetValue: function(value) {
								if (value && value.content && value.content.entityId) {
									copyRibbonItem.enable();
									deleteRibbonItem.enable();
								} else {
									copyRibbonItem.disable();
									deleteRibbonItem.disable();
								}
							}
						});
					]]>
				</script>
				
				<listener event="newBatch" bean="com.qcadoo.mes.genealogies.GenealogyService" method="newBatch"/>
					
			</component>
		</component>
		
		<preRenderHook bean="com.qcadoo.mes.genealogies.GenealogyService" method="fillProductInComponents"/>
	</view>
	
</qcd:views>