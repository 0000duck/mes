<qcd:views plugin="genealogies" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="currentAttribute" model="currentAttribute">
		<component type="window" name="window">
			<ribbon>
				<group template="formSaveAction"/>
			</ribbon>		
			<component type="form" name="currentAttribute" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="3">
					<layoutElement column="1" row="1">
						<component type="select" name="shift" field="shift" />
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="select" name="post" field="post" />
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="input" name="other" field="other" defaultEnabled="true"/>
					</layoutElement>
				</component>
				<option type="header" value="false" />
				<option type="expression" value="' '"/>
			</component>
		</component>
	</view>
</qcd:views>