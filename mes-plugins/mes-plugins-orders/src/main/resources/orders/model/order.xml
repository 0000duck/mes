<model name="order" activable="true"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" required="true" unique="true">
			<validatesLength max="255" />
		</string>
		<string name="name" required="true">
			<validatesLength max="1024" />
		</string>
		<string name="description">
			<validatesLength max="2048" />
		</string>
		<string name="defaultTechnology" persistent="false" />
		<string name="commentReasonTypeCorrectionDateFrom" />
		<string name="commentReasonTypeCorrectionDateTo" />
		<string name="externalNumber" unique="true"/>
		<string name="commentReasonTypeDeviationsQuantity" />

		<datetime name="dateFrom" />
		<datetime name="dateTo" />
		<datetime name="effectiveDateFrom" />
		<datetime name="effectiveDateTo" />
		<datetime name="deadline" />
		<datetime name="correctedDateFrom" />
		<datetime name="correctedDateTo" />
		<datetime name="startDate" />
		<datetime name="finishDate" />

		<enum name="state"
			values="01pending,02accepted,03inProgress,04completed,05declined,06interrupted,07abandoned"
			required="true" />
		<belongsTo name="company" plugin="basic" model="company" />
		<belongsTo name="product" plugin="basic" model="product"
			required="true" />
		<belongsTo name="technology" plugin="technologies" model="technology" />
		<belongsTo name="productionLine" plugin="productionLines"
			model="productionLine" required="true" />

		<decimal name="plannedQuantity" required="true">
			<validatesRange from="0" exclusively="true" />
			<validatesUnscaledValue max="5" />
			<validatesScale max="5" />
		</decimal>
		<decimal name="doneQuantity">
			<validatesRange from="0" exclusively="false" />
			<validatesUnscaledValue max="5" />
			<validatesScale max="5" />
		</decimal>

		<boolean name="externalSynchronized" default="true" />

		<hasMany name="stateChanges" joinField="order" model="orderStateChange"
			cascade="delete" />

		<tree name="technologyInstanceOperationComponents" copyable="true"
			joinField="order" model="technologyInstanceOperationComponent"
			plugin="technologies" cascade="delete" />
			
		<decimal name="commissionedPlannedQuantity">
			<validatesRange from="0" exclusively="false" />
			<validatesUnscaledValue max="5" />
			<validatesScale max="5" />
		</decimal>
		
		<decimal name="commissionedCorrectedQuantity">
			<validatesRange from="0" exclusively="false" />
			<validatesUnscaledValue max="5" />
			<validatesScale max="5" />
		</decimal>
		
		<decimal name="amountOfProductProduced">
			<validatesRange from="0" exclusively="false" />
			<validatesUnscaledValue max="5" />
			<validatesScale max="5" />
		</decimal>
		
		<decimal name="remainingAmountOfProductToProduce">
			<validatesRange from="0" exclusively="false" />
			<validatesUnscaledValue max="5" />
			<validatesScale max="5" />
		</decimal>

		<hasMany name="typeOfCorrectionCauses" joinField="order" model="typeOfCorrectionCauses"
			cascade="delete" />
			
		<hasMany name="reasonTypesCorrectionDateFrom" model="reasonTypeCorrectionDateFrom"
			joinField="order" cascade="delete" />
		<hasMany name="reasonTypesCorrectionDateTo" model="reasonTypeCorrectionDateTo"
			joinField="order" cascade="delete" />
		<hasMany name="reasonTypesDeviationsOfEffectiveStart" model="reasonTypeOfChaningOrderState"
			joinField="order" cascade="delete" persistent="false" />
		<hasMany name="reasonTypesDeviationsOfEffectiveEnd" model="reasonTypeOfChaningOrderState"
			 joinField="order" cascade="delete" persistent="false" />
	</fields>
	<hooks>
		<validatesWith class="com.qcadoo.mes.orders.OrderService"
			method="checkOrderDates" />
		<validatesWith class="com.qcadoo.mes.orders.OrderService"
			method="checkOrderPlannedQuantity" />
		<validatesWith class="com.qcadoo.mes.basic.ProductService"
			method="checkIfProductIsNotRemoved" />
		<validatesWith class="com.qcadoo.mes.orders.OrderService"
			method="checkChosenTechnologyState" />
		<validatesWith class="com.qcadoo.mes.orders.hooks.OrderHooks"
			method="checkReasonNeededWhenDelayedEffectiveDateToIfIsRequired" />
		<validatesWith class="com.qcadoo.mes.orders.hooks.OrderHooks"
			method="checkReasonNeededWhenDelayedEffectiveDateFromIfIsRequired" />
		<onCreate class="com.qcadoo.mes.orders.hooks.OrderHooks"
			method="setInitialState" />
		<onCreate class="com.qcadoo.mes.orders.hooks.OrderHooks"
			method="setCommissionedPlannedQuantity" />
		<onSave class="com.qcadoo.mes.orders.OrderService" method="fillProductionLine" />
		<onSave class="com.qcadoo.mes.orders.OrderService" method="fillOrderDates" />
		<onSave class="com.qcadoo.mes.orders.hooks.TechnologyOperCompHooksOrder"
			method="createTechnologyInstanceForOrder" />
		<onSave class="com.qcadoo.mes.orders.hooks.OrderHooks" method="copyStartDate" />
		<onSave class="com.qcadoo.mes.orders.hooks.OrderHooks" method="copyEndDate" />
		<onSave class="com.qcadoo.mes.orders.hooks.OrderHooks" method="copyProductQuantity" />
		<onSave class="com.qcadoo.mes.orders.hooks.OrderHooks" method="onCorrectingTheRequestedVolume" />
		<onCopy class="com.qcadoo.mes.orders.hooks.OrderHooks" method="setInitialState" />
		<onCopy class="com.qcadoo.mes.orders.hooks.OrderHooks" method="clearOrSetSpecyfiedValueOrderFieldsOnCopy" />
		<onCopy class="com.qcadoo.mes.orders.hooks.OrderHooks" method="setProductQuantity" />
	</hooks>
	<identifier expression="#number + ' - ' + #name" />
</model>