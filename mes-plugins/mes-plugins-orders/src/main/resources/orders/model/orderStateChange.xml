<model name="orderStateChange" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<datetime name="dateAndTime" />
		<string name="sourceState" />
		<string name="targetState" />
		<boolean name="finished" />
		<integer name="phase" />

		<string name="worker" />
		<dictionary name="reasonType" dictionary="reasonTypeOfChaningOrderState" />
		<string name="comment" />

		<belongsTo name="order" model="order" />
		<belongsTo name="shift" model="shift" plugin="basic" />
		
		<hasMany name="messages" joinField="orderStateChange" model="message" plugin="states"/>
	</fields>
	<hooks />
</model>