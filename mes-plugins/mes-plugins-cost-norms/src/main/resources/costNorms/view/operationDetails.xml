<?xml version="1.0" encoding="UTF-8"?>
<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
    xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
    plugin="technologies" view="operationDetails">

    <windowTab name="costTab" reference="costTab">
        <component type="gridLayout" name="gridLayout" hasBorders="false" columns="3" rows="2">
            <layoutElement column="1" row="1">
                <component type="input" name="pieceworkCost" field="#{form}.pieceworkCost" />
            </layoutElement>
            <layoutElement column="2" row="1">
                <component type="input" name="numberOfOperations" field="#{form}.numberOfOperations" />
            </layoutElement>
            <layoutElement column="1" row="2">
                <component type="input" name="hourlyCost" field="#{form}.hourlyCost" />
            </layoutElement>
        </component>
    </windowTab>

</windowTabExtension>
