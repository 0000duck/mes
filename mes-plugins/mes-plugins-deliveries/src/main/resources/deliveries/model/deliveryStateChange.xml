<?xml version="1.0" encoding="UTF-8"?>
<model name="deliveryStateChange" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<datetime name="dateAndTime" />
		<enum name="sourceState"
			values="01draft,02prepared,03duringCorrection,04declined,05approved,06received" />
		<enum name="targetState"
			values="01draft,02prepared,03duringCorrection,04declined,05approved,06received"
			required="true" />
		<enum name="status" values="01inProgress,02paused,03successful,04failure" required="true"/>
		<integer name="phase" />
		<string name="worker" />
		<hasMany name="messages" joinField="deliveryStateChange" model="message" plugin="states" cascade="delete"/> <!-- messages -->
		<belongsTo name="delivery" model="delivery" /> <!-- owner -->
		<belongsTo name="shift" model="shift" plugin="basic" />
	</fields>
	<hooks />
	<identifier expression="#number + ' - ' + #name" />
</model>