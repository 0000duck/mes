<view name="orderedProductDetails" modelName="orderedProduct"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">

	<component type="window" name="window">

		<ribbon>
			<group template="navigation" />
			<group template="formSaveAction" />
		</ribbon>

		<windowTab name="mainTab">
			<component type="form" name="orderedProductDetails"
				reference="form">
				<component type="gridLayout" name="gridLayout" columns="2"
					rows="3">
					<layoutElement column="1" row="1">
						<component type="input" name="succession" reference="succession"
							field="succession" defaultEnabled="never" />
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="lookup" name="product" reference="product"
							field="product">
							<option type="column" name="name" fields="name" link="true" />

							<option type="searchable" value="name,number" />
							<option type="orderable" value="name,number" />

							<option type="expression"
								value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name" />
							<option type="fieldCode" value="number" />

							<listener
								class="com.qcadoo.mes.deliveries.listeners.OrderedProductDetailsListeners"
								method="fillUnitFields" />
						</component>
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="gridLayout" name="gridLayoutOrderedQuantity"
							hasBorders="false" columns="4" rows="1">
							<layoutElement column="1" row="1" width="3">
								<component type="input" name="orderedQuantity"
									reference="orderedQuantity" field="orderedQuantity">
									<option type="alignment" value="right" />
									<option type="labelWidth" value="40" />
								</component>
							</layoutElement>
							<layoutElement column="4" row="1">
								<component type="input" name="orderedQuantityUnit"
									defaultEnabled="never" hasLabel="false" reference="orderedQuantityUnit">
									<option type="textRepresentationOnDisabled" value="true" />
								</component>
							</layoutElement>
						</component>
					</layoutElement>
					<layoutElement column="2" row="1" height="3">
						<component type="textarea" name="description" reference="description"
							field="description">
						</component>
					</layoutElement>
				</component>

				<option type="header" value="true" />
				<option type="expression" value="#name" />
			</component>
		</windowTab>

	</component>

	<hooks>
		<beforeRender
			class="com.qcadoo.mes.deliveries.hooks.OrderedProductDetailsHooks"
			method="fillUnitFields" />
	</hooks>

</view>