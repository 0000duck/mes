<qcd:models plugin="dictionaries" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="dictionary" deletable="false">
		<string name="name" >
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<hasMany name="dictionaryItems" model="dictionaryItem" joinField="dictionary" cascade="delete" />
	</model>
	<model name="dictionaryItem">
		<string name="name" >
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<text name="description" />
		<belongsTo name="dictionary" model="dictionary" lookupField="name">
			<validatesPresence />
		</belongsTo>
	</model>
</qcd:models>