<?xml version="1.0" encoding="UTF-8"?>
<qcd:views plugin="dictionaries" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="dictionaryGridView" model="dictionary">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="actions">
					<bigButton name="new" action="#{mainWindow.dictionaries}.performNew;" />
					<smallButton name="delete" icon="icon2"
						action="#{mainWindow.dictionaries}.performDelete;" />
				</group>
			</ribbon>				
			<component type="grid" name="dictionaries">
				<option type="column" name="name" fields="name" />
				<option type="header" value="false" />
				<option type="searchable" value="name" />
				<option type="orderable" value="name" />
				<option type="paginable" value="true" />
				<option type="multiselect" value="false" />
				<option type="correspondingView" value="dictionaries/dictionaryDetailsView" />
				<option type="deletable" value="false" />
				<option type="creatable" value="false" />
				<option type="fullScreen" value="true" />
			</component>
			<option type="backButton" value="false" />
			<option type="fixedHeight" value="true" />
		</component>
	</view>
	<view name="dictionaryDetailsView" model="dictionary">
		<component type="window" name="mainWindow">		
			<component type="grid" name="dictionaries" source="dictionaryItems">
				<option type="column" name="name" fields="name" />
				<option type="column" name="description" fields="description" />
				<option type="header" value="false" />
				<option type="paginable" value="false" />
				<option type="multiselect" value="true" />
				<option type="height" value="250" />
				<option type="correspondingView" value="dictionaries/dictionaryItemDetailsView" />
				<option type="deletable" value="true" />
				<option type="creatable" value="true" />
			</component>
		</component>
	</view>
	<view name="dictionaryItemDetailsView" model="dictionaryItem">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save"
						action="#{mainWindow.dictionaryItemDetailsForm}.performSave;" />
					<bigButtons name="saveBack"
						action="#{mainWindow.dictionaryItemDetailsForm}.performSave; #{mainWindow}.performBack">
						<bigButton name="saveNew"
							action="#{mainWindow.dictionaryItemDetailsForm}.performSave; #{mainWindow}.performNew;" />
					</bigButtons>
					<smallButton name="cancel"
						action="#{mainWindow.dictionaryItemDetailsForm}.performCancel;" />
					<smallButtons name="delete" icon="icon2"
						action="#{mainWindow.dictionaryItemDetailsForm}.performDelete; #{mainWindow}.performBack">
						<smallButton name="deleteNew"
							action="#{mainWindow.productDetailsForm}.performDelete; #{mainWindow}.performNew;" />
					</smallButtons>
				</group>
			</ribbon>		
			<component type="form" name="dictionaryItemDetailsForm">
				<component type="textarea" name="name" field="name" />
				<component type="textarea" name="description" field="description" /> <!-- type:description -->
				<option type="header" value="false" />
			</component>
		</component>
	</view>
</qcd:views>