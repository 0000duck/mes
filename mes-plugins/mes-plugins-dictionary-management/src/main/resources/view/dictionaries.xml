<qcd:views plugin="dictionaries" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="dictionaries" model="dictionary" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
			</ribbon>				
			<component type="grid" name="dictionaries">
				<option type="column" name="name" fields="name" link="true" />
				<option type="order" column="name" direction="asc"/>
				<option type="searchable" value="name" />
				<option type="orderable" value="name" />
				<option type="paginable" value="true" />
				<option type="correspondingView" value="dictionaries/dictionary" />
				<option type="correspondingComponent" value="form" />
				<option type="deletable" value="false" />
				<option type="creatable" value="false" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="dictionary" model="dictionary">
		<component type="window" name="window">
			<ribbon>
				<group template="navigation"/>
				<group template="gridNewCopyAndRemoveAction"/>
			</ribbon>
			<component type="form" reference="form" name="dictionary">
				<option type="header" value="true" />
				<option type="expression" value="#name" />
			</component>	
			<component type="gridLayout" name="gridLayout" columns="3" rows="8">
				<layoutElement column="1" row="1" height="8">
					<component type="grid" name="dictionaryItems" reference="grid" source="#{form}.dictionaryItems">
						<option type="column" name="name" fields="name" link="true"/>
						<option type="column" name="description" fields="description" />
						<option type="order" column="name" direction="asc"/>
						<option type="paginable" value="false" />
						<option type="height" value="250" />
						<option type="correspondingView" value="dictionaries/dictionaryItem" />
						<option type="correspondingComponent" value="form" />
						<option type="deletable" value="false" />
						<option type="creatable" value="false" />
					</component>
				</layoutElement>
			</component>
		</component>
	</view>
	<view name="dictionaryItem" model="dictionaryItem">
		<component type="window" name="window">
			<ribbon>
				<group template="navigation"/>
				<group template="formSaveCopyAndRemoveActions"/>
			</ribbon>		
			<component type="form" name="dictionaryItem" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="4">
					<layoutElement column="1" row="1" height="2">
						<component type="textarea" name="name" field="name" />
					</layoutElement>
					<layoutElement column="1" row="3" height="2">
						<component type="textarea" name="description" field="description" />
					</layoutElement>
				</component>
				<option type="header" value="true" />
				<option type="expression" value="#name + ' (' + #dictionary[name] + ')'"/>
			</component>
		</component>
	</view>
</qcd:views>