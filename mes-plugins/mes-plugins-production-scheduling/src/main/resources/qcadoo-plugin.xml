<plugin plugin="productionScheduling" version="0.4.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/report
       http://schema.qcadoo.org/modules/report.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Production Scheduling</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>orders</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="tpz" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="tj" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:enum values="01all,02specified" name="countRealized"
				default="01all" required="true"/>
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:decimal name="countMachine" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="timeNextOperation" />
		</model:model-field>
		<model:model-field plugin="orders"
			model="order">
			<model:integer name="realizationTime" />
		</model:model-field>
		<model:model-field plugin="orders"
			model="order">
			<model:string name="alert" />
		</model:model-field>
		<model:model-field plugin="orders"
			model="order">
			<model:boolean name="calculate" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="tpz" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="tj" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:decimal name="countMachineOperation">
				<model:validatesLength max="7" />
				<model:validatesPrecision max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:enum values="01all,02specified" name="countRealizedOperation"
				default="01all" required="true"/>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="timeNextOperation" />
		</model:model-field>
				
		<view:view-hook view="operationDetails" type="beforeRender" plugin="technologies" 
			class="com.qcadoo.mes.productionScheduling.OperationService" method="updateCountMachineOperationFieldStateonWindowLoad"/>
			
		<view:view-hook view="technologyOperationComponentDetails" type="beforeRender" plugin="technologies" class="com.qcadoo.mes.productionScheduling.NormService"
			 method="updateCountMachineOperationFieldStateonWindowLoad"/>
			 
		<view:view-hook view="technologyOperationComponentDetails" type="beforeRender" plugin="technologies" class="com.qcadoo.mes.productionScheduling.NormService" 
		method="updateFieldsStateOnWindowLoad"/>
		
		<view:view-hook view="operationDetails" type="beforeRender" plugin="technologies" class="com.qcadoo.mes.productionScheduling.OperationService" 
		method="setCountRealizedOperationValue"/>
		
		<view:view-hook view="orderDetails" type="beforeRender" plugin="orders" class="com.qcadoo.mes.productionScheduling.TimeTechnologyInOrderService" method="setVisibleAlert"/>
		
		<view:view-hook view="orderTimePrediction" type="beforeRender" plugin="productionScheduling" class="com.qcadoo.mes.productionScheduling.OrderTimePredictionService" 
			method="setFieldDisable"/>

		<view:view-tab resource="view/tabExtensions/operationComponent.xml" />
		<view:view-tab resource="view/tabExtensions/operationDetails.xml" />
		<view:view-tab resource="view/tabExtensions/orderDetails.xml" />
		
		<view:view-grid-column plugin="orders" view="ordersList" component="grid">
			<view:column name="realizationTime" fields="realizationTime" orderable="true" searchable="false" width="30" link="false" />
		</view:view-grid-column>
		
		<model:model model="shift" resource="model/shift.xml" />
		<model:model model="shiftTimetableException" resource="model/shiftTimetableException.xml" />

		<view:view resource="view/shiftsList.xml" />
		<view:view resource="view/shiftDetail.xml" />
		<view:view resource="view/shiftTimetableExceptionDetail.xml" />
		<view:view resource="view/ganttShiftCalendar.xml" />
		<view:view resource="view/ganttOrdersCalendar.xml" />
		<view:view resource="view/orderTimePrediction.xml"/>
		
		<menu:menu-item name="shiftsList" category="basic"
			view="shiftsList" />
			
		<menu:menu-item view="orderTimePrediction" name="orderTimePrediction" category="orders"/>

		<view:view-ribbon-group resource="view/ribbonExtensions/ordersList.xml" />
		<view:view-ribbon-group resource="view/ribbonExtensions/orderDetails.xml" />
		<view:view-ribbon-group resource="view/ribbonExtensions/operationComponent.xml" />
		<view:view-listener plugin="orders" view="ordersList"
			component="window" event="showGanttOrdersCalendar"
			class="com.qcadoo.mes.productionScheduling.ShiftsService" method="showGanttOrdersCalendar" />

		<model:model model="orderOperationComponent" resource="model/orderOperationComponent.xml" />

		<model:model-hook plugin="orders" model="order">
			<model:onSave class="com.qcadoo.mes.productionScheduling.NormOrderService"
				method="createTechnologyInstanceForOrder" />
		</model:model-hook>

		<model:model-field plugin="orders" model="order">
			<model:tree name="orderOperationComponents" plugin="productionScheduling" 
			model="orderOperationComponent" joinField="order" cascade="delete">
			</model:tree>
		</model:model-field>
		
		<view:view-listener plugin="orders"
			view="orderDetails" component="form" event="showOrderParameters"
			class="com.qcadoo.mes.productionScheduling.NormOrderService" method="showOrderParameters" />
			
		<view:view-listener plugin="orders"
			view="orderDetails" component="form" event="showOperationsGantt"
			class="com.qcadoo.mes.productionScheduling.NormOrderService" method="showOperationsGantt" />

		<view:view resource="view/orderOperationComponentList.xml" />
		<view:view resource="view/orderOperationComponentDetails.xml" />
		<view:view resource="view/ganttOrderOperationsCalendar.xml" />
		<view:view resource="view/timeTechnologyInOrderDetails.xml"/>
		
		<view:view-listener plugin="productionScheduling"
			view="timeTechnologyInOrderDetails" component="form" event="changeRealizationTime"
			class="com.qcadoo.mes.productionScheduling.TimeTechnologyInOrderService" method="changeRealizationTime" />
			
		<view:view-listener plugin="productionScheduling"
			view="orderTimePrediction" component="window" event="countTimeOfTechnology"
			class="com.qcadoo.mes.productionScheduling.OrderTimePredictionService" method="changeRealizationTime" />
		
		<view:view-listener plugin="productionScheduling"
			view="orderTimePrediction" component="window" event="clearAllField"
			class="com.qcadoo.mes.productionScheduling.OrderTimePredictionService" method="clearAllField" />
			
		<view:view-listener plugin="technologies" 
			view="technologyOperationComponentDetails" component="operation" event="copyNormFromOperation"
			class="com.qcadoo.mes.productionScheduling.NormService" method="copyNormFromOperation" />
			
		<view:view-hook view="orderDetails" type="beforeRender" plugin="orders" class="com.qcadoo.mes.productionScheduling.TimeTechnologyInOrderService"
			 method="disableRealizationTime"/>
			
	</modules>
</plugin>