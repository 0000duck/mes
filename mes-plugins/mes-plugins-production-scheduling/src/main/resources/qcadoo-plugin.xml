<plugin plugin="productionScheduling" version="0.4.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/report
       http://schema.qcadoo.org/modules/report.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Production Scheduling</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>orders</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<model:model model="machineInOperationComponent" resource="model/machineInOperationComponent.xml" />
		<model:model model="machineInOperation" resource="model/machineInOperation.xml" />

		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:boolean name="useDefaultValue" default="false" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="tpz" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="tj" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:boolean name="useMachineNorm" default="true" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:enum values="01all,02specified" name="countRealizedNorm"
				default="01all" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:decimal name="countMachineNorm" />
		</model:model-field>
		<model:model-field plugin="technologies"
			model="technologyOperationComponent">
			<model:integer name="timeNextOperationNorm" readonly="true" />
		</model:model-field>


		<model:model-field plugin="technologies" model="operation">
			<model:hasMany name="machineInOperation"  plugin="productionScheduling" 
			model="machineInOperation"  joinField="operationComponent">
			</model:hasMany>
		</model:model-field>

		<model:model-field plugin="technologies" model="technologyOperationComponent">
			<model:hasMany name="machineInOperationComponent" plugin="productionScheduling"
				model="machineInOperationComponent" joinField="operationComponent">
			</model:hasMany>
		</model:model-field>


		<model:model-hook plugin="technologies"
			model="technologyOperationComponent">
			<model:onSave class="com.qcadoo.mes.productionScheduling.NormService"
				method="copyDefaultDataToOperationComponent" />
		</model:model-hook>

		<model:model-hook model="technologyOperationComponent"
			plugin="technologies">
			<model:validatesWith
				class="com.qcadoo.mes.productionScheduling.OperationService" method="checkMachineInOperationComponentUniqueness" />
		</model:model-hook>


		<model:model-field plugin="basic" model="machine">
			<model:boolean name="ofMachine" default="true" />
		</model:model-field>
		<model:model-field plugin="basic" model="machine">
			<model:integer name="tpz" />
		</model:model-field>
		<model:model-field plugin="basic" model="machine">
			<model:integer name="tj" />
		</model:model-field>
		<model:model-field plugin="basic" model="machine">
			<model:integer name="parallel">
				<model:validatesLength max="7" />
				<model:validatesPrecision max="3" />
			</model:integer>
		</model:model-field>

		<model:model-field plugin="technologies" model="operation">
			<model:integer name="tpz" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="tj" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="countMachineOperation">
				<model:validatesLength max="7" />
				<model:validatesPrecision max="3" />
			</model:integer>
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:enum values="01all,02specified" name="countRealizedOperation"
				default="01all" />
		</model:model-field>
		<model:model-field plugin="technologies" model="operation">
			<model:integer name="timeNextOperation" />
		</model:model-field>


		<view:view-tab resource="view/tabExtensions/operationComponent.xml" />
		<view:view-tab resource="view/tabExtensions/machineDetails.xml" />
		<view:view-tab resource="view/tabExtensions/operationDetails.xml" />

		<model:model model="shift" resource="model/shift.xml" />
		<model:model model="shiftTimetableException" resource="model/shiftTimetableException.xml" />

		<view:view resource="view/shiftsList.xml" />
		<view:view resource="view/shiftDetail.xml" />
		<view:view resource="view/shiftTimetableExceptionDetail.xml" />
		<view:view resource="view/machineInOperationComponentDetails.xml" />
		<view:view resource="view/machineInOperationDetails.xml" />
		<view:view resource="view/ganttShiftCalendar.xml" />
		<view:view resource="view/ganttOrdersCalendar.xml" />

		<menu:menu-item name="shiftsList" category="basic"
			view="shiftsList" />

		<view:view-ribbon-group resource="view/ribbonExtensions/ordersList.xml" />
		<view:view-listener plugin="orders" view="ordersList"
			component="window" event="showGanttOrdersCalendar"
			class="com.qcadoo.mes.productionScheduling.ShiftsService" method="showGanttOrdersCalendar" />


		<menu:menu-item name="shiftsList" category="administration"
			view="shiftsList" />

		<!-- UNCOMMENT TO SEE TEST GANTT VIEW -->

		<!-- <view:view resource="view/testGantt.xml" /> <menu:menu-item name="testGantt" 
			category="orders" view="testGantt" /> -->


	</modules>
</plugin>