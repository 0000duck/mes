<model name="orderOperationComponent" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<belongsTo name="order" plugin="orders" model="order" required="true" />
		<belongsTo name="technology" plugin="technologies" model="technology" required="true" />
		<belongsTo name="operation" plugin="technologies" model="operation" required="true" />
		<belongsTo name="technologyOperationComponent" plugin="technologies" model="technologyOperationComponent" required="true" />
		<belongsTo name="parent" model="orderOperationComponent" />
		<enum name="entityType" values="operation" required="true" default="operation" />	
		<hasMany name="children" model="orderOperationComponent" joinField="parent" cascade="delete" copyable="true" />
		<priority name="priority" scope="parent" />
		<boolean name="useDefaultValue" default="true" />
		<integer name="tpz" />
		<string name="parentTpz" persistent="false" />
		<integer name="tj" />
		<string name="parentTj" persistent="false" />
		<boolean name="useMachineNorm" default="true" />
		<string name="parentUseMachineNorm" persistent="false" />
		<enum name="countRealized" values="01all,02specified" default="01all" />
		<string name="parentCountRealized" persistent="false" />
		<decimal name="countMachine" />
		<string name="parentCountMachine" persistent="false" />
		<integer name="timeNextOperation" />
		<string name="parentTimeNextOperation" persistent="false" />
		<integer name="operationOffSet" />
		<integer name="effectiveOperationRealizationTime" />
		<datetime name="effectiveDateFrom" />
		<datetime name="effectiveDateTo" />
		<hasMany name="machineInOrderOperationComponents" model="machineInOrderOperationComponent" joinField="orderOperationComponent" cascade="delete" />
	</fields>
	<hooks>
		<validatesWith class="com.qcadoo.mes.productionScheduling.NormOrderService"
			method="checkOperationRequiredFields" />
	</hooks>
</model>