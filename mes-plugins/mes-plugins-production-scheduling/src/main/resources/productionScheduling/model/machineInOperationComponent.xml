<model name="machineInOperationComponent" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<boolean name="useDefaultValue" required="true" default="true"/>
		<integer name="tpz" />
		<integer name="tj" />
		<decimal name="parallel" default="1" />
		<boolean name="activeMachine" default="true"/>
		<belongsTo name="machine" plugin="basic" model="machine" required="true" />
		<belongsTo name="operationComponent" plugin="technologies"
			model="technologyOperationComponent" required="true" />
	</fields>
	<hooks>
		<validatesWith class="com.qcadoo.mes.productionScheduling.OperationService"
			method="checkMachineInOperationComponentUniqueness" />
		
	</hooks>
</model>