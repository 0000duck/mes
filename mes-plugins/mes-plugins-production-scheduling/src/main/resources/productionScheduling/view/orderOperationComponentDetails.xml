<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="orderOperationComponentDetails" modelName="orderOperationComponent">

	<component type="window" name="window">
		<ribbon>
			<template name="standardFormTemplate" />
		</ribbon>
		<windowTab name="norm" reference="norm">
			<component type="form" name="orderOperationComponent" reference="form">
				<component type="gridLayout" name="gridsLayout" columns="2" rows="5" >
					<layoutElement column="1" row="1">
						<component type="time" name="tpz" field="#{form}.tpz" reference="tpz"/>
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="time" name="tj" field="#{form}.tj" reference="tj"/>
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="select" name="countRealized" field="#{form}.countRealized" reference="countRealized" hasDescription="true">
							<listener event="onSelectedEntityChange" class="com.qcadoo.mes.productionScheduling.NormOrderService"
									method="changeCountRealized" />
						</component>
					</layoutElement>
					<layoutElement column="1" row="4">
						<component type="input" name="countMachine" field="#{form}.countMachine" reference="countMachine" hasDescription="true" />
					</layoutElement>
					<layoutElement column="1" row="5">
						<component type="time" name="timeNextOperation" field="#{form}.timeNextOperation" reference="timeNextOperation" hasDescription="true" />
					</layoutElement>
				</component>
				<option type="header" value="true"/>
				<option type="expression" value="#operation['number'] + ' - ' + #operation['name'] + ' @productionScheduling.orderOperationComponentDetails.headerEdit ' + #order['number'] + ' - ' + #order['name'] " />
				<option type="expressionNew" value="#operation['number'] + ' - ' + #operation['name']" />
			</component>
		</windowTab>
	</component>
	
	<hooks>
		<beforeRender class="com.qcadoo.mes.productionScheduling.NormOrderService" method="disableComponents" />
	</hooks>

</view>