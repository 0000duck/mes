<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="orderOperationComponentDetails" modelName="orderOperationComponent">

	<component type="window" name="window">
		<ribbon>
			<template name="standardFormTemplate" />
		</ribbon>
		<windowTab name="norm" reference="norm">
			<component type="form" name="orderOperationComponent"
				reference="form">
				<component type="gridLayout" name="gridsLayout" columns="3"
					rows="4">
					<layoutElement column="1" row="1">
						<component type="time" name="tpz" field="#{form}.tpz"
							reference="tpz" />
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="time" name="tj" field="#{form}.tj"
							reference="tj" />
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="gridLayout" name="gridsLayoutUnit1"
							columns="4" rows="1" hasBorders="false">
							<layoutElement column="1" row="1" width="3">
								<component type="input" name="productionInOneCycle"
									field="#{form}.productionInOneCycle" reference="productionInOneCycle"
									defaultEnabled="true">
									<option type="labelWidth" value="40" />
								</component>
							</layoutElement>
							<layoutElement column="4" row="1" width="1">
								<component type="input" name="productionInOneCycleUNIT"
									defaultEnabled="false" hasLabel="false" reference="productionInOneCycleUNIT" />
							</layoutElement>
						</component>
					</layoutElement>
					<layoutElement column="1" row="4">
						<component type="time" name="timeNextOperation" field="#{form}.timeNextOperation"
							reference="timeNextOperation" hasDescription="true" />
					</layoutElement>
					<layoutElement column="2" row="1">
						<component type="input" name="machineUtilization" field="machineUtilization"
							reference="machineUtilization" />
					</layoutElement>
					<layoutElement column="2" row="2">
						<component type="input" name="laborUtilization" field="laborUtilization"
							reference="laborUtilization" />
					</layoutElement>
					<layoutElement column="2" row="3">
						<component type="select" name="countRealized" field="#{form}.countRealized"
							reference="countRealized" hasDescription="true">
							<listener event="onSelectedEntityChange"
								class="com.qcadoo.mes.productionScheduling.NormOrderService"
								method="changeCountRealized" />
						</component>
					</layoutElement>
					<layoutElement column="2" row="4">
						<component type="gridLayout" name="gridsLayoutUnit2"
							columns="4" rows="1" hasBorders="false">
							<layoutElement column="1" row="1" width="3">
								<component type="input" name="countMachine" field="#{form}.countMachine"
									reference="countMachine" hasDescription="true" defaultEnabled="false">
									<option type="labelWidth" value="40" />
								</component>
							</layoutElement>
							<layoutElement column="4" row="1" width="1">
								<component type="input" name="countMachineUNIT"
									defaultEnabled="false" defaultVisible="false" hasLabel="false"
									reference="countMachineUNIT" />
							</layoutElement>
						</component>
					</layoutElement>
				</component>
				<option type="header" value="true" />
				<option type="expression"
					value="#operation['number'] + ' - ' + #operation['name'] + ' @productionScheduling.orderOperationComponentDetails.headerEdit ' + #order['number'] + ' - ' + #order['name'] " />
				<option type="expressionNew"
					value="#operation['number'] + ' - ' + #operation['name']" />
			</component>
		</windowTab>
	</component>
	<hooks>
		<beforeRender class="com.qcadoo.mes.productionScheduling.NormOrderService"
			method="disableComponents" />
		<beforeRender class="com.qcadoo.mes.productionScheduling.NormOrderService"
			method="fillUnitFields" />
	</hooks>
</view>