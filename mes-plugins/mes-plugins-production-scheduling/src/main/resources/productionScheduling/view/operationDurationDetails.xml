<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="operationDurationDetails" modelPlugin="orders" modelName="order"
	windowWidth="640" windowHeight="500">

	<component type="window" name="window">
		<ribbon>
			<group name="navigation">
				<bigButton name="back" action="#{window}.closeThisModalWindow;" icon="backIcon24.png"/>
			</group>
			<group name="action">
				<bigButton name="save" icon="saveIcon24.png" state="enabled" action="#{form}.performSave;" />
			</group>
			<group name="operationDuration">
				<bigButton name="generate" icon="pdfIcon24.png" action="#{form}.generateReportForEntity('orders','order','pdf')" />
				<bigButton name="copy" icon="copyIcon24.png" state="disabled" action="#{form}.performCopy;">
				<script><![CDATA[
				#{form}.addOnChangeListener({
					onSetValue: function(value) {
						if (!value || !value.content)
							return; 
						if (value.content.entityId) {
							this.enable();
						} else {
							this.disable();
						}
					}
				});
			]]></script>
			</bigButton>
			</group>
		<group name="orderGantt">
		<bigButton name="operationsGantt" icon="calendarIcon24.png" state="disabled">
			<script>
				<![CDATA[
					this.addOnChangeListener({
						onClick: function() {
							if(window.canClose()) {
								#{form}.performEvent('showOperationsGantt', []);
							}
						}
					});	
						
					#{form}.addOnChangeListener({
						onSetValue: function(value) {
							if (! value || ! value.content) {
								return;
							}
							if (! value.content.entityId) {
								this.disable();
							} else {
								this.enable();
							}
						}
					});					
				]]>
			</script>	
		</bigButton>
	</group>
	<group name="orderParameters">
		<bigButton name="orderParameters" icon="settingsIcon24.png" state="disabled">
			<script>
				<![CDATA[
					this.addOnChangeListener({
						onClick: function() {
								if(window.canClose()) {
									#{form}.performEvent('showOrderParameters', []);
								}
						}
					});		
					#{form}.addOnChangeListener({
						onSetValue: function(value) {
							if (! value || ! value.content) {
								return;
							}
							if (! value.content.entityId) {
								this.disable();
							} else {
								this.enable();
							}
						}
					});					
				]]>
			</script>	
		</bigButton>
	</group>
		</ribbon>
		<component type="form" name="form" reference="form">
			<component type="gridLayout" name="gridsLayout" columns="3"
				rows="7">
				<layoutElement column="1" row="1">
					<component type="calendar" name="startTime" reference="startTime"
						field="dateFrom">
						<option type="withTimePicker" value="true" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="2">
					<component type="calendar" name="stopTime" reference="stopTime"
						field="dateTo">
						<option type="withTimePicker" value="true" />
						<listener event="initialize"
							class="com.qcadoo.mes.productionScheduling.TimeTechnologyInOrderService"
							method="clearFieldValue" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="3">
					<component type="input" name="quantity" reference="quantity"
						field="plannedQuantity">
						<option type="alignment" value="right" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="4">
						<component type="lookup" name="productionLine" reference="productionLine"
							field="productionLine">
							<option type="column" name="name" fields="name" link="true"
								width="300" />
							<option type="searchable" value="name,number" />
							<option type="orderable" value="name,number" />
							<option type="expression"
								value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name" />
							<option type="fieldCode" value="number" />
						</component>
				</layoutElement>
				<layoutElement column="1" row="5">
						<component type="calendar" name="deadline"
							reference="deadline">
							<option type="labelWidth" value="50" />
							<option type="withTimePicker" value="true" />
						</component>
				</layoutElement>	
				<layoutElement column="1" row="6">
					<component type="time" name="realizationTime" reference="realizationTime"
						field="realizationTime">
						<option type="noHours" value="5"/>
						<listener event="initialize"
							class="com.qcadoo.mes.productionScheduling.TimeTechnologyInOrderService"
							method="clearFieldValue" />
					</component>
				</layoutElement>
		<layoutElement column="2" row="1" height="6" width="2">
		<component type="gridLayout" name="technologyGridLayout" columns="1" rows="1">
			<layoutElement column="1" row="1">
				<component type="grid" name="operations" reference="grid" fields="orderOperationComponent">
					<option type="column" name="number" fields="number" link="true" />
					<option type="column" name="name" fields="name" link="true"
						width="200" />
					<option type="column" name="dateFrom" fields="dateFrom" link="true"/>
					<option type="column" name="dateTo" fields="dateTo" link="true" />
					<option type="order" column="number" direction="asc" />
					<option type="correspondingView" value="technologies/operationDetails" />
					<option type="correspondingComponent" value="form" />
					<option type="searchable" value="number, name" />
					<option type="orderable" value="number, name" />
					<option type="fullscreen" value="true" />
					<option type="multiselect" value="true" />
				</component>
			</layoutElement>
		</component>
		</layoutElement>
	</component>
			<option type="header" value="true" />
			<option type="expression" value=""/>
		</component>
	</component>
</view>