<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="timeTechnologyInOrderDetails" modelName="timeTechnologyInOrder"
	windowWidth="640"
	windowHeight = "350"
	>

	<component type="window" name="window">
		<ribbon>
			<template name="standardFormTemplate" />
			 <group name="timeOfTechnology"> 
			 	<bigButton name="countTimeOfTechnology" icon="calculateTimeIcon24.png" 
					action="#{form}.fireEvent(changeRealizationTime);"  /> 
				<bigButton name="copyDateToMainForm"  
					action="#{form}.fireEvent(copyDateToMainForm);" />
			 </group> 
		</ribbon>
		<component type="form" name="form" reference="form">
			<component type="gridLayout" name="gridsLayout" columns="1"
				rows="4">
				<layoutElement column="1" row="1">
					<component type="input" name="quantity" field="quantity" reference="quantity" />
				</layoutElement>
				<layoutElement column="1" row="2">
					<component type="calendar" name="startTime" field="startTime" 
						reference="startTime" >
						<option type="withTimePicker" value="true" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="3">
					<component type="time" name="realizationTime" field="realizationTime"
						reference="realizationTime" />
				</layoutElement>
				<layoutElement column="1" row="4">
					<component type="calendar" name="stopTime" field="stopTime"
						reference="stopTime" >
						<option type="withTimePicker" value="true" />
					</component>
				</layoutElement>
			</component>
		</component>
	</component>
</view>