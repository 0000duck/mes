<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
	xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
	name="machineInOperationComponentDetails" modelName="machineInOperationComponent">

	<component type="window" name="window">
		<ribbon>
			<template name="standardFormTemplate" />
		</ribbon>
		<component type="form" name="machineInOperationComponent"
			reference="form">

			<component type="gridLayout" name="gridLayout" columns="1"
				rows="6">
				<layoutElement column="1" row="1">
					<component type="lookup" name="machine" field="machine"
						reference="machine">
						<option type="column" name="name" fields="name" link="true"
							width="200" />
						<option type="searchable" value="name" />
						<option type="orderable" value="name" />
						<option type="expression"
							value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name" />
						<option type="fieldCode" value="number" />
						<listener event="onSelectedEntityChange"
							class="com.qcadoo.mes.productionScheduling.OperationService" method="selectMachineInOperationComponent" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="2">
					<component type="checkbox" name="useDefaultValue" field="useDefaultValue" reference="useDefaultValue" defaultEnabled="true">
						<listener event="onChange"
							class="com.qcadoo.mes.productionScheduling.OperationService"
							method="updateFieldsStateWhenDefaultValueCheckboxChanged" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="3">
					<component type="time" name="tpz" field="tpz" reference="tpz" defaultEnabled="false"/>
				</layoutElement>
				<layoutElement column="1" row="4">
					<component type="time" name="tj" field="tj" reference="tj" defaultEnabled="false"/>
				</layoutElement>
				<layoutElement column="1" row="5">
					<component type="input" name="parallel" field="parallel"
						reference="parallel" defaultEnabled="false">
						<validatesLength max="7" />
						<validatesPrecision max="3"/>
					</component>
				</layoutElement>
				<layoutElement column="1" row="6">
					<component type="checkbox" name="activeMachine" field="activeMachine"
						reference="activeMachine" defaultEnabled="false" />
				</layoutElement>
			</component>
		</component>
	</component>
	<hooks>
		<beforeRender class="com.qcadoo.mes.productionScheduling.OperationService" method="updateFieldsStateOnWindowLoad" />
	</hooks>

</view>