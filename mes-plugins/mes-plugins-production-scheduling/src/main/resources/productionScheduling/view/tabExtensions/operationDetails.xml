<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
    xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
    plugin="technologies"
    view="operationDetails">
	
	<windowTab name="norm" reference="norm">
		<component type="gridLayout" name="gridsLayout" columns="3"
				rows="5" >
				<layoutElement column="1" row="1">
					<component type="time" name="tpz" field="#{form}.tpz" reference="tpz" />
				</layoutElement>
				<layoutElement column="1" row="2">
					<component type="time" name="tj" field="#{form}.tj" reference="tj" />
				</layoutElement>
				<layoutElement column="1" row="3">
					<component type="select" name="countRealizedOperation" field="#{form}.countRealizedOperation" reference="countRealizedOperation" hasDescription="true" > 
						<listener event="onSelectedEntityChange" class="com.qcadoo.mes.productionScheduling.OperationService"
								method="changeCountRealizedOperation" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="4">
					<component type="input" name="countMachineOperation" field="#{form}.countMachineOperation" reference="countMachineOperation" hasDescription="true" defaultEnabled="false">
						<validatesLength max="7" />
						<validatesPrecision max="3"/>
					</component>
				</layoutElement>
				<layoutElement column="1" row="5">
					<component type="time" name="timeNextOperation" field="#{form}.timeNextOperation" reference="timeNextOperation" hasDescription="true" />
				</layoutElement>
				
				<layoutElement column="2" row="1" height="5">
					<component type="grid" name="machine" source="#{form}.machineInOperation">
						<option type="column" name="numberMachine" field="machine"
							expression="#machine['number']" link="true" width="50"/>
						<option type="column" name="nameMachine" field="machine"
							expression="#machine['name']" link="true" width="50"/>
						<option type="order" column="numberMachine" direction="desc" />
						<option type="searchable" value="numberMachine, nameMachine" />
						<option type="orderable" value="numberMachine, nameMachine" />
						<option type="correspondingView" value="productionScheduling/machineInOperationDetails" />
						<option type="correspondingComponent" value="form" />
						<option type="correspondingViewInModal" value="true"/>
						<option type="deletable" value="true" />
						<option type="creatable" value="true" />
						<option type="multiselect" value="true" /> 
					</component>
				</layoutElement>
		</component>
	</windowTab>
</windowTabExtension>