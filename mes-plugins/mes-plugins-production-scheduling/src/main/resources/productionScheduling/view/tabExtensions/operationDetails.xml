<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
    xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
    plugin="technologies"
    view="operationDetails">
	
	<windowTab name="norm" reference="norm">
		<component type="gridLayout" name="gridsLayout" columns="3"
				rows="5" >
				<layoutElement column="1" row="1">
					<component type="input" name="tpzOperation" field="tpzOperation" reference="tpzOperation" />
				</layoutElement>
				<layoutElement column="1" row="2">
					<component type="input" name="tjOperation" field="tjOperation" reference="tjOperation" />
				</layoutElement>
				<layoutElement column="1" row="3">
					<component type="select" name="countRealizedOperation" field="countRealizedOperation" reference="countRealizedOperation" hasDescription="true" />
				</layoutElement>
				<layoutElement column="1" row="4">
					<component type="input" name="countMachineOperation" field="countMachineOperation" reference="countMachineOperation" hasDescription="true"/>
				</layoutElement>
				<layoutElement column="1" row="5">
					<component type="input" name="timeNextOperation" field="timeNextOperation" reference="timeNextOperation" hasDescription="true" />
				</layoutElement>
		</component>
	</windowTab>
</windowTabExtension>