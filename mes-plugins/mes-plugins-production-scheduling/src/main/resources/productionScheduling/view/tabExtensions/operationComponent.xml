<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
    xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
    plugin="technologies"
    view="technologyOperationComponentDetails"
    >
	
	<windowTab name="norm" reference="norm">
		<component type="gridLayout" name="gridsLayout" columns="1"
				rows="8" >
				<layoutElement column="1" row="1">
					<component type="checkbox" name="enableNorm" field="#{form}.enableNorm" reference="enableNorm" defaultEnabled="true" >
						<listener event="onChange" class="com.qcadoo.mes.productionScheduling.NormService"
								method="changeEnableNorm" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="2">
					<component type="input" name="tpzNorm" field="#{form}.tpzNorm" reference="tpzNorm" defaultEnabled="false"/>
				</layoutElement>
				<layoutElement column="1" row="3">
					<component type="input" name="tjNorm" field="#{form}.tjNorm" reference="tjNorm" defaultEnabled="false"/>
				</layoutElement>
				<layoutElement column="1" row="4">
					<component type="checkbox" name="changeNorm" field="#{form}.changeNorm" reference="changeNorm" defaultEnabled="false"/>
				</layoutElement>
				<layoutElement column="1" row="5">
					<component type="select" name="countRealizedNorm" field="#{form}.countRealizedNorm" reference="countRealizedNorm" hasDescription="true" defaultEnabled="false">
						<listener event="onSelectedEntityChange" class="com.qcadoo.mes.productionScheduling.NormService"
								method="changeCountRealizedNorm" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="6">
					<component type="input" name="countMachineNorm" field="#{form}.countMachineNorm" reference="countMachineNorm"  hasDescription="true" defaultEnabled="false"/>
				</layoutElement>
				<layoutElement column="1" row="7">
					<component type="input" name="timeNextOperationNorm" field="#{form}.timeNextOperationNorm" reference="timeNextOperationNorm" 
						hasDescription="true" defaultEnabled="false"/>
				</layoutElement>
				<layoutElement column="1" row="8">
				
				<component type="grid" name="machine" reference="machine" source="#{form}.machineInOperation">
						<option type="column" name="numberMachine" field="machine"
							expression="#machine['number']" link="true" width="50"/>
						<option type="column" name="nameMachine" field="machine"
							expression="#machine['name']" link="true" width="50"/>
						<option type="order" column="numberMachine" direction="desc" />
						<option type="searchable" value="numberMachine, nameMachine" />
						<option type="orderable" value="numberMachine, nameMachine" />
						<option type="correspondingView" value="productionScheduling/machineInOperationDetails" />
						<option type="correspondingComponent" value="form" />
						<option type="deletable" value="true" />
						<option type="creatable" value="true" />
						<option type="multiselect" value="true" /> 
					</component>
				</layoutElement>
		</component>
	</windowTab>
</windowTabExtension>