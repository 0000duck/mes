<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
	xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
	plugin="technologies" view="technologyOperationComponentDetails">

	<windowTab name="norm" reference="norm">
		<component type="gridLayout" name="gridsLayout" columns="1"
			rows="6">
			<layoutElement column="1" row="1">
				<component type="checkbox" name="useDefaultValue" field="#{form}.useDefaultValue"
					reference="useDefaultValue" defaultEnabled="true" hasDescription="true">
					<listener event="onChange"
						class="com.qcadoo.mes.productionScheduling.NormService" method="updateFieldsStateWhenDefaultValueCheckboxChanged" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="2">
				<component type="time" name="tpz" field="#{form}.tpz"
					reference="tpz" defaultEnabled="false" />
			</layoutElement>
			<layoutElement column="1" row="3">
				<component type="time" name="tj" field="#{form}.tj"
					reference="tj" defaultEnabled="false" />
			</layoutElement>
			<layoutElement column="1" row="4">
				<component type="select" name="countRealizedNorm" field="#{form}.countRealizedNorm"
					reference="countRealizedNorm" hasDescription="true" defaultEnabled="false">
					<option type="required" value="true" />
					<listener event="onSelectedEntityChange"
						class="com.qcadoo.mes.productionScheduling.NormService" method="changeCountRealizedNorm" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="5">
				<component type="input" name="countMachineNorm" field="#{form}.countMachineNorm"
					reference="countMachineNorm" hasDescription="true" defaultEnabled="false" >
					<validatesLength max="7" />
					<validatesPrecision max="3" />
				</component>
			</layoutElement>
			<layoutElement column="1" row="6">
				<component type="time" name="timeNextOperationNorm"
					field="#{form}.timeNextOperationNorm" reference="timeNextOperationNorm"
					hasDescription="true" defaultEnabled="false" />
			</layoutElement>
		</component>
	</windowTab>
</windowTabExtension>