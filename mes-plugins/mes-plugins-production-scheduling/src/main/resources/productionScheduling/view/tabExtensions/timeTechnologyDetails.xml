<windowTabExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schema.qcadoo.org/modules/windowTabExtension"
	xsi:schemaLocation="http://schema.qcadoo.org/modules/windowTabExtension http://schema.qcadoo.org/modules/windowTabExtension.xsd"
	plugin="technologies" view="technologyDetails"
	
	>

	<windowTab name="timeOfTechnology" reference="timeOfTechnology">
		<ribbon>
			<group name="timeOfTechnology">
				<bigButton name="countTimeOfTechnology" icon="calculateTimeIcon24.png"
					action="#{form}.fireEvent(countTimeOfTechnology);" />
			</group>
		</ribbon>
		<component type="gridLayout" name="gridsLayout" columns="3"
				rows="7" >
				<layoutElement column="1" row="1">
					<component type="input" name="quantity" field="#{form}.quantity" reference="quantity" />
				</layoutElement>
				<layoutElement column="1" row="2">
					<component type="calendar" name="dateFrom" field="#{form}.dateFrom" reference="dateFrom">
						<option type="labelWidth" value="50" />
						<option type="withTimePicker" value="true" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="3">
					<component type="calendar" name="dateTo" field="#{form}.dateTo" reference="dateTo">
						<option type="labelWidth" value="50" />
						<option type="withTimePicker" value="true" />
					</component>
				</layoutElement>
				<layoutElement column="1" row="4">
					<component type="time" name="realizationTime" field="#{form}.realizationTime" reference="realizationTime" />
				</layoutElement>
		</component>
	</windowTab>
</windowTabExtension>