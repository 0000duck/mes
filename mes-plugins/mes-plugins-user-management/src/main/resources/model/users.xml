<models plugin="users" xmlns="http://www.qcadoo.com/model">
	<model name="user">
		<string name="userName" >
			<validatesPresence />
			<validatesUniqueness />
			<validatesRegex regex="^[a-zA-Z0-9\\.]+$" message="users.validate.global.error.loginIllegalCharacters" />
		</string>
		<belongsTo name="userGroup" model="group" lazy="false">
			<validatesPresence />
		</belongsTo>
		<string name="email" />
		<string name="firstName" />
		<string name="lastName" />
		<string name="description" >
			<validatesLength max="255"/>
		</string>
		<string name="email" />
		<password name="password">
			<!-- TODO validatesPresenceOnCreate -->
			<validatesPresence />
		</password>
		<password name="passwordConfirmation" persistent="false">
			<!-- TODO validatesPresenceOnCreate -->
			<validatesPresence />
		</password>
		<password name="oldPassword" persistent="false" />
		<string name="viewIdentifier" persistent="false" />
		<validatesWith class="com.qcadoo.mes.users.UserService" method="checkPassword" />
		<toStringExpression expression="#userName"/>
	</model>
	<model name="group">
		<string name="name" readonly="true">
			<!-- TODO validatesPresenceOnCreate -->
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<string name="description" />
		<string name="role" readonly="true">
			<!-- TODO validatesPresenceOnCreate -->
			<validatesPresence />
		</string>
		<toStringExpression expression="#name"/>
	</model>
</models>
