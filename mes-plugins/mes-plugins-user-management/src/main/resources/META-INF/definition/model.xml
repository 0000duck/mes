<?xml version="1.0" encoding="UTF-8"?>
<qcd:plugin name="users" xmlns:qcd="http://www.qcadoo.com/">
	<model name="user">
		<string name="userName" >
			<validatesPresence />
			<validates_uniqueness />
		</string>
		<belongsTo name="group" model="group" lookupField="name">
			<validatesPresence />
		</belongsTo>
		<string name="email" />
		<string name="firstName" />
		<string name="lastName" />
		<text name="description" />
		<string name="email" />
		<password name="password">
			<validatesPresenceOnCreate />
		</password>
	</model>
	<model name="group">
		<string name="userName" readonly="true">
			<validatesPresenceOnCreate />
			<validatesUniqueness />
		</string>
		<text name="description" />
		<string name="role" readonly="true">
			<validatesPresenceOnCreate />
		</string>
	</model>
</qcd:plugin>