<qcd:views plugin="users" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="groups" model="group" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
			</ribbon>		
			<component type="grid" name="groups">
				<option type="column" name="name" fields="name" link="true"/>
				<option type="order" column="name" direction="asc"/>
				<option type="orderable" value="name,role" />
				<option type="order" column="name" direction="asc"/>
				<option type="searchable" value="name" />
				<option type="correspondingView" value="users/group" />
				<option type="correspondingComponent" value="form" />
				<option type="deletable" value="false" />
				<option type="creatable" value="false" />
				<option type="fullscreen" value="true" />
				<option type="multiselect" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="group" model="group">
		<component type="window" name="window">
			<ribbon>
				<group template="navigation"/>
				<group template="formSaveAction"/>
			</ribbon>		
			<component type="form" name="group" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="3">
					<layoutElement column="1" row="1">
						<component type="input" name="name" field="name" defaultEnabled="false"/>
					</layoutElement>
					<layoutElement column="1" row="2" height="2">
						<component type="textarea" name="description" field="description" />
					</layoutElement>
				</component>
				<option type="header" value="true"/>
				<option type="expression" value="#name"/>
			</component>
		</component>
	</view>
	<view name="users" model="user" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group template="gridNewAndRemoveAction"/>
			</ribbon>
			<component type="grid" name="users" reference="grid">
				<option type="column" name="login" fields="userName" link="true" />
				<option type="column" name="email" fields="email" />
				<option type="column" name="firstName" fields="firstName" link="true" />
				<option type="column" name="lastName" fields="lastName" link="true" />
				<option type="column" name="userGroup" fields="userGroup"
					expression="#userGroup['name']" />
				<option type="order" column="login" direction="asc"/>
				<option type="orderable" value="login,email,firstName,lastName,userGroup" />
				<option type="searchable" value="login,email,firstName,lastName,userGroup" />
				<option type="correspondingView" value="users/user" />
				<option type="correspondingComponent" value="form" />
				<option type="fullscreen" value="true" />
				<option type="multiselect" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="user" model="user">
		<component type="window" name="window">
			<ribbon>
				<group template="navigation"/>
				<group template="formSaveAndRemoveActions"/>
			</ribbon>
			<component type="form" name="user" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="10">
					<layoutElement column="1" row="1">
						<component type="input" name="login" field="userName" />
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="lookup" name="userGroup" field="userGroup">
							<option type="expression" value="#name" />
							<option type="fieldCode" value="name" />
						</component>
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="input" name="email" field="email" />
					</layoutElement>
					<layoutElement column="1" row="4">
						<component type="input" name="firstName" field="firstName" />
					</layoutElement>
					<layoutElement column="1" row="5">
						<component type="input" name="lastName" field="lastName" />
					</layoutElement>
					<layoutElement column="1" row="6" height="2">
						<component type="textarea" name="description" field="description" />
					</layoutElement>
					<layoutElement column="1" row="8">
						<component type="password" name="password" reference="passwordTextInput" field="password" />
					</layoutElement>
					<layoutElement column="1" row="9">
						<component type="password" name="passwordConfirmation" reference="passwordConfirmationTextInput" field="passwordConfirmation" />
					</layoutElement>
					<layoutElement column="1" row="10">
						<component type="button" name="changePasswordButton" reference="changePasswordButton" source="#{form}">
							<option type="correspondingView" value="users/userChangePassword" />
							<option type="correspondingComponent" value="form" />
						</component>
					</layoutElement>
				</component>
				<option type="header" value="true"/>
				<option type="expression" value="#userName"/>
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="hidePasswordOnUpdateForm" />
	</view>
	<view name="userChangePassword" model="user">
		<component type="window" name="window">
			<ribbon>
				<group template="navigation"/>
				<group template="formSaveAction"/>
			</ribbon>
			<component type="form" name="user" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="2">
					<layoutElement column="1" row="1">
						<component type="password" name="password" reference="passwordTextInput" field="password" />
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="password" name="passwordConfirmation" reference="passwordConfirmationTextInput" field="passwordConfirmation" />
					</layoutElement>
				</component>
				<component type="input" name="viewIdentifier" reference="viewIdentifierHiddenInput" field="viewIdentifier" defaultVisible="false"/>
				<option type="header" value="true"/>
				<option type="expression" value="#userName"/>
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="setPasswordAsRequired" />
	</view>
	<view name="profile" model="user">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{form}.performSave;" />
				</group>				
			</ribbon>
			<component type="form" name="user" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="8">
					<layoutElement column="1" row="1">
						<component type="input" name="login" field="userName" defaultEnabled="false" />
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="lookup" name="userGroup" field="userGroup" defaultEnabled="false" >
							<option type="expression" value="#name" />
							<option type="fieldCode" value="name" />
						</component>
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="input" name="email" field="email" />
					</layoutElement>
					<layoutElement column="1" row="4">
						<component type="input" name="firstName" field="firstName" />
					</layoutElement>
					<layoutElement column="1" row="5">
						<component type="input" name="lastName" field="lastName" />
					</layoutElement>
					<layoutElement column="1" row="6" height="2">
						<component type="textarea" name="description" field="description" />
					</layoutElement>
					<layoutElement column="1" row="8">
						<component type="button" name="changePasswordButton" reference="changePasswordButton" source="#{form}">
							<option type="correspondingView" value="users/profileChangePassword" />
							<option type="correspondingComponent" value="form" />
						</component>
					</layoutElement>
				</component>
				<option type="header" value="true" />
				<option type="expression" value="' '"/>
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="removeChangePasswordButtonWhenNotAllowed" />
	</view>
	<view name="profileChangePassword" model="user">
		<component type="window" name="window">
			<ribbon>
				<group template="navigation"/>
				<group template="formSaveAction"/>
			</ribbon>
			<component type="form" name="user" reference="form">
				<component type="gridLayout" name="gridLayout" columns="3" rows="3">
					<layoutElement column="1" row="1">
						<component type="password" name="oldPassword" reference="oldPasswordTextInput" field="oldPassword" />
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="password" name="password" reference="passwordTextInput" field="password" />
					</layoutElement>
					<layoutElement column="1" row="3">
						<component type="password" name="passwordConfirmation" reference="passwordConfirmationTextInput" field="passwordConfirmation" />
					</layoutElement>
				</component>
				<component type="input" name="viewIdentifier" reference="viewIdentifierHiddenInput" field="viewIdentifier" defaultVisible="false"/>
				<option type="header" value="true" />
				<option type="expression" value="' '"/>
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="setPasswordAndOldPasswordAdRequired" />
	</view>
</qcd:views>