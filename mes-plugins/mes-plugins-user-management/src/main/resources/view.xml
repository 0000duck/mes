<qcd:views plugin="users" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="groupGridView" model="group" menuAccessible="true">
		<component type="window" name="mainWindow">
			<ribbon>
			</ribbon>		
			<component type="grid" name="groups">
				<option type="column" name="name" fields="name" link="true"/>
				<option type="orderable" value="name,role" />
				<option type="correspondingView" value="users/groupDetailsView" />
				<option type="correspondingComponent" value="mainWindow.groupDetailsForm" />
				<option type="deletable" value="false" />
				<option type="creatable" value="false" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="backButton" value="false" />
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="groupDetailsView" model="group">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{mainWindow.groupDetailsForm}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{mainWindow.groupDetailsForm}.performSave; #{mainWindow}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png"
						action="#{mainWindow.groupDetailsForm}.performCancel;" />
				</group>
			</ribbon>		
			<component type="form" name="groupDetailsForm">
				<component type="input" name="name" field="name" defaultEnabled="false"/>
				<component type="textarea" name="description" field="description" /> 
				<option type="header" value="false" />
				<option type="expression" value="#name"/>
			</component>
		</component>
	</view>
	<view name="userGridView" model="user" menuAccessible="true">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png" action="#{mainWindow.users}.performNew;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{mainWindow.users}.performDelete;" />
				</group>
			</ribbon>
			<component type="grid" name="users">
				<option type="column" name="login" fields="userName" link="true" />
				<option type="column" name="email" fields="email" />
				<option type="column" name="firstName" fields="firstName" link="true" />
				<option type="column" name="lastName" fields="lastName" link="true" />
				<option type="column" name="userGroup" fields="userGroup"
					expression="#userGroup['name']" />
				<option type="orderable" value="userName,email,firstName,lastName,userGroup" />
				<option type="correspondingView" value="users/userDetailsView" />
				<option type="correspondingComponent" value="mainWindow.userDetailsForm" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="backButton" value="false" />
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="userDetailsView" model="user">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{mainWindow.userDetailsForm}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{mainWindow.userDetailsForm}.performSave; #{mainWindow}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png"
						action="#{mainWindow.userDetailsForm}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{mainWindow.userDetailsForm}.performDelete; #{mainWindow}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="userDetailsForm">
				<component type="input" name="login" field="userName" />
				<component type="lookup" name="userGroup" field="userGroup">
					<option type="searchable" value="name" />
					<option type="orderable" value="name" />
					<option type="fullscreen" value="true" />
					<option type="expression" value="#name" />
					<option type="fieldCode" value="name" />
				</component>
				<component type="input" name="email" field="email" />
				<component type="input" name="firstName" field="firstName" />
				<component type="input" name="lastName" field="lastName" />
				<component type="textarea" name="description" field="description" /> <!-- type:description -->
				<component type="password" name="password" field="password" />
				<component type="password" name="passwordConfirmation" field="passwordConfirmation" />
				<option type="header" value="false" />
				<option type="expression" value="#userName"/>
			</component>
			<component type="button" name="changePasswordButton" source="#{mainWindow.userDetailsForm}">
				<option type="url" value="users/userDetailsChangePasswordView.html" />
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="onUserDetailsViewView" />
	</view>
	<view name="userDetailsChangePasswordView" model="user">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{mainWindow.userDetailsForm}.performSave;" />
				</group>
			</ribbon>
			<component type="form" name="userDetailsForm">
				<component type="password" name="password" field="password" />
				<component type="password" name="passwordConfirmation" field="passwordConfirmation" />
				<component type="input" name="viewIdentifier" field="viewIdentifier" defaultVisible="false"/>
				<option type="header" value="false" />
				<option type="expression" value="#userName"/>
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="onUserDetailsChangePasswordView" />
	</view>
	<view name="userProfileView" model="user">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{mainWindow.userDetailsForm}.performSave;" />
				</group>
			</ribbon>
			<component type="form" name="userDetailsForm">
				<component type="input" name="login" field="userName" defaultEnabled="false" />
				<component type="lookup" name="userGroup" field="userGroup" defaultEnabled="false" >
					<option type="searchable" value="name" />
					<option type="orderable" value="name" />
					<option type="fullscreen" value="true" />
					<option type="expression" value="#name" />
					<option type="fieldCode" value="name" />
				</component>
				<component type="input" name="email" field="email" />
				<component type="input" name="firstName" field="firstName" />
				<component type="input" name="lastName" field="lastName" />
				<component type="textarea" name="description" field="description" /> <!-- type:description -->
				<option type="header" value="false" />
				<option type="expression" value="' '"/>
			</component>
			<component type="button" name="changePasswordButton" source="#{mainWindow.userDetailsForm}">
				<option type="url" value="users/userProfileChangePasswordView.html" />
			</component>
		</component>
	</view>
	<view name="userProfileChangePasswordView" model="user">
		<component type="window" name="mainWindow">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{mainWindow}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{mainWindow.userDetailsForm}.performSave;" />
				</group>
			</ribbon>
			<component type="form" name="userDetailsForm">
				<component type="password" name="oldPassword" field="oldPassword" />
				<component type="password" name="password" field="password" />
				<component type="password" name="passwordConfirmation" field="passwordConfirmation" />
				<component type="input" name="viewIdentifier" field="viewIdentifier" defaultVisible="false"/>
				<option type="header" value="false" />
				<option type="expression" value="' '"/>
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="onUserProfileChangePasswordView" />
	</view>
</qcd:views>