<qcd:views plugin="users" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="groups" model="group" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
			</ribbon>		
			<component type="grid" name="groups">
				<option type="column" name="name" fields="name" link="true"/>
				<option type="orderable" value="name,role" />
				<option type="correspondingView" value="users/group" />
				<option type="correspondingComponent" value="window.group" />
				<option type="deletable" value="false" />
				<option type="creatable" value="false" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="group" model="group">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.group}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.group}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png"
						action="#{window.group}.performCancel;" />
				</group>
			</ribbon>		
			<component type="form" name="group">
				<component type="input" name="name" field="name" defaultEnabled="false"/>
				<component type="textarea" name="description" field="description" /> 
				<option type="header" value="false" />
				<option type="expression" value="#name"/>
			</component>
		</component>
	</view>
	<view name="users" model="user" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png" action="#{window.users}.performNew;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.users}.performDelete;" />
				</group>
			</ribbon>
			<component type="grid" name="users">
				<option type="column" name="login" fields="userName" link="true" />
				<option type="column" name="email" fields="email" />
				<option type="column" name="firstName" fields="firstName" link="true" />
				<option type="column" name="lastName" fields="lastName" link="true" />
				<option type="column" name="userGroup" fields="userGroup"
					expression="#userGroup['name']" />
				<option type="orderable" value="userName,email,firstName,lastName,userGroup" />
				<option type="correspondingView" value="users/user" />
				<option type="correspondingComponent" value="window.user" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="user" model="user">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.user}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{window.user}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png"
						action="#{window.user}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{window.user}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="user">
				<component type="input" name="login" field="userName" />
				<component type="lookup" name="userGroup" field="userGroup">
					<option type="expression" value="#name" />
					<option type="fieldCode" value="name" />
				</component>
				<component type="input" name="email" field="email" />
				<component type="input" name="firstName" field="firstName" />
				<component type="input" name="lastName" field="lastName" />
				<component type="textarea" name="description" field="description" />
				<component type="password" name="password" field="password" />
				<component type="password" name="passwordConfirmation" field="passwordConfirmation" />
				<option type="header" value="false" />
				<option type="expression" value="#userName"/>
			</component>
			<component type="button" name="changePasswordButton" source="#{window.user}">
				<option type="url" value="users/userChangePassword.html" />
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="hidePasswordOnUpdateForm" />
	</view>
	<view name="userChangePassword" model="user">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.user}.performSave;" />
				</group>
			</ribbon>
			<component type="form" name="user">
				<component type="password" name="password" field="password" />
				<component type="password" name="passwordConfirmation" field="passwordConfirmation" />
				<component type="input" name="viewIdentifier" field="viewIdentifier" defaultVisible="false"/>
				<option type="header" value="false" />
				<option type="expression" value="#userName"/>
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="setPasswordAsRequired" />
	</view>
	<view name="profile" model="user">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.user}.performSave;" />
				</group>
			</ribbon>
			<component type="form" name="user">
				<component type="input" name="login" field="userName" defaultEnabled="false" />
				<component type="lookup" name="userGroup" field="userGroup" defaultEnabled="false" >
					<option type="expression" value="#name" />
					<option type="fieldCode" value="name" />
				</component>
				<component type="input" name="email" field="email" />
				<component type="input" name="firstName" field="firstName" />
				<component type="input" name="lastName" field="lastName" />
				<component type="textarea" name="description" field="description" />
				<option type="header" value="false" />
				<option type="expression" value="' '"/>
			</component>
			<component type="button" name="changePasswordButton" source="#{window.user}">
				<option type="url" value="users/profileChangePassword.html" />
			</component>
		</component>
	</view>
	<view name="profileChangePassword" model="user">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{window.user}.performSave;" />
				</group>
			</ribbon>
			<component type="form" name="user">
				<component type="password" name="oldPassword" field="oldPassword" />
				<component type="password" name="password" field="password" />
				<component type="password" name="passwordConfirmation" field="passwordConfirmation" />
				<component type="input" name="viewIdentifier" field="viewIdentifier" defaultVisible="false"/>
				<option type="header" value="false" />
				<option type="expression" value="' '"/>
			</component>
		</component>
		<preRenderHook bean="com.qcadoo.mes.users.UserService" method="setPasswordAndOldPasswordAdRequired" />
	</view>
</qcd:views>