<?xml version="1.0" encoding="UTF-8"?>
<qcd:models plugin="users" xmlns:qcd="http://www.qcadoo.com/model">
	<model name="user">
		<string name="userName" >
			<validatesPresence />
			<validatesUniqueness />
		</string>
		<belongsTo name="userGroup" model="group" lookupField="name" lazy="false">
			<validatesPresence />
		</belongsTo>
		<string name="email" />
		<string name="firstName" />
		<string name="lastName" />
		<text name="description" />
		<string name="email" />
		<password name="password">
			<validatesPresenceOnCreate />
		</password>
		<password name="passwordConfirmation" persistent="false">
			<validatesPresenceOnCreate />
		</password>
		<validatesWith bean="com.qcadoo.mes.users.UserService" method="checkPassword" />
	</model>
	<model name="group">
		<string name="name" readonly="true">
			<validatesPresenceOnCreate />
			<validatesUniqueness />
		</string>
		<text name="description" />
		<string name="role" readonly="true">
			<validatesPresenceOnCreate />
		</string>
	</model>
</qcd:models>