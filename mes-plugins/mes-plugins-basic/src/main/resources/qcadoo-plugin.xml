<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="basic" system="false" version="0.4.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Basic</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<modules>
		<localization:translation-group name="dashboard" prefix="core.dashboard" />

		<localization:translation path="locales" basename="basic"/>

		<model:model model="machine" resource="model/machine.xml" />
		<model:model model="staff" resource="model/staff.xml" />
		<model:model model="parameter" resource="model/parameter.xml" />

		<model:model model="product" resource="model/product.xml" />
		<model:model model="substitute" resource="model/substitute.xml" />
		<model:model model="substituteComponent" resource="model/substituteComponent.xml" />

		<model:dictionary name="categories" />
		<model:dictionary name="shifts" />
		<model:dictionary name="posts" />
		<model:dictionary name="units" />

		<menu:menu-category name="basic" />

		<menu:menu-item name="machines" category="basic" view="machines" />
		<menu:menu-item name="staff" category="basic" view="staffs" />
		<menu:menu-item name="products" category="basic" view="products" />
		<menu:menu-item-url name="systemParameters"
			category="basic" url="/parameter.html" />

		<view:view resource="view/basic.xml" />
		<view:view resource="view/products.xml" />
	</modules>

</plugin>