<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="basic" system="true" version="0.4.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd"
       >

	<information>
		<name>MES - Basic</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<modules>
		<localization:locale locale="en" label="English"/>
		<localization:locale locale="pl" label="Polski"/>
		
		<localization:group name="commons" prefix="commons" />
		<localization:group name="security" prefix="security" />
		<localization:group name="dashboard" prefix="core.dashboard" />

		<localization:translation path="locales"/>
	
		<model:model model="machine" resource="model/machine.xml" />
		<model:model model="staff" resource="model/staff.xml" />
		<model:model model="parameter" resource="model/parameter.xml" />

		<model:dictionary name="categories" />
		<model:dictionary name="shifts" />
		<model:dictionary name="posts" />
		<model:dictionary name="units" />

		<view:menu-category name="home" />
		<view:menu-category name="basic" />
		<view:menu-category name="administration" />
		<view:menu-category name="reports" />

		<view:menu-item-url name="home" category="home"
			url="/homePage.html" />
		<view:menu-item name="machines" category="basic" view="machines" />
		<view:menu-item name="staff" category="basic" view="staffs" />
		<view:menu-item-url name="systemParameters"
			category="basic" url="/parameter.html" />
		<view:menu-item-url name="systemInfo" category="administration"
			url="/systemInfo.html" />

		<view:view>
			<view:resource>view/basic.xml</view:resource>
		</view:view>

	</modules>

</plugin>