<?xml version="1.0" encoding="UTF-8"?>
<model name="position"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
    <fields>
        <belongsTo name="document" model="document" />
        <belongsTo name="product" model="product" plugin="basic"
                   required="true" />
        <decimal name="quantity" required="true" >
            <validatesRange from="0" exclusively="true"/>
        </decimal>
        <decimal name="price" default="0" />
        <string name="batch" />
        <string name="unit" persistent="false"/>
        <date name="productionDate" />
        <date name="expirationDate" />
        <priority name="number" scope="document"/>
    </fields>
    <hooks>
        <validatesWith class="com.qcadoo.mes.materialFlowResources.validators.PositionValidators" method="checkAttributesRequirement" />
        <validatesWith class="com.qcadoo.mes.materialFlowResources.validators.PositionValidators" method="validateDates" />
    </hooks>
</model>