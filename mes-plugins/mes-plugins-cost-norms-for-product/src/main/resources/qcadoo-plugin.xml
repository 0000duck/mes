<plugin plugin="costNormsForProduct" version="${qcadoo.plugin.version}"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report" xmlns:xi="http://www.w3.org/2001/XInclude"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/report
       http://schema.qcadoo.org/modules/report.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd" >

	<information>
		<name>MES - Cost Norms for Product</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

	<dependencies>
		<dependency>
			<plugin>productionScheduling</plugin>
			<version>[0.4.2</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />
	
		<model:model model="orderOperationProductInComponent" resource="model/orderOperationProductInComponent.xml" />
		
		<!-- product -->
		<model:model-field plugin="basic" model="product">
			<model:decimal name="costForNumber" default="1">
				<model:validatesRange from="0" exclusively="true" />
				<model:validatesUnscaledValue max="7" />
				<model:validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="basic" model="product">
			<model:decimal name="nominalCost" default="0">
				<model:validatesUnscaledValue max="7" />
				<model:validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="basic" model="product">
			<model:decimal name="lastPurchaseCost" default="0">
				<model:validatesUnscaledValue max="7" />
				<model:validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		<model:model-field plugin="basic" model="product">
			<model:decimal name="averageCost" default="0">
				<model:validatesUnscaledValue max="7" />
				<model:validatesScale max="3" />
			</model:decimal>
		</model:model-field>
		
		<!-- order -->
		<model:model-field plugin="orders" model="order">
			<model:hasMany name="orderOperationProductInComponents" plugin="costNormsForProduct" model="orderOperationProductInComponent" joinField="order" cascade="delete" copyable="true" />
		</model:model-field>
		
		<model:model-hook plugin="orders" model="order">
			<model:onSave class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService"
				method="fillOrderOperationProductsInComponents" />
		</model:model-hook>
				
		<view:resource uri="public/**/*" />
	
		<view:view resource="view/costNormsForProductsInTechnologyList.xml" />
		<view:view resource="view/costNormsForProductsInOrderList.xml" />
		<view:view resource="view/costNormsForProductsInOrderDetails.xml" />
		
		<view:view-tab resource="view/tabExtensions/productDetails.xml" />
		
		<view:view-ribbon-group resource="view/ribbonExtensions/technologyDetails.xml" />
		<view:view-ribbon-group resource="view/ribbonExtensions/orderDetails.xml" />
				
		<view:view-hook plugin="basic" view="productDetails"
			type="beforeRender" class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService"
			method="fillUnitFieldInProduct" />
		
		<view:view-hook plugin="basic" view="productDetails"
			type="beforeRender" class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService"
			method="fillCurrencyFieldsInProduct" />
			
		<view:view-hook plugin="basic" view="productDetails"
			type="beforeRender" class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService"
			method="enabledFieldForExternalID" />
		
		<view:view-hook plugin="orders" view="orderDetails"
			type="beforeRender" class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService"
			method="updateViewCostsButtonState" />
		
		<view:view-listener plugin="technologies" view="technologyDetails"
			component="form" event="save"
			class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService"
			method="checkTechnologyProductsInNorms" />
			
		<view:view-listener plugin="technologies" view="technologyDetails"
			component="form" event="showInputProductsCost"
			class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService"
			method="showInputProductsCostInTechnology" />
			
		<view:view-listener plugin="orders" view="orderDetails"
			component="form" event="showInputProductsCost"
			class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService"
			method="showInputProductsCostInOrder" />
	</modules>
</plugin>