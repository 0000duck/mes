	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xmlns:report="http://schema.qcadoo.org/modules/report"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xsi:schemaLocation="
       http://schema.qcadoo.org/plugin
       http://schema.qcadoo.org/plugin.xsd
       http://schema.qcadoo.org/modules/model
       http://schema.qcadoo.org/modules/model.xsd
       http://schema.qcadoo.org/modules/view
       http://schema.qcadoo.org/modules/view.xsd
       http://schema.qcadoo.org/modules/localization
       http://schema.qcadoo.org/modules/localization.xsd
       http://schema.qcadoo.org/modules/report
       http://schema.qcadoo.org/modules/report.xsd
       http://schema.qcadoo.org/modules/menu
       http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Cost Norms for Product</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>

    <dependencies>
        <dependency>
            <plugin>basic</plugin>
            <version>[0.4.1</version>
        </dependency>
        <dependency>
            <plugin>technolgies</plugin>
            <version>[0.4.1</version>
        </dependency>
        <dependency>
            <plugin>productionScheduling</plugin>
            <version>[0.4.2</version>
        </dependency>
    </dependencies>

	<modules>
		<localization:translation path="locales" />		
		<view:resource uri="public/**/*" />

        <view:view-tab resource="view/productDetails.xml" />
        <view:view-tab resource="view/operationProductInComponentDetails.xml" />
        <view:view-tab resource="view/orderOperationProductInComponentDetails.xml" />
        
        <view:view-hook plugin="basic" view="productDetails" type="beforeRender" 
            class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService" method="fillCostTabUnit" />
        
        <view:view-hook plugin="basic" view="productDetails" type="beforeRender" 
            class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService" method="fillCostTabCurrency" />
        
        <view:view-hook plugin="technologies" view="operationProductInComponentDetails" type="beforeRender" 
            class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService" method="fillCostTabUnit" />
            
        <view:view-hook plugin="technologies" view="operationProductInComponentDetails" type="beforeRender"
        	class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService" method="fillCostTabCurrency" /> 
        
        <view:view-hook plugin="productionScheduling" view="orderOperationProductInComponentDetails" type="beforeRender" 
            class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService" method="fillCostTabUnit" />
            
        <view:view-hook plugin="productionScheduling" view="orderOperationProductInComponentDetails" type="beforeRender"
        	class="com.qcadoo.mes.costNormsForProduct.CostNormsForProductService" method="fillCostTabCurrency" />
        
        <!-- product -->
        <model:model-field plugin="basic" model="product" >
            <model:integer name="costForNumber" default="1" >
                <validatesRange from="0" exclusively="true" />
                <validatesPrecision max="7" />
                <validatesScale max="0" />
            </model:integer>
        </model:model-field>
        <model:model-field plugin="basic" model="product" >
            <model:decimal name="nominalCost">
                <validatesRange from="0" exclusively="true" />
                <validatesPrecision max="7" />
                <validatesScale max="3" />
            </model:decimal>
        </model:model-field>
        <model:model-field plugin="basic" model="product" >
            <model:decimal name="lastPurchaseCost">
                <validatesRange from="0" exclusively="true" />
                <validatesPrecision max="7" />
                <validatesScale max="3" />
            </model:decimal>
        </model:model-field>
        <model:model-field plugin="basic" model="product" >
            <model:decimal name="averageCost">
                <validatesRange from="0" exclusively="true" />
                <validatesPrecision max="7" />
                <validatesScale max="3" />
            </model:decimal>
        </model:model-field>
        
        <!-- product - technology -->
        <model:model-field plugin="technologies" model="operationProductInComponent" >
            <model:integer name="costForNumber" default="1" >
                <validatesRange from="0" exclusively="true" />
                <validatesPrecision max="7" />
                <validatesScale max="0" />
            </model:integer>
        </model:model-field>
        <model:model-field plugin="technologies" model="operationProductInComponent" >
            <model:decimal name="nominalCost">
                <validatesRange from="0" exclusively="true" />
                <validatesPrecision max="7" />
                <validatesScale max="3" />
            </model:decimal>
        </model:model-field>
        <model:model-field plugin="technologies" model="operationProductInComponent" >
            <model:decimal name="lastPurchaseCost">
                <validatesRange from="0" exclusively="true" />
                <validatesPrecision max="7" />
                <validatesScale max="3" />
            </model:decimal>
        </model:model-field>
        <model:model-field plugin="technologies" model="operationProductInComponent" >
            <model:decimal name="averageCost">
                <validatesRange from="0" exclusively="true" />
                <validatesPrecision max="7" />
                <validatesScale max="3" />
            </model:decimal>
        </model:model-field>
        
