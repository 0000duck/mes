<qcd:views plugin="menu" xmlns:qcd="http://www.qcadoo.com/view">
	<view name="menuCategories" model="menuCategory" menuAccessible="true">
		<component type="window" name="window">
			<ribbon>
				<group name="actions">
					<bigButton name="new" icon="newIcon24.png" action="#{grid}.performNew;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{grid}.performDelete;" />
				</group>
			</ribbon>
			<component type="grid" name="menuCategories">
				<option type="column" name="categoryOrder" fields="categoryOrder" />
				<option type="column" name="name" fields="name" link="true" width="600" />
				<option type="column" name="active" fields="active" />
				<option type="orderable" value="name" />
				<option type="searchable" value="name" />
				<option type="correspondingView" value="menu/menuCategory" />
				<option type="correspondingComponent" value="form" />
				<option type="fullscreen" value="true" />
			</component>
			<option type="fixedHeight" value="true" />
			<option type="header" value="false" />
		</component>
	</view>
	<view name="menuCategory" model="menuCategory">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{form}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{form}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png"
						action="#{form}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{form}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="menuCategory">
				<component type="gridLayout" name="gridLayout" columns="3" rows="2">
					<layoutElement column="1" row="1">
						<component type="input" name="name" field="name" hasDescription="false" />
					</layoutElement>
					<layoutElement column="1" row="2">
						<component type="checkbox" name="active" field="active" defaultEnabled="true" />
					</layoutElement>
				</component>
				<option type="expression" value="#name" />
				<option type="header" value="false" />
			</component>
			<component type="grid" name="menuViewDefinitionItems" source="#{form}.viewDefinitionItems">
				<option type="column" name="itemOrder" fields="itemOrder" />
				<option type="column" name="name" fields="name" link="true" width="300" />
				<option type="column" name="active" fields="active" link="false" />
				<option type="correspondingView" value="menu/menuViewDefinitionItem" />
				<option type="correspondingComponent" value="form" />
				<option type="paginable" value="false" />
				<option type="height" value="200" />
				<option type="width" value="400" />
				<option type="creatable" value="true" />
				<option type="deletable" value="true" />
			</component>
		</component>
	</view>
	<view name="menuViewDefinitionItem" model="menuViewDefinitionItem">
		<component type="window" name="window">
			<ribbon>
				<group name="navigation">
					<bigButton name="back" icon="backIcon24.png" action="#{window}.performBack" />
				</group>
				<group name="actions">
					<bigButton name="save" icon="saveIcon24.png"
						action="#{form}.performSave;" />
					<bigButton name="saveBack" icon="saveBackIcon24.png"
						action="#{form}.performSave; #{window}.performBack" />
					<smallButton name="cancel" icon="cancelIcon16.png"
						action="#{form}.performCancel;" />
					<smallButton name="delete" icon="deleteIcon16.png"
						action="#{form}.performDelete; #{window}.performBack" />
				</group>
			</ribbon>
			<component type="form" name="menuViewDefinitionItem" reference="form">
				<component type="input" name="name" field="name" hasDescription="false" />
				<component type="lookup" name="viewDefinition" field="viewDefinition">
					<option type="column" name="pluginIdentifier" fields="pluginIdentifier" />
					<option type="searchable" value="pluginIdentifier" />
					<option type="orderable" value="pluginIdentifier" />
					<option type="expression" value="#menuName + ' (' + #pluginIdentifier + ')'"/>
					<option type="fieldCode" value="menuName" />
				</component>
				<component type="checkbox" name="active" field="active" />
				<option type="expression" value="#name + ' - ' + #menuCategory['name'] + '[' + #itemOrder + ']'" />
				<option type="header" value="false" />
			</component>
		</component>
	</view>
	
</qcd:views>