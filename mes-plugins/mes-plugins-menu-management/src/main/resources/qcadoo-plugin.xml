<?xml version="1.0" encoding="UTF-8"?>
<plugin plugin="menu" version="0.4.0" xmlns="http://www.qcadoo.com/plugin" xmlns:model="http://www.qcadoo.com/modules/model" xmlns:view="http://www.qcadoo.com/modules/view">

	<information>
		<name>Menu Management</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
	</information>
	
	<modules>
		<model:model model="category" resource="menu/model/category.xml" />
		<model:model model="item" resource="menu/model/item.xml" />
		<model:model model="view" resource="menu/model/view.xml" />

		<view:menu-item name="menu" category="administration" view="menuCategories" />

		<view:view>
			<resource>menu/view/menu.xml</resource>
		</view:view>
		
	</modules>

</plugin>